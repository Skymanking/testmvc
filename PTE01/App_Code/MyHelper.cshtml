@helper ViewTask(Model.View.TaskView4 item2, long? idtem)
{

    <li id="dong_@item2.ID">

        <div class="tooltipImage" style="background: url('@item2.ImageC');background-size: 35px;">
            <span>
                <img src="@item2.ImageC" style="width: 100px;">
                <p>@item2.CreateBy tạo ngày: @item2.CreateDate</p>
            </span>
        </div>
        <span class="badge badge-info"><i class="fa fa-clock-o"></i>@item2.Deadline.ToString("dd/MM/yyyy")</span>
        <a href="/Task/Edit2/@item2.ID">@item2.Subject</a>
        @if (item2.IDPar > 0)
        {<a href="/Task/Edit2/@item2.IDPar"><span class="badge badge-dark"><i class="fa fa-chain"></i>@item2.IDPar</span></a>}
        <span class="float-right" data-toggle="tooltip" id="themnvc_@item2.ID" data-idnv="@item2.ID" data-idnvb="@idtem" title="Thêm nhiệm vụ con">
            <i class="fa fa-plus-circle" style="font-size: 20px; color: red;" data-toggle="modal" data-target="#toolModal"></i>
        </span>
        <a class="float-right" href="/Task/Copy/@item2.ID" target="_blank" id="themnvc_@item2.ID" data-toggle="tooltip" title="Copy nhiệm vụ">
            <i class="fa fa-copy" style="font-size: 20px;color: #3F51B5;"></i>
        </a>
        <div class="progress progress-sm float-right" style="width: 100px; margin-top: 5px; margin-right: 10px;">
            @*<span class="badge bg-warning">@item2.Rate%</span>*@
            <div class="progress-bar bg-primary progress-bar-striped" role="progressbar"
                 aria-valuenow="@item2.Rate" aria-valuemin="0" aria-valuemax="100" style="width: @item2.Rate%">
            </div>
        </div>

        <div class="tooltipImage float-right" style="background: url('@item2.ImageO');background-size: 35px;">
            <span>
                <img src="@item2.ImageO" style="width: 100px;">
                <p>Owner: @item2.Owner</p>
            </span>
        </div>
        @*<span class="badge badge-dark float-right" data-toggle="tooltip" title="@item2.CreateBy tạo ngày: @item2.CreateDate"><i class="fa fa-user-secret"></i>  </span>*@
        @*@if (item2.FinishDate != null)
            {
                <span class="badge badge-success float-right"><i class="fa fa-calendar"></i>finish @item2.FinishDate.Value.ToString("dd/MM/yyyy") </span>
            }*@
    </li>
    <script>
        $(document).ready(function () {
            switch (@item2.Status) {
                case 0:
                    $('#dong_@item2.ID').css({ "background-color": "#fdb49d" });
                    break;
                case 1:
                    $('#dong_@item2.ID').css({ "background-color": "#fbf6cb" });
                    break;
                case 2:
                    $('#dong_@item2.ID').css({ "background-color": "#ceeefd" });
                    break;
                case 3:
                    $('#dong_@item2.ID').css({ "background-color": "#d6f7b1" });
                    break;
                case -1:
                    $('#dong_@item2.ID').css({ "background-color": "#9E9E9E" });
                    break;
                case -2:
                    $('#dong_@item2.ID').css({ "background-color": "#795548" });
                    break;
                case -3:
                    $('#dong_@item2.ID').css({ "background-color": "#edc2f9" });
                    break;

            }

            $("#themnvc_@item2.ID").click(function () {
                var abc = $(this).attr("data-idnv");
                var bcd = $(this).attr("data-idnvb");
                $('#IDKey').val(bcd);
                $('#IDPar').val(abc);
            });
        });
    </script>
}
