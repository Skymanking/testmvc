            break;
        case -2:
            mausac = "795548";
            break;
        case -3:
            mausac = "edc2f9";
            break;

    }
    <text>
        g.AddTaskItem(new JSGantt.TaskItem(@item.ID, '@temp @item.Subject', '@item.StartDate.Value.ToString("MM/dd/yyyy")', '@item.Deadline.ToString("MM/dd/yyyy")', '@mausac', '/Task/Edit2/@item.ID', 0, '@item.Owner', @item.Rate,0,@item.IDPar, 1 ));
