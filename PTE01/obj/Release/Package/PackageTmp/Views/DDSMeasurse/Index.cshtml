@model List<Model.EF.DDS_Measurse1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Kho</h3>
                <div class="card-tools">
                    <a href="/DDSMeasurse/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>

                    <div style="float:left">
                        @using (Html.BeginForm("Index", "DDSMeasurse", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="Warehouse">
                    <thead>
                        <tr>
                            <th style="width:70px">ID</th>
                            <th>Tên Measurse</th>
                            <th style="width:200px">DMS</th>
                            <th style="width:100px">Color</th>
                            <th style="width:100px">Trạng thái</th>
                            <th style="width:50px">Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.DMS</td>
                                <td style="text-align:center; background-color: @item.Color"></td>
                                <td>@item.Status</td>
                                <td><a href="/DDSMeasurse/Edit/@item.ID"><i class="fa fa-wrench"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

