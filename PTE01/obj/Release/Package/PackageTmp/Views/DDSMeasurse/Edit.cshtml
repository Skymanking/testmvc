@model Model.EF.DDS_Measurse

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListDDSDMS = (List<Model.View.Dropdownlist1>)ViewBag.DDSDMS;
    var DDSDMS = new List<SelectListItem>();
    DDSDMS.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn DMS",
    });
    foreach (var item in ListDDSDMS)
    {
        DDSDMS.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
        });
    }

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green',
        })
        $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
        })
        $(function () {

            $('.select2').select2()
        })
    </script>
}
<script src="~/Scripts/DDS.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Line</h3>
    </div>
    @using (Html.BeginForm("Edit", "DDSMeasurse", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên Measure</label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "Name", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">DMS</label>
                                @Html.DropDownListFor(model => model.IDDMS, DDSDMS, new { @ID = "DDSDMS", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label col-md-12">Color</label>
                                <input type="color" name="Color" value="@Model.Color" />
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label col-md-12">Status</label>
                                @Html.CheckBoxFor(model => model.Status, new { @class = "flat-red", @style = "text-align:center; vertical-align: middle;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Cập nhật" class="btn btn-primary" onclick="CheckCreate()" />
            </div>
        </div>
    }
</div>

