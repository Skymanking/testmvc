@model Model.EF.SNO_Machine

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListItem = (List<Model.View.Dropdownlist2>)ViewBag.Item;
    var Item = new List<SelectListItem>();
    Item.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn Item",
    });
    foreach (var item in ListItem)
    {
        Item.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }
    var ListMachine = (List<Model.EF.DDS_Line>)ViewBag.Machine;
    var Machine = new List<SelectListItem>();
    Item.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn Machine",
    });
    foreach (var item in ListMachine)
    {
        Machine.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID.ToString(),
        });
    }
}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(function () {
            $('.select2').select2()
        })
        function ItemChange(cus) {
            document.getElementById("ItemName").value = cus.options[cus.selectedIndex].text.split(":")[1];
        }
        function MachineChange(cus) {
            document.getElementById("MachineName").value = cus.options[cus.selectedIndex].text.split(":")[1];
        }
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Setup Machine</h3>
    </div>
    @using (Html.BeginForm("Create", "SNO_Machine", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label col-md-12">Máy</label>
                                @Html.DropDownListFor(model => model.MachineID, Machine, new { @ID = "MachineID", @class = "form-control select2", @required = true, @onChange = "MachineChange(this);" })
                                @Html.TextBoxFor(model => model.MachineName, new { @ID = "MachineName", @class = "form-control", @required = true, @style = "display: none;" })

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group ">
                                <label class="control-label col-md-12">Item</label>
                                @Html.DropDownListFor(model => model.Item, Item, new { @ID = "Item", @class = "form-control select2", @required = true, @onChange = "ItemChange(this);" })
                                @Html.TextBoxFor(model => model.ItemName, new { @ID = "ItemName", @class = "form-control", @required = true, @readonly = true, @style = "display: none;" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Cycle Time</label>
                                @Html.TextBoxFor(model => model.CycleTime, new { @ID = "CycleTime", @type = "number", @class = "form-control", @required = true, @min = 0 })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-12">Ghi chú</label>
                                @Html.TextAreaFor(model => model.Note, new { @ID = "Note", @class = "form-control", @rows = 3 })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </div>
    }
</div>



