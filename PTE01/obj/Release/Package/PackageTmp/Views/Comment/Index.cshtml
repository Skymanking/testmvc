@model PagedList.IPagedList<Model.View.CommentView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    bool coquyen = ViewBag.coquyen;
}
@if (coquyen)
{ 
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Phản Hồi / Góp Ý Của Nhân Viên Đến Ban Giám Đốc
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Comment", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit" style="padding-left:30px;padding-right:50px;"><i class="glyphicon glyphicon-search"></i> </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <a class="btn btn-primary" href="/Comment/Create">Thêm mới</a>                               
                            </div>
                        </div>
                    </div>

                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="60px">Số phiếu</th>
                                <th width="100px">Ngày tạo</th>
                                <th width ="50px">User</th>
                                <th>Thông tin người góp ý</th>
                                <th width="120px">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.CreateBy</td>
                                    <td>@item.Subject</td>
                                    <td>
                                        @Html.ActionLink("|Xem Chi Tiết|  ", "Edit", new { ID = item.ID })
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
}
else
{
    <div class="row">
        <div class="bgimg" style=" background-image: url('/Assets/dist/css/forestbridge.jpg'); height: 700px;  background-position: center;  background-size: cover;  position: relative; color: white;  font-family: 'courier new', courier, monospace;  font-size: 25px;">

            <div class="middle" style=" position: absolute;top: 50%; left: 50%; transform: translate(-50%, -50%);  text-align: center;">
                
                <h1>HỘP THƯ GÓP Ý PHẢN ÁNH</h1>
                <h4>Hộp thư dành cho tất cả công nhân viên PTE, về tất cả vấn đề trong nội bộ công ty. Hộp thư sẽ gửi trực tiếp đến BAN GIÁM ĐỐC để xử lý</h4>
                <a href="/Comment/Create" class="btn btn-success">Bắt Đầu</a>
                <hr>
            </div>

        </div>
    </div>

}