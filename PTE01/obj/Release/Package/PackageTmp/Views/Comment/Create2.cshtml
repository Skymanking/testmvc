@model Model.EF.Comment
@{
    ViewBag.Title = "Create2";
    Layout = "~/Views/Shared/_Theme2.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Thông tin góp ý đến Ban Giám Đốc</h1>
            </div><!-- /.col -->

        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @using (Html.BeginForm("Create2", "Comment", FormMethod.Post, new { @style = "width:100%" }))
            {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Thông tin góp ý đến Ban Giám Đốc</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form role="form">
                <div class="card-body">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Thông tin liên hệ</label>
                      @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", @placeholder = "họ tên + số điện thoại" })
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Nội Dung</label>
                      @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @placeholder = "chi tiết nội dung cần phản ánh / góp ý", @rows = "9" })
                  </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Lưu Lại</button>
                </div>
              </form>
            </div>
        
        <!--------------------------fd-------End------------------------------------>

        
            <br>
            <br>

            }
        </div>

    </div><!-- /.container-fluid -->
</section>

