@model Model.View.FullMeeting2

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    var nguoinhen = ViewBag.listUser;
    var listU = (IEnumerable<Model.View.UserView2>)ViewBag.listUser;
    var nguoinhan = new List<SelectListItem>();
    nguoinhan.Add(new SelectListItem
    {
        Text = "Chọn Người Tham Gia",
        Value = "none",
        Selected = true
    });
    var stt = 1;
    List<SelectListItem> phonghop = new List<SelectListItem>();
    phonghop.Add(new SelectListItem
         {
             Text = "Phòng họp 1 Xưởng 1",
             Value = "1",

         });
    phonghop.Add(new SelectListItem
         {
             Text = "Phòng họp 2 Xưởng 1",
             Value = "2",

         });
    phonghop.Add(new SelectListItem
    {
        Text = "Phòng họp 1 Xưởng 3",
        Value = "3",

    });


}

<div class="row">
    @using (Html.BeginForm("View", "Meeting", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thông Tin Chi Tiết Cuộc Họp
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <div class='col-md-4'>
                                    <label class="control-label">Phòng Họp</label>
                                    @Html.DropDownListFor(model => model.item.IDRoom, phonghop, new { @class = "form-control", })
                                    @Html.ValidationMessageFor(model => model.item.IDRoom, "", new { @class = "text-danger" })
                                </div>
                                <div class='col-md-4'>
                                    <div class="form-group">
                                        <label class="control-label">Ngày họp</label>
                                        <div class='input-group date' id='date'>
                                            @Html.TextBoxFor(model => model.date, new { @class = "form-control" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class='col-md-2'>
                                    <div class="form-group">
                                        <label class="control-label">Từ</label>
                                        <div class='input-group date' id='time1'>
                                            @Html.TextBoxFor(model => model.time1, new { @class = "form-control" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-time"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class='col-md-2'>
                                    <div class="form-group">
                                        <label class="control-label">Đến</label>
                                        <div class='input-group date' id='time2'>
                                            @Html.TextBoxFor(model => model.time2, new { @class = "form-control" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-time"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="form-group">
                                <div class='col-md-12'>
                                    <label class="control-label">Chủ đề họp</label>
                                    @Html.TextBoxFor(model => model.item.Reason, new { @class = "form-control", @placeholder = "điền vào chủ đề cuộc họp" })
                                    @Html.ValidationMessageFor(model => model.item.Reason, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class='col-md-12'>
                                    <label class="control-label">Nội dung họp</label>
                                    @Html.TextAreaFor(model => model.item.Details, new { @class = "form-control", @rows = "7", @placeholder = "điền vào nội dung chi tiết cuộc họp" })
                                    @Html.ValidationMessageFor(model => model.item.Details, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group" style="padding-top:20px;">
                                <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Tên thành viên tham gia họp</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.detail)
                                        {

                                            <tr id="row_0" class="clonedInput">
                                                <td width="80px">@(stt++)</td>
                                                <td> @item.FullName</td>
                                            </tr>

                                        }
                                    </tbody>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--------------------------fd-------End------------------------------------>


        <br>
        <br>

    }
</div>
<div class="form-group">
    <div class="col-md-4">
        <a class="btn btn-primary" href="~/Meeting/">Quay lại</a>
    </div>
</div>


<p></p>
<p></p>
<p></p>
<p></p>







<div class="col-md-12">

</div>


<script type="text/javascript">
    $(function () {
        $('#date').datetimepicker({
            format: 'MM/DD/YYYY'
        });

    });
    $(function () {
        $('#time1').datetimepicker({
            format: 'LT'
        });

    });
    $(function () {
        $('#time2').datetimepicker({
            format: 'LT'
        });

    });
</script>
