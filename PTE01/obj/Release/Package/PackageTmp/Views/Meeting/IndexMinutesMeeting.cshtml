@model PagedList.IPagedList<Model.EF.WorkPlan>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    var userLogin = (string)ViewBag.userLogin;
}
@section jsFooter
{
    <script src="/Scripts/ChangeStatusWorkPlan.js"></script>
<script src="/Scripts/ChangeConfirmWorkPlan.js"></script>
}


<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Biên Bản Họp
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("IndexMinutesMeeting", "Meeting", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="Tìm theo người thực hiện,chủ đề" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID / ID Họp</th>
                                <th>Ngày tạo / Người tạo</th>
                                <th>Noi Dung</th>
                                <th>DeadLine / Người Thực Hiện</th>
                                <th>Đã Thực Hiện</th>
                                <th>Xác Nhận</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">

                                    <td>@item.ID / @item.IDMeeting </td>
                                    <td>@item.CreateDate.ToString("MM/dd/yyyy") <br />@item.CreateBy</td>
                                    <td><strong>@item.Subject</strong> - <a href="~/Meeting/Edit/@item.IDMeeting">Xem nội dung họp</a><br />@item.Detail .</td>
                                    <td>@item.DeadLine.ToString("MM/dd/yyyy") <br />@item.ListUser </td>
                                    @if (userLogin == item.ListUser)
                                    {
                                        <td width="90px"><a href="#" class="btn-active" data-key="@item.ID">@Html.Raw(item.Finished ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</a></td>
                                    }
                                    else
                                    {
                                        <td width="90px"><p>@Html.Raw(item.Finished ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</p></td>
                                    }
                                    @if (userLogin == item.CreateBy)
                                    {
                                        <td width="60px"><a href="#" class="btn-confirm" data-key="@item.ID">@Html.Raw(item.Confirmed ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</a></td>

                                    }
                                    else
                                    {
                                        <td width="60px"><p>@Html.Raw(item.Confirmed ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</p></td>

                                    }
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
