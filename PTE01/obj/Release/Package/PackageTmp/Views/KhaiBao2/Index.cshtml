@model PagedList.IPagedList<Model.EFKBYT.KhaiBao2>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    int sumOnline = 1;
    string ngaythangnam = "INPUTDATA" + DateTime.Now.ToUniversalTime();
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Thông tin KBYT</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-file-excel-o"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/KhaiBao?searchString=cotrieuchung">Có Triệu Trứng</a>
                            <a class="dropdown-item" href="/KhaiBao?searchString=tiepxucgan">Tiếp xúc gần ca nghi nhiễm</a>
                            <a class="dropdown-item" href="/KhaiBao?searchString=thamgiatongiao">Tham gia hoạt động trên 10 người</a>
                            <span class="dropdown-item" onclick="exportTableToExcel('inputdata', '@ngaythangnam')">Export to Excel</span>
                        </div>
                    </div>

                    <div style="float:left">
                        @using (Html.BeginForm("Index", "KhaiBao2", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <script>
                function exportTableToExcel(tableID, filename) {
                    var downloadLink;
                    var dataType = 'application/vnd.ms-excel';
                    var tableSelect = document.getElementById(tableID);
                    var tableHTML = tableSelect.outerHTML.replace(/ /g, '%20');
                    filename = filename ? filename + '.xls' : 'excel_data.xls';
                    downloadLink = document.createElement("a");
                    document.body.appendChild(downloadLink);
                    if (navigator.msSaveOrOpenBlob) {
                        var blob = new Blob(['\ufeff', tableHTML], {
                            type: dataType
                        });
                        navigator.msSaveOrOpenBlob(blob, filename);
                    } else {
                        downloadLink.href = 'data:' + dataType + ', ' + tableHTML;
                        downloadLink.download = filename;
                        downloadLink.click();
                    }
                }
            </script>
            <!-- /.panel-heading -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="inputdata">
                        <thead>
                            <tr>
                                <th style=" width: 70px;">Mã NV</th>
                                <th>Họ Tên</th>
                                <th style=" width: 150px;">Thời gian khai báo</th>
                                <th style=" width: 90px;">Vùng</th>
                                <th>Dịch tể 1</th>
                                <th>Dịch tể 2</th>
                                <th>Dịch tể 3</th>
                                <th>Dịch tể 4</th>
                                <th>Dịch tể 5</th>
                                <th>Địa chỉ</th>
                                @*<th style=" width: 30px;">Xem</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.PerID</td>
                                    <td>@item.Name</td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>


                                    @if (item.int1 == 1)
                                    {
                                        <td style="background-color:green; color:white">XANH</td>
                                    }
                                    else
                                    {
                                        if (item.int1 == 2)
                                        {
                                            <td style="background-color:yellow; color:white">VÀNG</td>
                                        }
                                        else
                                        {
                                            if (item.int1 == 3)
                                            {
                                                <td style="background-color:orange; color:white">CAM</td>
                                            }
                                            else
                                            {
                                                if (item.int1 == 4)
                                                {
                                                    <td style="background-color:red; color:white">ĐỎ</td>
                                                }
                                                else
                                                {
                                                    if (item.int1 == 5)
                                                    {
                                                        <td style="background-color:green; color:white">AN TOÀN</td>
                                                    }
                                                    else
                                                    {
                                                        if (item.int1 == 6)
                                                        {
                                                            <td style="background-color:red; color:white">CÁCH LY</td>
                                                        }
                                                        else
                                                        {
                                                            <td style="background-color:red; color:white">CHƯA KHAI BÁO</td>
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                    @if (item.bool1 == true)
                                    {
                                        <td style="color:red"> X</td>}
                                    else
                                    {
                                        <td></td>}
                                    @if (item.bool2 == true)
                                    {
                                        <td style="color:red"> X</td>}
                                    else
                                    {
                                        <td></td>}
                                    @if (item.bool3 == true)
                                    {
                                        <td style="color:red"> X</td>}
                                    else
                                    {
                                        <td></td>}
                                    @if (item.bool4 == true)
                                    {
                                        <td style="color:red"> X</td>}
                                    else
                                    {
                                        <td></td>}
                                    @if (item.bool5 == true)
                                    {
                                        <td style="color:red"> X</td>}
                                    else
                                    {
                                        <td></td>}

                                    <td>@item.Address</td>


                                    @*<td><a href="/KhaiBao/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a></td>*@
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="card-footer clearfix">
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>

    </div>
</div>
