@model PagedList.IPagedList<Model.View.DisciplinedView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Kỷ luật</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            More
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/Disciplined/">Danh sách</a>   
                            <a class="dropdown-item" href="/Disciplined/Report1?year=@DateTime.Now.Year&month=@DateTime.Now.AddMonths(-1).Month">Thống kê theo BP</a>         
                        </div>
                    </div>
                    <a class="btn btn-warning float-right" href="/Disciplined/Create"><i class="fa fa-plus" style="font-size:24px;"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "Disciplined", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Tên Nhân Viên</th>
                                <th>Phòng Ban</th>
                                <th>Loại Kỷ Luật</th>
                                <th>Ngày vi phạm</th>
                                <th>Xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                    <tr>
                                        <td>@item.PerID</td>
                                        <td>@item.PerName</td>
                                        <td>@item.Depname</td>
                                        <td>
                                            @switch(@item.Decision)
                                            {
                                                case "muc1": <span>Khiển trách</span> break;
                                                case "muc2": <span>Kéo dài thời hạn nâng lương</span> break;
                                                case "muc3": <span>Sa thải</span> break;
                                                case "muc4": <span>Khác</span> break;
                                            }
                                        </td>
                                        <td>@item.ViolationDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a href="/Disciplined/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a>
                                        </td>
                                    </tr>                               
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Disciplined/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>


