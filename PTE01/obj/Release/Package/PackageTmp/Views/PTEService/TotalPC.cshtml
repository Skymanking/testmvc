<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<div class="row">

    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Thông tin thiết bị</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="row">
                        @using (Html.BeginForm("Edit", "Device", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="row">

                                    <div class='col-md-4'>
                                        <label class="control-label">Tên Thiết Bị</label>
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Model</label>
                                        @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Loại Thiết Bị</label>
                                        @Html.DropDownListFor(model => model.Type, null, new { @class = "form-control select2", @style = "width: 100%;" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Xưởng</label>
                                        @Html.DropDownListFor(model => model.Location, phanxuong, new { @class = "form-control select2", @style = "width: 100%;" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Tình trạng</label>
                                        @Html.DropDownListFor(model => model.Status, tinhtrang, new { @class = "form-control select2", @style = "width: 100%;" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Nhà SX</label>
                                        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Owner</label>
                                        @Html.TextBoxFor(model => model.PerID, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Mã Vật Tư</label>
                                        @Html.TextBoxFor(model => model.ItemCode, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-3'>
                                        <label class="control-label">Nhóm Thiết Bị</label>
                                        @Html.TextBoxFor(model => model.GroupDevice, new { @class = "form-control" })
                                    </div>

                                    <div class='col-md-3'>
                                        <label>Ngày Mua</label>
                                        <div class="input-group mb-3">
                                            <input autocomplete="off" class="date1 form-control" id="DateofPur" name="DateofPur" type="text" value="@if (@Model.DateofPur != null){@Model.DateofPur.Value.ToString("MM/dd/yyyy")}">
                                            <div class=" input-group-append">
                                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class='col-md-4'>
                                        <label class="control-label">QRCode</label>
                                        @Html.TextBoxFor(model => model.QRCode, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-4'>
                                        <label class="control-label">SerialCode1</label>
                                        @Html.TextBoxFor(model => model.SerialCode1, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-4'>
                                        <label class="control-label">SerialCode2</label>
                                        @Html.TextBoxFor(model => model.SerialCode2, new { @class = "form-control" })
                                    </div>

                                </div>
                                <div class="row">
                                    <div class='col-md-4'>
                                        <label class="control-label">Thông tin kỹ thuật</label>
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "8" })
                                    </div>
                                    <div class='col-md-4'>
                                        <label class="control-label">Thay đổi phần cứng</label>
                                        <textarea class="form-control" rows="8">@inforchangePC</textarea>
                                    </div>
                                    <div class='col-md-4'>
                                        <label class="control-label">Thay đổi phần mềm</label>
                                        <textarea class="form-control" rows="8">@inforchangeApp</textarea>
                                    </div>
                                    <div class='col-md-12'>
                                        <label class="control-label">Ghi chú</label>
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @rows = "8" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">

    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Thông tin bàn giao</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    @if (infohand != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã NV</th>
                                        <th>Tên Nhân Viên</th>
                                        <th>Ngày BG</th>
                                        <th>Thông tin thiết bị</th>
                                        <th style="width:50px">Print</th>
                                        <th style="width:50px">Status</th>
                                        <th style="width:50px">Xem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in infohand)
                                    {
                                        <tr>
                                            <td>
                                                @item.PerID @if (item.StatusPer == false)
                                                {<i class="fa fa-user-times" style="color:red;font-size:26px"></i> }
                                            </td>
                                            <td>@item.PerName</td>
                                            <td>@item.DeliveryDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.DeviceName-@item.Model - @item.SerialCode1,@item.SerialCode2</td>
                                            <td>
                                                <a href="/DeviceHandover/Print/@item.ID" style="color: #444"><span class='fa fa-print' style="font-size: 28px;"></span></a>
                                            </td>
                                            <td>
                                                <a class="btn-status" data-id="@item.ID" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                                                    @Html.Raw(item.Status ? "<span class='fa fa-check-circle-o fa-2x'style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/DeviceHandover/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
