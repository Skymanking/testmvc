@model Model.EF.Device
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var infohand = (List<Model.View.DeviceHandover1>)ViewBag.infohandover;
    var inforchangePC = ViewBag.inforchangePC;
    var inforchangeApp = ViewBag.inforchangeApp;

    List<SelectListItem> phanxuong = new List<SelectListItem>();
    phanxuong.Add(new SelectListItem
         {
             Text = "Xưởng 1",
             Value = "X1",
             Selected = true
         });

    phanxuong.Add(new SelectListItem
         {
             Text = "Xưởng 2",
             Value = "X2",

         });
    phanxuong.Add(new SelectListItem
    {
        Text = "Xưởng 3",
        Value = "X3",
    });

    List<SelectListItem> tinhtrang = new List<SelectListItem>();
    tinhtrang.Add(new SelectListItem
         {
             Text = "Tốt > 80%",
             Value = "3",
             Selected = true
         });
    tinhtrang.Add(new SelectListItem
    {
        Text = "Khá 60%-80%",
        Value = "2",
    });
    tinhtrang.Add(new SelectListItem
    {
        Text = "Tệ nên thay 30%-60%",
        Value = "1",
    });

    tinhtrang.Add(new SelectListItem
         {
             Text = "Hư hỏng <30%",
             Value = "0",
         });

}
@section jsFooter
{
    <script src="/Scripts/ChangeStatusDeviceHandOver.js"></script>
    <script>
        $(function () {
            $('.select2').select2()
            $(".date1").datepicker(
                {
                    dateFormat: 'mm/dd/yy',
                    changeMonth: true,
                    changeYear: true,
                    numberOfYears: 1,
                    numberOfMonths: 1,
                    yearRange: "-90:+10",
                    onSelect: function (selectedDate) {
                    }
                });
            $(".date2").datepicker();
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            //Money Euro
            $('[data-mask]').inputmask()
        })
    </script>
}

