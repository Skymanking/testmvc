@model PagedList.IPagedList<Model.View.Device1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.View.UserView2> listPer = ViewBag.listPer;
}
@section jsFooter
{
    <script src="/Scripts/AddHandover.js"></script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script>
    $(function () {
        $(".date").datepicker();
        $('.select2').select2()
    })
</script>
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Thiết Bị</h3>

                <div class="card-tools">

                    <div class="btn-group" style="height:37px;margin-top:-20px;">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-external-link"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/Device/Index" style="color:black;" class="dropdown-item">DS Thiết bị</a>
                            <a href="/DeviceHandover/Index" style="color:black;" class="dropdown-item">DS Bàn Giao Thiết bị</a>
                            <a href="/DeviceFix/Index" style="color:black;" class="dropdown-item">DS Sửa Chữa Thiết bị</a>
                            <a href="/Device/ToolPrintCard" style="color:black;" class="dropdown-item">In Tem Thiết bị</a>
                            <a href="/Device/Report1" style="color:black;" class="dropdown-item">Report1</a>
                        </div>
                    </div>
                    <a href="/Device/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "Device", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Model</th>
                                <th>Loại</th>
                                <th>Vị trí</th>
                                <th>Ngày mua</th>
                                <th>Tình trạng</th>
                                <th>Serialnumber</th>
                                <th style="width:50px">Bảo trì</th>
                                <th style="width:50px">Chỉnh Sửa</th>
                                <th style="width:50px">Xem</th>
                                <th style="width:50px">Bàn giao</th>
                                <th style="width:50px">Sửa chữa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Model</td>
                                    <td>@item.Type</td>
                                    <td>@item.ItemCode</td>
                                    <td>
                                        @if (item.DateofPur != null)
                                        { <span>@item.DateofPur.Value.ToString("dd/MM/yyyy")</span>}
                                    </td>
                                    @*<td>*@
                                        @if (@item.Status == "3")
                                        {
                                            <td style="background: #28a745;">Tốt > 80%</td> }
                                        else
                                        {
                                            if (@item.Status == "2")
                                            {
                                                <td style="background: #c5fbd1;">Khá 60%-80%</td> }
                                            else
                                            {
                                                if (@item.Status == "1")
                                                {
                                                    <td style="background: #ffc107;">Tệ nên thay 30%-60%</td> }
                                                else
                                                {
                                                    if (@item.Status == "0")
                                                    {
                                                        <td style="background: #dc3545;">Hư hỏng < 30%</td> }
                                                    else
                                                    {
                                                        <td> </td>  }

                                                }

                                            }
                                        }
                                    @*</td>*@

                                    <td>@item.SerialCode1,@item.SerialCode2</td>
                                    <td>
                                        <a href="/CMMSCategory/Edit/@item.ID"><span class='fa fa-bars' style="font-size: 22px;"></span></a>
                                    </td>                                    
                                    <td>
                                        <a href="/Device/Edit/@item.ID"><span class='fa fa-pencil' style="font-size: 22px;"></span></a>
                                    </td>
                                    <td>
                                        <a href="/Device/CheckInfo/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a>
                                    </td>
                                    <td><a title="Thêm mới!" class="float-right" id="bgdev_@item.ID" data-toggle="modal" data-iddev="@item.ID" data-target="#toolModal"><i class="fa fa-user-plus" style="color: red; font-size: 28px"></i></a></td>
                                    <td>
                                        <a href="/DeviceFix/Create1/@item.ID"><span class='fa fa-wrench' style="font-size: 22px;"></span></a>
                                    </td>
                                 </tr>
                                <script>
                                    $(document).ready(function () {
                                        $("#bgdev_@item.ID").click(function () {
                                            $('#addHandover').attr("data-iddevs", $("#bgdev_@item.ID").attr("data-iddev"));
                                        });
                                    })
                                </script>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Device/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
            <!-- /.panel-body -->
        </div>

    </div>
</div>

<!--------------------------Modal Add Công Cụ Dụng Cụ ------------------------------->
<form id="myForm" method="post">
    <div class="modal fade" id="toolModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <span class="float-right">
                        <button type="button" class="close" data-dismiss="modal" style="width:20px">&times;</button>
                    </span>
                    <h4 class="modal-title">Bàn giao thiết bị</h4>
                </div>
                <div class="modal-body">
                    <div class="row">


                        <div class=" col-md-12">
                            <label class="control-label">Chọn nhân viên</label>
                            <select class="form-control select2" id="idpers" name="idpers">
                                @foreach (var item in listPer)
                                {
                                    <option value="@item.UserName">
                                        @item.FullName
                                    </option>
                                }

                            </select>

                        </div>
                        <div class='col-md-6'>
                            <label class="control-label">Ngày</label>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control date" id="dates" name="dates">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class='col-md-6'>
                            <label class="control-label">Lý do</label>
                            <input class="form-control" data-val="true" id="reasons" name="reasons" type="text">
                        </div>

                    </div>
                    <div class='col-md-12'>
                        <label class="control-label">Ghi chú</label>
                        <textarea class="form-control" id="notes" name="notes" rows="2"></textarea>
                    </div>

                </div>
                <div class="modal-footer">
                    <a href="#" id="addHandover" class="btn-addtool" style="background: red; padding: 7px;  color: white;">Lưu thông tin</a>
                </div>
            </div>
        </div>
    </div>
</form>
<!--------------------------Modal Add Công Cụ Dụng Cụ ------------------------------->


<script>
    $(document).ready(function () {

        ///////////////////////////////////////
        ////////////// Add Tool ////////////

        $("#idpers").blur(function () {
            $('#addHandover').attr("data-idpers", $('#idpers').val());
        });
        $("#dates").blur(function () {
            $('#addHandover').attr("data-dates", $('#dates').val());
        });
        $("#reasons").blur(function () {
            $('#addHandover').attr("data-reasons", $('#reasons').val());
        });
        $("#notes").blur(function () {
            $('#addHandover').attr("data-notes", $('#notes').val());
        });

        $("#addHandover").hover(function () {
            $('#addHandover').attr("data-idpers", $('#idpers').val());
            $('#addHandover').attr("data-dates", $('#dates').val());
            $('#addHandover').attr("data-reasons", $('#reasons').val());
            $('#addHandover').attr("data-notes", $('#notes').val());
        });

        ///////////////////////////////////////
    })
</script>