@model Model.EF.Device
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<SelectListItem> phanxuong = new List<SelectListItem>();
    phanxuong.Add(new SelectListItem
         {
             Text = "Xưởng 1",
             Value = "X1",
             Selected = true
         });

    phanxuong.Add(new SelectListItem
         {
             Text = "Xưởng 2",
             Value = "X2",

         });
    phanxuong.Add(new SelectListItem
    {
        Text = "Xưởng 3",
        Value = "X3",
    });

    List<SelectListItem> tinhtrang = new List<SelectListItem>();
    tinhtrang.Add(new SelectListItem
    {
        Text = "Tốt > 80%",
        Value = "3",
        Selected = true
    });
    tinhtrang.Add(new SelectListItem
    {
        Text = "Khá 60%-80%",
        Value = "2",
    });
    tinhtrang.Add(new SelectListItem
    {
        Text = "Tệ nên thay 30%-60%",
        Value = "1",
    });

    tinhtrang.Add(new SelectListItem
    {
        Text = "Hư hỏng <30%",
        Value = "0",
    });

}
@section jsFooter
{
    <script>
        $(function () {
            $('.select2').select2()
            $(".date1").datepicker(
                {
                    dateFormat: 'mm/dd/yy',
                    changeMonth: true,
                    changeYear: true,
                    numberOfYears: 1,
                    numberOfMonths: 1,
                    yearRange: "-90:+10",
                    onSelect: function (selectedDate) {
                    }
                });
            $(".date2").datepicker();
            $('#datemask2').inputmask('mm/dd/yyyy', { 'placeholder': 'mm/dd/yyyy' })
            //Money Euro
            $('[data-mask]').inputmask()
        })
    </script>
}
<style>
    input, label {
        vertical-align: middle;
    }

    .qrcode-text {
        padding-right: 1.7em;
        margin-right: 0;
        width: 95%;
    }

    .qrcode-text-btn {
        display: inline-block;
        background: url(/Assets/theme3/dist/img/qr_icon.svg) 50% 50% no-repeat;
        height: 20px;
        width: 20px;
        margin-left: -40px;
        margin-top: 10px;
        cursor: pointer;
    }

        .qrcode-text-btn > input[type=file] {
            position: absolute;
            overflow: hidden;
            width: 1px;
            height: 1px;
            opacity: 0;
        }
</style>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/instascan.min.js"></script>
<script>
    $(document).ready(function () {
        $(window).keydown(function (event) {
            if (event.keyCode == 13) {
                event.preventDefault();
                return false;
            }
        });
    });
</script>

<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<div class="row">

    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Thông tin thiết bị</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="row">
                        @using (Html.BeginForm("Create", "Device", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="col-md-12">
                                <div class="row">

                                    <div class='col-md-4'>
                                        <label class="control-label">Tên Thiết Bị</label>
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Model</label>
                                        @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Loại Thiết Bị</label>
                                        @Html.DropDownListFor(model => model.Type, null, new { @class = "form-control select2", @style = "width: 100%;" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Xưởng</label>
                                        @Html.DropDownListFor(model => model.Location, phanxuong, new { @class = "form-control select2", @style = "width: 100%;" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Tình trạng</label>
                                        @Html.DropDownListFor(model => model.Status, tinhtrang, new { @class = "form-control select2", @style = "width: 100%;" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Nhà SX</label>
                                        @Html.TextBoxFor(model => model.Manufacturer, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Owner</label>
                                        @Html.TextBoxFor(model => model.PerID, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-2'>
                                        <label class="control-label">Vị trí</label>
                                        @Html.TextBoxFor(model => model.ItemCode, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-3'>
                                        <label class="control-label">Mục Đích SD</label>
                                        @Html.TextBoxFor(model => model.GroupDevice, new { @class = "form-control" })
                                    </div>

                                    <div class='col-md-3'>
                                        <label>Ngày Mua</label>
                                        <div class="input-group mb-3">
                                            <input autocomplete="off" class="date1 form-control" id="StartDate" name="DateofPur" type="text" value="">
                                            <div class=" input-group-append">
                                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class='col-md-4'>
                                        <label class="control-label">QRCode</label>
                                        <div style="display: flex;">
                                            <input id="QRCode" name="QRCode" type=text size=16 placeholder="Quét thiết bị có dán QR Code-->" class="qrcode-text form-control">
                                            <label class=qrcode-text-btn>
                                                <input type=file accept=" image />*" capture=environment onchange="openQRCamera(this);" tabindex=-1>
                                            </label>
                                        </div>
                                        @*@Html.TextBoxFor(model => model.QRCode, new { @class = "form-control" })*@
                                    </div>
                                    <div class='col-md-4'>
                                        <label class="control-label">SerialCode1</label>
                                        @Html.TextBoxFor(model => model.SerialCode1, new { @class = "form-control" })
                                    </div>
                                    <div class='col-md-4'>
                                        <label class="control-label">SerialCode2</label>
                                        @Html.TextBoxFor(model => model.SerialCode2, new { @class = "form-control" })
                                    </div>

                                </div>
                                <div class="row">
                                    <div class='col-md-8'>
                                        <label class="control-label">Thông tin kỹ thuật</label>
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "12" })
                                    </div>

                                    <div class='col-md-4'>
                                        <label class="control-label">Ghi chú</label>
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @rows = "12" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

