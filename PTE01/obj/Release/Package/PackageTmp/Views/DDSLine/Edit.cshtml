@model Model.EF.DDS_Line

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListFactory = (List<Model.View.Dropdownlist2>)ViewBag.Factory;
    var Factory = new List<SelectListItem>();
    Factory.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn xưởng",
    });
    foreach (var item in ListFactory)
    {
        Factory.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green',
        })
        $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
        })
        $("#start").datepicker();
    </script>
}
<script src="~/Scripts/DDS.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Line</h3>
    </div>
    @using (Html.BeginForm("Edit", "DDSLine", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên Line</label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "Name", @class = "form-control select2", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Xưởng</label>
                                <select class="form-control" name="Factory" id="Factory">
                                    @foreach (var item in Factory)
                                    {
                                        if (item.Value == Model.Factory)
                                        {
                                            <option selected value="@item.Value">@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label col-md-12">Status</label>
                                @Html.CheckBoxFor(model => model.Status, new { @class = "flat-red", @style = "text-align:center; vertical-align: middle;" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Update" class="btn btn-primary" onclick="CheckCreate()" />
            </div>
        </div>
    }
</div>

