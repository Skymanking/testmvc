@model Model.EF.DDS_Line

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListFactory = (List<Model.View.Dropdownlist2>)ViewBag.Factory;
    var Factory = new List<SelectListItem>();
    Factory.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn xưởng",
    });
    foreach (var item in ListFactory)
    {
        Factory.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
}
<script src="~/Scripts/DDS.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Line</h3>
    </div>
    @using (Html.BeginForm("Create", "DDSLine", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên Line</label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "Name", @class = "form-control select2", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Xưởng</label>
                                @Html.DropDownListFor(model => model.Factory, Factory, new { @ID = "Factory", @class = "form-control select2" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" onclick="CheckCreate()" />
            </div>
        </div>
    }
</div>

