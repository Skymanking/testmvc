@model Model.EF.AppsUsed1

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listU = (List<Model.EF.UserViewInforUser>)ViewBag.listUser;
    List<SelectListItem> AppType = new List<SelectListItem>();
    AppType.Add(new SelectListItem
    {
        Text = "Miễn phí",
        Value = "false",
    });
    AppType.Add(new SelectListItem
    {
        Text = "Trả phí",
        Value = "true",
    });
    string[] InstalledName = Model.InstalledName.Split(',');
    string[] StaffUse = null;
    if (!string.IsNullOrEmpty(Model.StaffUse))
    {
        StaffUse = Model.StaffUse.Split(',');
    }

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Sửa App</h3>
    </div>
    @using (Html.BeginForm("Edit", "AppsUsed", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label col-md-12">STT<span style="font-weight:bold;color:red">*</span></label>
                        @Html.TextBoxFor(model => model.ID, new { @ID = "IDAPP", @class = "form-control", @readonly = true })
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="form-group">
                        <label class="control-label col-md-12">Tên App<span style="font-weight:bold;color:red">*</span></label>
                        @Html.TextBoxFor(model => model.App, new { @ID = "CustomerName", @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group">
                        <label class="control-label col-md-12">Nhà cung cấp<span style="font-weight:bold;color:red">*</span></label>
                        @Html.TextBoxFor(model => model.NCC, new { @ID = "NCC", @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-12">Loại App<span style="font-weight:bold;color:red">*</span></label>
                        @Html.DropDownListFor(model => model.Type, AppType, new { @ID = "Type", @class = "form-control select2" })
                    </div>
                </div>
                <div class="table-responsive ">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th width="30px"><input type="checkbox" class="checkall"></th>
                                <th>Mã nhân viên</th>
                                <th>Tên nhân viên</th>
                                <th>Bộ phận</th>
                                <th>Chức vụ</th>
                                <th>Install</th>
                            </tr>
                        </thead>
                        <tbody class="parent">

                            @foreach (var item in listU)
                            {
                            <tr>
                                <td>
                                    <input type="checkbox" id="B_@item.UserName" class="abc" name='@item.UserName'>
                                </td>
                                <td>@item.UserName</td>
                                <td>@item.FullName</td>
                                <td>@item.Deparment</td>
                                <td>@item.Position</td>
                                <td>
                                    @foreach (var name in InstalledName)
                                    {
                                        if (name == item.UserName)
                                        {
                                            <i class="fa fa-wrench" style="color:red;font-size:26px"></i>
                                            foreach (var userstaff in StaffUse)
                                            {
                                                if (userstaff == item.UserName)
                                                {
                                                    <i class="fa fa-check-circle-o" style="color:blue;font-size:26px"></i>

                                                }
                                            }

                                        }
                                    }

                                </td>
                                </tr>
                                if (Model.StaffUse != null)
                                {
                                    if (Model.StaffUse.Contains(item.UserName))
                                    {
                                        <script>
                                        $('#B_@item.UserName').prop('checked', 'checked');
                                        </script>

                                    }
                                }
                            }


                        </tbody>
                        <tr>
                            <td colspan="4"></td>
                        </tr>
                    </table>
                    <div class="datcom" >
                        <button type="submit" class="btn btn-primary" id="luulai">Lưu thông tin</button>
                        <span id="fileinput" style="display:none"></span>

                    </div>
                </div>

            </div>
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        $(".abc").change(function () {
            GetValueModel();
        });
        $(".checkall").change(function () {

            if ($('.checkall:checked').val() != undefined) {
                $('.abc').prop('checked', 'checked');
                $(".abc").ready(function () {
                    GetValueModel();
                });
            }
            else {
                $('.abc').prop('checked', false);
            }

        });
        function GetValueModel() {
            var user1 = ""
            var IDs = document.getElementById('IDAPP').value;;
            var names = $('.parent input:checked').map(function () { return this.name; }).get();
            var value = document.getElementById('CustomerName').value;
            var valueNCC = document.getElementById('NCC').value;
            var valueType = document.getElementById('Type').value;
            $(".ketqua").text(names);
            $(".ketqua").val(names);
            if (names.length > 0) {
                $(".datcom").attr("style", "display:inherit");
                var arr = names;
                var start1 = $('#start').val();
                var end1 = $('#end').val();
                var check = $('.checkall:checked').val();
                var i = 0
                $('#fileinput').html('');
                for (i = 0; i < names.length; i++) {
                    user1 += arr[i] + ",";
                }
                $('#fileinput').html($('#fileinput').html() + '<input type="text" id="StaffUse"  name="StaffUse" value="' + user1 + '"/>');
            }
        };
    });
</script>






