<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin hồ sơ</h3>
    </div>
    @using (Html.BeginForm("Create", "ProjectFile", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card-body">
            <div class="row">

                <div class="col-md-12">
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class='col-md-8'>
                            <label class="control-label">Tên tài liệu</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        </div>
                        <div class='col-md-2'>
                            <label class="control-label">Version</label>
                            @Html.TextBoxFor(model => model.Version, new { @class = "form-control" })
                        </div>
                        <div class='col-md-2'>
                            <label class="control-label">Tình trạng</label>
                            @Html.DropDownListFor(model => model.Status, listSS, new { @class = "form-control" })
                        </div>
                        <div class='col-md-3'>
                            <label class="control-label">Loại hồ sơ</label>
                            @Html.DropDownListFor(model => model.Type, listTT, new { @class = "form-control" })
                        </div>
                        <div class='col-md-3'>
                            <label class="control-label">Thuộc dự án</label>
                            @Html.DropDownListFor(model => model.IDPro, listCC, new { @class = "form-control" })
                        </div>
                        <div class='col-md-2'>
                            <label class="control-label">Ngày áp dụng</label>
                            <div class="input-group mb-3">
                                <input autocomplete="off" style="background: #f9d7d4;" class="date1 form-control" id="ApplyDate" name="ApplyDate" type="text" value="">
                                <div class=" input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class='col-md-4'>
                            <label class="control-label">File đính kèm</label>
                            <div class='input-group'>
                                @Html.TextBoxFor(model => model.FileName, new { @class = "form-control", @placeholder = "upload file đính kèm" })
                                <div class=" input-group-append">
                                    <span class="input-group-text">
                                        <a id="btnViewFile" href="#"><span class="fa fa-paperclip"></span></a>
                                    </span>
                                </div>
                            </div>
                            <script>
                                $('#btnViewFile').on('click', function (e) {
                                    e.preventDefault();
                                    var finder = new CKFinder();
                                    finder.selectActionFunction = function (url) {
                                        $('#FileName').val(url);
                                        $('#btnViewFile').attr("href", $('#FileName').val());
                                    };
                                    finder.popup();
                                })
                            </script>
                        </div>

                        <div class='col-md-12'>
                            <label class="control-label">Ghi chú</label>
                            @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @row = "4" })
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" onclick="openNav()">Lưu thông tin</button>
        </div>


    }
</div>

