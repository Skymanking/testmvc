@model Model.EF.HDLD
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<SelectListItem> listVT = new List<SelectListItem>();
    listVT.Add(new SelectListItem
    {
        Text = "mức lương",
        Value = "chưa có",
        Selected = true
    });

    Model.ID = "alhdfaslhf";

    List<SelectListItem> loaihd = new List<SelectListItem>();
    loaihd.Add(new SelectListItem
         {
             Text = "Hợp Đồng 1 Năm",
             Value = "1",
             Selected = true
         });

    loaihd.Add(new SelectListItem
         {
             Text = "Hợp Đồng 2 Năm",
             Value = "2",

         });
    loaihd.Add(new SelectListItem
    {
        Text = "Hợp Đồng 3 Năm",
        Value = "3",
    });

    loaihd.Add(new SelectListItem
         {
             Text = "Hợp Đồng Thử Việc",
             Value = "4",
         });
    loaihd.Add(new SelectListItem
    {
        Text = "Hợp Đồng Thời Vụ",
        Value = "5",
    });
    loaihd.Add(new SelectListItem
    {
        Text = "Hợp Đồng Không Xác Định Thời Hạn",
        Value = "6",
    });
    loaihd.Add(new SelectListItem
    {
        Text = "Hợp Đồng Học Việc",
        Value = "7",
    });

}

<div class="row">
    @using (Html.BeginForm("Create", "HDLD", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thông Tin Hợp Đồng
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="form-group">
                                <div class='col-md-4'>
                                    <label class="control-label">Mã Nhân Viên</label>
                                    @Html.TextBoxFor(model => model.IDPer, new { @class = "form-control", @placeholder = "mã nhân viên" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label">Số Hợp Đồng</label>
                                    @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @placeholder = "số HD....", @value = "abfasf" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label">Loại Hợp Đồng</label>
                                    @Html.DropDownListFor(model => model.TypeH, loaihd, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class='col-md-3'>
                                    <label class="control-label">Ngày Bắt Đầu</label>
                                    <div class='input-group date' id='datetimepicker2'>
                                        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    <script type="text/javascript">
                                        $(function () {
                                            $('#datetimepicker2').datetimepicker({
                                                format: 'MM/DD/YYYY'
                                            });

                                        });
                                    </script>
                                </div>
                                <div class='col-md-3'>
                                    <label class="control-label">Ngày Kết Thúc</label>
                                    <div class='input-group date' id='datetimepicker3'>
                                        @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                    <script type="text/javascript">
                                        $(function () {
                                            $('#datetimepicker3').datetimepicker({
                                                format: 'MM/DD/YYYY'
                                            });

                                        });
                                    </script>
                                </div>
                                
                            </div>
                            <div class="form-group">
                                <div class='col-md-3'>
                                    <label class="control-label">Lương Cơ Bản</label>
                                    @Html.TextBoxFor(model => model.BasicS, new { @class = "form-control", @type = "number" })
                                </div>
                                <div class='col-md-3'>
                                    <label class="control-label">Lương Hiệu Quả</label>
                                    @Html.TextBoxFor(model => model.PerformanceS, new { @class = "form-control", @type = "number" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--------------------------fd-------End------------------------------------>

        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </div>
        <br>
        <br>

    }
</div>


