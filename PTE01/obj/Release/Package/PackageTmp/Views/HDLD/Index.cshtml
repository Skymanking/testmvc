@model PagedList.IPagedList<Model.View.HDLDView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    int sumHDLD = Model.Count();


}

<div class="row">

    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Tổng số HDLD hiện tại là @sumHDLD
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "HDLD", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit" style="padding-left:30px;padding-right:50px;"><i class="glyphicon glyphicon-search"></i> </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Số HĐ</th>
                                <th>Mã NV</th>
                                <th>Tên Nhân Viên</th>
                                <th>Ngày bắt đầu</th>
                                <th>Ngày kết thúc</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.IDPer</td>
                                        <td>@item.NamePer</td>
                                        <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                                       @if(@item.EndDate != null){ <td>@item.EndDate.Value.ToString("dd/MM/yyyy")</td>} else{<td> vô hạn </td>}
                                        <td>
                                            @Ajax.ActionLink("| Xóa |", "Delete", new { ID = item.ID }, new AjaxOptions
                                            {
                                                Confirm = "Bạn có muốn xoá bản ghi này?",
                                                OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                HttpMethod = "Delete"
                                            })
                                            @if(item.TypeH==4)
                                            {<a href="/HDLD/Print?id=@item.ID"><i class="fa fa-print" aria-hidden="true" style="font-size: 30px;"></i></a>}
                                        </td>
                                    </tr>
                            }


                        </tbody>
                    </table>
                 @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

