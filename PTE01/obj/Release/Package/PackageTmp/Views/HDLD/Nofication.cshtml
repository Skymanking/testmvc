@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";

    IEnumerable<Model.View.Personal4> chuakyHD = ViewBag.chuaky;
    IEnumerable<Model.View.Personal5> sapdenhanHD = ViewBag.sapdenhan;
    string maHDLD = DateTime.Now.DayOfYear + "-" + DateTime.Now.Year + "-HDLD-";

}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>DANH SÁCH NHÂN VIÊN CẦN KÝ HDLD </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12"><a class="btn" href="/HDLD/Index">-------> Danh Sách Hợp Đồng Đã Ký </a></div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Số nhân viên chưa ký HDLD<span class="badge">@chuakyHD.Count()</span></button>

                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Họ Tên / </th>
                                <th> Chức Vụ</th>
                                <th> Ngày vào làm</th>
                                <th> Ngày làm chính thức</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in chuakyHD)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Position</td>
                                    <td> @item.StartDate.Value.ToString("dd/MM/yyyy")</td>
                                    <td> @item.EndTryDate.Value.ToString("dd/MM/yyyy")</td>
                                    <td><a href="/HDLD/CreateHD/@maHDLD@item.ID">Làm Hợp Đồng</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Số nhân viên đã hết và sắp hết hạn HDLD<span class="badge">@sapdenhanHD.Count()</span></button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Họ Tên / </th>
                                <th> Chức Vụ</th>
                                <th> Ngày cuối HD</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in sapdenhanHD)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Position</td>
                                    <td> @item.EndHDLDDate.Value.ToString("dd/MM/yyyy")</td>
                                    <td><a href="/HDLD/CreateHD/@maHDLD@item.ID">Làm Hợp Đồng</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


