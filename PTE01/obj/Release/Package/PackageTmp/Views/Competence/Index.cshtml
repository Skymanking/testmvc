@model PagedList.IPagedList<Model.EF.Competence>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
}
@section jsFooter
{
    <script src="/Scripts/UpdateCompetence2.js"></script>
}
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Kỹ Năng
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Competence", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit" style="padding-left:30px;padding-right:50px;"><i class="glyphicon glyphicon-search"></i> </button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <a class="btn btn-primary newCom" data-id="" data-name="" data-type="" data-toggle="modal" data-target="#upModal">Thêm mới</a>
                                
                            </div>
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Kỹ Năng</th>
                                <th>Loại</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Type</td>
                                        <td><a href="#" class="upCom" data-id="@item.ID" data-name="@item.Name" data-type="@item.Type" data-toggle="modal" data-target="#upModal" title="Cập Nhật"> <span class="glyphicon glyphicon-pencil"></span></a></td>
                                    </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

<form id="myForm" method="post">
    <div class="modal fade" id="upModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" style="width:20px">&times;</button>
                    <h4 class="modal-title">Cập nhật thông tin</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class='col-md-6'>
                            <label class="control-label">Tên kỹ năng</label>
                            <input class="form-control" data-val="true" id="name" name="name" placeholder=" " type="text" value="">
                        </div>
                        <div class='col-md-6'>
                            <label class="control-label">Loại</label>
                            <input class="form-control" data-val="true" id="type" name="type" placeholder=" " type="text" value="">
                        </div>
                    </div>
                </div>
                <script>
                    $(document).ready(function () {
                   
                       
                        $("#name").blur(function () {
                            $('#createCC').attr("data-name", $('#name').val());
                        });
                        $("#type").blur(function () {
                            $('#createCC').attr("data-type", $('#type').val());
                        });
                        $(".upCom").click(function () {
                            $('#name').val($(this).attr("data-name"));
                            $('#type').val($(this).attr("data-type"));
                            $('#createCC').attr("data-id", $(this).attr("data-id"));
                            $('#createCC').attr("data-name", $(this).attr("data-name"));
                            $('#createCC').attr("data-type", $(this).attr("data-type"));
                            $('#createCC').attr("data-action", "edit");
                        });
                        $(".newCom").click(function () {
                            $('#createCC').attr("data-id", "null");
                            $('#createCC').attr("data-name", $(this).attr("data-name"));
                            $('#createCC').attr("data-type", $(this).attr("data-type"));
                            $('#createCC').attr("data-action", "create");
                        });
                    });
                </script>


                <div class="modal-footer">
                    <a href="#" id="createCC" class="updatecompetence" style="background: red;    padding: 7px;  color: white;">Lưu thông tin</a>
                </div>
            </div>

        </div>
    </div>
</form>
