@model List<Model.View.Checklist2>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<string> nguoitao = ViewBag.nguoitao;
    int stt = 1;
    DateTime homnay = DateTime.Now;
}
@section jsFooter
{
    <script>
        $(function () {
            $('.form_datetime').datetimepicker({
                format: 'mm/dd/yyyy hh:ii',
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
            });
            $('.select2').select2()

        })
    </script>

}

<div class="row not-print">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Advanced Search</h3>

                @*<div class="card-tools">
                        @using (Html.BeginForm("History", "Checklist", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>*@
            </div>
            <div class="card-body">
                @using (Html.BeginForm("AdvancedSearch", "Checklist", FormMethod.Get))
                {
                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Người tạo</label>
                                <select class="form-control select2" style="width: 100%;" value="@ViewBag.nguoitaos" name="nguoitaos">
                                    @foreach (var item in nguoitao)
                                    {
                                        <option>@item</option>
                                    }

                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Từ:</label>
                                <div class="input-group date form_datetime" data-link-field="Startline">
                                    <input class="form-control" type="text" name="Startline" value="@ViewBag.Startline" readonly>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <input type="hidden" id="Startline" name="Startline" value="@ViewBag.Startline" /><br />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Đến:</label>
                                <div class="input-group date form_datetime" data-link-field="Stopline">
                                    <input class="form-control" name="Stopline" type="text" value="@ViewBag.Stopline" readonly>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <input type="hidden" id="Stopline" name="Stopline" value="@ViewBag.Stopline" /><br />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">.</label>
                                <button type="submit" class="btn btn-default"> Tìm kiếm<i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <table>
        <tbody>
            <tr id="rowt" style="background:none;">
                <td class="text-center" style="border:none;"><img class="img-responsive" src="~/Assets/dist/css/logo2.jpg" /> </td>
                <td class="text-center" style="border:none;"><h3>BẢNG XÁC NHẬN THỰC HIỆN CHECKLIST</h3></td>
            </tr>
        </tbody>
    </table>


</div>



<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    @if (Model != null)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr style=" border: 2px solid #000;">
                                        <th style=" border: 2px solid #000;">STT</th>
                                        <th style=" border: 2px solid #000; width:420px">Tên thiết bị kiểm tra</th>
                                        <th style=" border: 2px solid #000;width:150px">Yêu Cầu</th>
                                        <th style=" border: 2px solid #000;">Ghi Chú</th>
                                        <th style=" border: 2px solid #000;width:100px">Thời gian </th>
                                        <th style=" border: 2px solid #000;">Người thực hiện</th>
                                        <th style=" border: 2px solid #000;">Kết Luận</th>

                                        </tr>
                                </thead>
                                <tbody style="font-size:12px">
                                    @foreach (var item in Model)
                                    {

                                        <tr style="height:20px; border: 1px solid #000;">
                                            <td style="padding: 5px; border: 1px solid #000;">@stt</td>
                                            <td style="padding: 5px; border: 1px solid #000;">@item.Equipment</td>
                                            <td style="padding: 5px; border: 1px solid #000;">@item.Request</td>
                                            <td style="padding: 5px; border: 1px solid #000;">
                                                @item.Note . @item.Parameter
                                            </td>
                                            <td style="padding: 5px; border: 1px solid #000;">@item.CreateDate.ToString("dd/MM/yyyy hh:mm")</td>
                                            <td style="padding: 5px; border: 1px solid #000;"> @item.CreateBy</td>
                                            <td style="padding: 5px; border: 1px solid #000;">
                                                @if(@item.Result){<span>Đạt</span>} else{<span>Không Đạt</span>}
                                            </td>
                                        </tr>
                                        { stt = stt + 1; }

                                    }
                                </tbody>
                            </table>

                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class='col-12 '>
        <label class="control-label">Ngày @homnay.Day Tháng @homnay.Month  Năm @homnay.Year</label>
    </div>

</div>
<div class="row">
    <div class='col-6 text-center'>
        <label class="control-label"><b>Người Thực Hiện</b></label>
    </div>
    <div class='col-6 text-center'>
        <label class="control-label"><b>Người Kiểm Tra</b></label>
    </div>
</div>