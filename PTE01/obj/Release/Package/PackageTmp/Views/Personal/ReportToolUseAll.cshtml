@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<Model.EF.PersonalTool> reportall = ViewBag.reportall;
    List<string> reportgroup = ViewBag.reportgroup;
    int tongvt = 0;
}

<div class="row">
    @if (reportgroup != null)
    {
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh Sách Tất Cả Công Cụ Dụng Cụ Đã Cấp Phát
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th width="200px">Tên Vật Tư</th>
                                    <th>Nhân Viên đang giữ</th>
                                    <th>Số lượng</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in reportgroup)
                                {
                                    tongvt = 0;
                                    <tr id="row_ccdc">
                                        <td>@item</td>
                                        <td>
                                            @foreach (var temp in reportall)
                                            {
                                                if (temp.ItemName == item)
                                                {
                                                    <a href="../../Personal/Edit/@temp.IDPer">
                                                        <span style="margin:3px;" class="label label-success" data-toggle="tooltip" title="Ngày cấp: @temp.StartDate.ToString("dd/MM/yyyyy")- SL: @temp.Quantity  - ghi chú:: @temp.Note">@temp.IDPer </span>
                                                    </a>
                                                    tongvt = tongvt + temp.Quantity;
                                                }
                                            }
                                        </td>
                                        <td>@tongvt</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>bạn không có chức năng này</p>
    }
</div>
