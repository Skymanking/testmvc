@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.View.PersonalGR1> report = ViewBag.report;
    List<Model.View.Personal3> ds99 = ViewBag.ds99;
    int sumOnline = ViewBag.sumOnline;
    List<Model.View.Report1> reroot = new List<Model.View.Report1>();
    var root = new Model.View.Report1();
    
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Thống Kê Nhân Sự Theo Bộ Phận </h3>

                <div class="card-tools">

                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-file-excel-o"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/Personal/BirthDay?month=@DateTime.Now.Month">DS Sinh Nhật Tháng</a>
                            <a class="dropdown-item" href="/Personal/HumanResource?month=@DateTime.Now.Month&year=@DateTime.Now.Year">Tăng Giảm Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/Report1">Biến Động Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/ReportLeave/?year=@DateTime.Now.Year&month=@DateTime.Now.AddMonths(-1).Month">Thống kê nhân sự nghỉ việc</a>
                            <a class="dropdown-item" href="/Personal/AcademicLevel">Trình Độ Học Vấn</a>
                            <a class="dropdown-item" href="/Personal/GroupID2">Thống Kê Phân Nhóm</a>
                            <a class="dropdown-item" href="/Personal/GroupID">Thống Kê Bộ Phận</a>
                            <a class="dropdown-item" href="/Personal/ReportCompetence">Thống Kê Năng Lực</a>
                            <a class="dropdown-item" href="/Personal/ExportInputData" target="_blank">InputData</a>
                            <a class="dropdown-item" href="/Personal/ReportToolUseToBe">Công Cụ Dụng Cụ</a>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <center><h2>TỔNG NHÂN VIÊN HIỆN TẠI LÀ @sumOnline</h2></center>


                <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                <div class="row">
                    <div class="col-md-9">
                        <div id="chart_div" style="height:1000px"></div>
                    </div>
                    <div class="col-md-3">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Bộ phận</th>
                                        <th>Số lượng</th>
                                        <th>Tỉ lệ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in report)
                                    {
                                        if (item.gr.ParentID == null)
                                        {
                                            { root = new Model.View.Report1(); }
                                            <tr id="">
                                                <td>@item.gr.Name</td>
                                                <td>@item.value1</td>
                                                <td>@(String.Format("{0:0.00}", Convert.ToDouble(item.value1) * 100 / sumOnline)) %</td>
                                            </tr>
                                            { root.Name = @item.gr.Name; root.Value = root.Value + @item.value1; }
                                            foreach (var item2 in report)
                                            {
                                                if (item2.gr.ParentID == item.gr.ID)
                                                {
                                                    <tr id="">
                                                        <td>+ + +@item2.gr.Name</td>
                                                        <td>@item2.value1</td>
                                                        <td>@(String.Format("{0:0.00}", Convert.ToDouble(item2.value1) * 100 / sumOnline)) %</td>
                                                    </tr>
                                                    { root.Value = root.Value + @item2.value1; }
                                                }
                                            }
                                            { if (root.Value > 0) { reroot.Add(root); } }
                                                     <tr style="background: #f5b7bd;">
                                                        <td>SUM @root.Name</td>
                                                        <td>@root.Value</td>
                                                        <td>@(String.Format("{0:0.00}", Convert.ToDouble(root.Value) * 100 / sumOnline)) %</td>
                                                    </tr>
                                        }

                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    google.charts.load('current', { packages: ['corechart', 'bar'] });
                    google.charts.setOnLoadCallback(drawAxisTickColors);

                    function drawAxisTickColors() {
                        var data = google.visualization.arrayToDataTable([
                             ['Bộ Phận', 'Số Lượng'],
                             @foreach(var item in reroot)
                            {
                               <text>
                            [' @item.Name.Replace("â", "a").Replace("á", "a").Replace("à", "a").Replace("ý", "y").Replace("ô", "o").Replace("ó", "o").Replace("ò", "o").Replace("í", "i").Replace("ì", "i").Replace("ê", "e").Replace("é", "e").Replace("É", "E").Replace("è", "e")', @item.Value],
                             </text>
                             }


                        ]);

                        var options = {
                            title: 'Thống Kê Theo Bộ Phận',
                            chartArea: { width: '50%' },
                            hAxis: {
                                title: '',
                                minValue: 0,
                                textStyle: {
                                    bold: true,
                                    fontSize: 12,
                                    color: '#4d4d4d'
                                },
                                titleTextStyle: {
                                    bold: true,
                                    fontSize: 18,
                                    color: '#4d4d4d'
                                }
                            },
                            vAxis: {
                                title: 'Bộ Phận',
                                textStyle: {
                                    fontSize: 14,
                                    bold: true,
                                    color: '#848484'
                                },
                                titleTextStyle: {
                                    fontSize: 14,
                                    bold: true,
                                    color: '#848484'
                                }
                            }
                        };
                        var chart = new google.visualization.BarChart(document.getElementById('chart_div'));
                        chart.draw(data, options);
                    }
                </script>

                <center><h4>DANH SÁCH NHÂN VIÊN CHƯA CẬP NHẬT THÔNG TIN VỀ NHÓM BỘ PHẬN</h4></center>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Họ Tên</th>
                                <th>Bộ phận </th>
                                <th>Chức Vụ</th>
                                <th>Ngày Vào làm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ds99)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.GroupName</td>
                                    <td>@item.Position</td>
                                    @if (item.StartDate == null)
                                    {
                                        <td>chưa có</td>
                                    }
                                    else
                                    {
                                        <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>