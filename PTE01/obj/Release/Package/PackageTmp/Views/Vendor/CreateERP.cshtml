@model Model.EF.Vendor

@{
    ViewBag.Title = "CreateERRP";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListVendCat = (List<Model.View.Dropdownlist2>)ViewBag.VendCatBag;
    var VendCat = new List<SelectListItem>();
    VendCat.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn loại nhà cung cấp",
    });
    foreach (var item in ListVendCat)
    {
        VendCat.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }
    var ListTerm = (List<Model.View.Dropdownlist2>)ViewBag.TermBag;
    var TermD = new List<SelectListItem>();
    foreach (var item in ListTerm)
    {
        if (item.ID == "NT")
        {
            TermD.Add(new SelectListItem
            {
                Text = item.ID + ": " + item.Name,
                Value = item.ID,
                Selected = true,
            });
        }
        else
        {
            TermD.Add(new SelectListItem
            {
                Text = item.ID + ": " + item.Name,
                Value = item.ID,

            });
        }
    }
    var ListCurrency = (List<Model.View.Dropdownlist2>)ViewBag.CurrencyBag;
    var Currency = new List<SelectListItem>();
    foreach (var item in ListCurrency)
    {
        if (item.ID == "VND")
        {
            Currency.Add(new SelectListItem
            {
                Text = item.ID + ": " + item.Name,
                Value = item.ID,
                Selected = true,
            });
        }
        else
        {
            Currency.Add(new SelectListItem
            {
                Text = item.ID + ": " + item.Name,
                Value = item.ID,
                Selected = false,
            });
        }
    }
    var ListCountry = (List<Model.View.Dropdownlist2>)ViewBag.CountryBag;
    var Country = new List<SelectListItem>();
    foreach (var item in ListCountry)
    {
        if (item.ID == "VIET NAM")
        {
            Country.Add(new SelectListItem
            {
                Text = item.ID,
                Value = item.ID,
                Selected = true,
            });
        }
        else
        {
            Country.Add(new SelectListItem
            {
                Text = item.ID,
                Value = item.ID,

            });
        }
    }
    var ListBankCode = (List<Model.View.Dropdownlist2>)ViewBag.BankCodeBag;
    var BankCode = new List<SelectListItem>();
    BankCode.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn ngân hàng",
        Selected = true,
    });
    foreach (var item in ListBankCode)
    {
        BankCode.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }
}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
}
<script src="~/Scripts/APIERP.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Nhà cung cấp</h3>
    </div>
    @using (Html.BeginForm("CreateERP", "Vendor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-9">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên nhà cung cấp<span style="font-weight:bold;color:red">*</span></label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "VendorName", @class = "form-control", @onfocusout = "checkNCC()", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Loại</label>
                                @Html.DropDownListFor(model => model.Category, VendCat, new { @ID = "Category", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Email</label>
                                @Html.TextBoxFor(model => model.Mail, new { @ID = "Email", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Phone Number</label>
                                @Html.TextBoxFor(model => model.Phone, new { @ID = "Phone", @class = "form-control select2" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tax ID</label>
                                @Html.TextBoxFor(model => model.AccountCode, new { @ID = "AccountCode", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Term</label>
                                @Html.DropDownListFor(model => model.Term, TermD, new { @ID = "Term", @class = "form-control select2" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <h3>Địa chỉ</h3>
                    <div class="row" style="background: #b9e9f1; padding-bottom: 15px;">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Address 1</label>
                                <input class="form-control address" id="Addr1" onfocusout="address1()" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Address 2</label>
                                <input class="form-control address" id="Addr2" onfocusout="address1()" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Address 2</label>
                                <input class="form-control address" id="Addr3" onfocusout="address1()" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Address 3</label>
                                <input class="form-control address" id="Addr3" onfocusout="address1()" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Address 4</label>
                                <input class="form-control address" id="Addr4" onfocusout="address1()" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">City</label>
                                <input class="form-control address" id="City" onfocusout="address1()" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">County</label>
                                <input class="form-control address" id="County" onfocusout="address1()" />
                                @Html.TextBoxFor(model => model.Address, new { @ID = "Address", @class = "form-control select2", @style = "display: none;" })

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Country</label>
                                @Html.DropDownListFor(model => model.Address2, Country, new { @ID = "Country", @class = "form-control select2" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <h3>Ngân hàng</h3>
                    <div class="row" style="background: #93e4f1; padding-bottom: 15px;">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Bank Code</label>
                                @Html.DropDownListFor(model => model.BankCode, BankCode, new { @ID = "BankCode", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Bank Number</label>
                                @Html.TextBoxFor(model => model.BankAddress, new { @ID = "BankNum", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tiền tệ</label>
                                @Html.DropDownListFor(model => model.Currency, Currency, new { @ID = "Currency1", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12" style="background:#77b0b0">
                    <div class="form-group">
                        <h3>Ghi chú</h3>
                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control select2", @style = " height: 100px;", @rows = 3 })
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" onclick="return CheckCreate()"/>
            </div>
        </div>
    }
</div>
