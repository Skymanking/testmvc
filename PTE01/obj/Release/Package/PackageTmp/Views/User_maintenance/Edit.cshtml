                    </div>
                </div>
                <div class=" col-md-2">
                    <label class="control-label">Mã nhân viên</label>
                    <div class='input-group'>
                        @Html.TextBoxFor(model => model.User_code, new { @class = "form-control", @readonly = true })
                    </div>
                </div>
            </div>
            <br />

            <div class="card-secondary">
