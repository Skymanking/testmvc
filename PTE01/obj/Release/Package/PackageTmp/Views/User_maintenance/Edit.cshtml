            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Vị trí</label>
                        @Html.TextBoxFor(model => model.location, new { @class = "form-control", @placeholder = "Xưởng 1, Xưởng 2,..." })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Chuyên môn</label>
                        @Html.TextBoxFor(model => model.regular, new { @class = "form-control", @placeholder = "Ép, Xi,..." })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Mức chuyên nghiệp</label>
                        @Html.TextBoxFor(model => model.priority, new { @class = "form-control", @placeholder = "Ưu tiên giao việc" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Số công việc tối đa</label>
                        @Html.TextBoxFor(model => model.max_work, new { @class = "form-control", @placeholder = "Số lượng việc tối đa trong ngày" })
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-12">Ghi chú</label>
                        @Html.TextBoxFor(model => model.note, new { @class = "form-control", style = "width: 100%; height: 150px;" })
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $(window).keydown(function (event) {
                        if (event.keyCode == 13) {
                            event.preventDefault();
                            return false;
                        }
                    });
                });
            </script>
        </div>
        <div class="datcom">
            <button type="submit" class="btn btn-primary" id="luulai">Lưu</button>
            <span id="fileinput" style="display:none"></span>
        </div>
    }
</div>
