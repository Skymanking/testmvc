@model List<Model.EF.User_maintenance1>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Danh sách nhân viên bảo trì</h3>

                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            More
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/ProposalToBuy/" style="color:black;" class="dropdown-item">Normal</a>
                            <a href="/ProposalToBuy/SearchAdvance1" style="color:black;" class="dropdown-item">Advance Search</a>
                            <a href="/ProposalToBuy/ExportToPO" style="color:black;" class="dropdown-item">Export to PO</a>
                        </div>
                    </div>
                    @*<a class="btn btn-warning float-right" href="/ProposalToBuy/SearchAdvance1">Advanced Search</a>*@
                    <div style="float:left">
                        @using (Html.BeginForm("List", "User_maintenance", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="SearchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="/User_maintenance/Create" data-toggle="tooltip" title="Thêm mới">Thêm mới<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>

                    </li>
                </ul>
                <table class="table table-striped table-bordered table-hover" id="baocom">
                    <thead>
                        <tr>
                            <th>Nhân viên</th>
                            <th>Vị trí</th>
                            <th>Chuyên môn</th>
                            <th>Mức chuyên nghiệp</th>
                            <th>Số công việc tối đa</th>
                            <th>Việc trong ngày</th>
                            <th>Việc trong tháng</th>
                            <th>Tổng việc hoàn thành</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.User_code">
                                <td><a href="/User_maintenance/Edit/@item.User_code"><span>@item.Name</span></a></td>
                                <td>@item.location</td>
                                <td>@item.regular</td>
                                <td>@item.priority</td>
                                <td>@item.max_work</td>
                                <td>@item.total_workcomplete</td>
                                <td>@item.total_workcomplete</td>
                                <td>@item.total_workcomplete</td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Device_priority/Create"><i class="fa fa-plus"></i> Thêm mới</a>
            </div>
        </div>
    </div>
</div>

