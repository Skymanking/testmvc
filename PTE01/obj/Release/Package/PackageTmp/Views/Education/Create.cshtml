@model Model.View.FullEducation

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listU = (IEnumerable<Model.View.Personal2>)ViewBag.nguoiday;
   
    var lnguoiday = new List<SelectListItem>();
    var lnguoihoc = new List<SelectListItem>();
   lnguoiday.Add(new SelectListItem
    {
        Text = "Chọn Người Thực Hiện",
        Value = "none",
        Selected = true
    });
    lnguoiday.Add(new SelectListItem
    {
        Text = "Giáo Viên Bên Ngoài",
        Value = "GVBN",
        Selected = true
    });
    
    foreach (var item in listU)
    {
        lnguoiday.Add(new SelectListItem
        {
            Text = item.Name+" - " +item.GroupName,
            Value = item.ID,
        });
        lnguoihoc.Add(new SelectListItem
        {
            Text = item.Name + " - " + item.GroupName,
            Value = item.ID,
        });
    }

    var llevels = new List<SelectListItem>();
    llevels.Add(new SelectListItem
    {
        Text = "Cơ Bản",
        Value = "1",
        Selected = true
    });
    llevels.Add(new SelectListItem
    {
        Text = "Nâng Cao",
        Value = "2",
    });
    llevels.Add(new SelectListItem
    {
        Text = "Thành Thạo",
        Value = "3",
    });
    llevels.Add(new SelectListItem
    {
        Text = "Chuyên Gia",
        Value = "4",
    });
    var listMonHoc = (IEnumerable<Model.EF.Competence>)ViewBag.monhoc; ;
    var lmonhoc = new List<SelectListItem>();
    foreach (var item in listMonHoc)
    {
        lmonhoc.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
        });
    }
    
    var ldaotao = new List<SelectListItem>();
    ldaotao.Add(new SelectListItem
    {
        Text = "Cty Đào tạo nội bộ",
        Value = "Cty Đào tạo nội bộ",
        Selected = true
    });
    ldaotao.Add(new SelectListItem
    {
        Text = "Cty Đào tạo bên ngoài",
        Value = "Cty Đào tạo bên ngoài",
    });
    ldaotao.Add(new SelectListItem
    {
        Text = "Cá nhân Đào tạo bên ngoài",
        Value = "Cá nhân Đào tạo bên ngoài",
    });
}
@section jsFooter
{
    <script>
        $(function () {
            $('.select2').select2()
            $('.select1').select2()

            $('.form_datetime').datetimepicker({
                format: 'mm/dd/yyyy hh:ii',
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
            });

            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-red',
                radioClass: 'iradio_flat-red'
            })

        })
    </script>

}

@using (Html.BeginForm("Create", "Education", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Nội dung Đào Tạo</h3>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên môn học</label>
                                @Html.DropDownListFor(model => model.item.IDCom,lmonhoc, new { @class = "form-control select2" })
                            </div>
                        </div>
                    </div>
                  
                    <div class="row">
                        <div class="col-8 col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-12">Người đào tạo</label>
                                @Html.DropDownListFor(model => model.item.MasterName, lnguoiday, new { @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-4 col-md-4">
                            <div class="form-group">
                                <label>Ngày đào tạo:</label>
                                <div class="input-group date form_datetime" data-link-field="StartDate">
                                    <input class="form-control" type="text" value="" readonly>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                                <input type="hidden" id="StartDate" name="StartDate" value="" /><br />

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8 col-md-8">
                            <div class="form-group">
                                <label class="control-label col-md-12">Loại đào tạo</label>
                                @Html.DropDownListFor(model => model.item.TypeEducate, ldaotao, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-4 col-md-4">
                            <div class="form-group">
                                <label class="control-label col-md-12">Số tiếng đào tạo</label>
                                @Html.TextBoxFor(model => model.item.Time, new { @class = "form-control", @type = "number",@value="1" })
                            </div>
                        </div>
                    </div>
                    

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-12">Ghi chú</label>
                                @Html.TextAreaFor(model => model.item.Note, new { @class = "form-control", @rows = "4" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @*<button type="submit" class="btn btn-primary">Lưu thông tin</button>*@
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Danh sách học viên</h3>
                </div>

                <div class="card-body">

                    <div class="row">
                        <div class="col-9 col-md-9">                        

                            <div class="form-group">
                                <label class="control-label col-md-12">Chọn học viên</label>
                                @*<div class="input-group">*@
                                    @Html.DropDownList("abc", lnguoihoc, new { @class = "form-control select2" })
                                  
                                @*</div>*@
                            </div>
                        </div>
                        
                        <div class="col-3 col-md-3">
                            <label class="control-label">.</label>
                            <div class="input-group col-md-6">
                                <a class="btn btn-default" id="btnAddVT">Thêm</a>
                            </div>
                        </div>
                        </div>
                        <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                            <thead>
                                <tr>
                                    <th style="width: 100px;">Mã NV</th>
                                    <th>Họ Tên</th>
                                    <th style="width: 90px;">Điểm</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            </table>

                    </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Lưu thông tin</button>
                </div>
                <script src="~/Scripts/jquery-1.9.1.min.js"></script>
                <script>
                    var count = $('#gvCustomers tr').length -1;
                    $(document).ready(function () {
                        function addRowVT() {
                            if ($("#abc").val() != null) {
                                var html =
                                '<tr id="dong_' + (count + 1) + '">' +
                                '<td><input class="form-control" data-val="true" id="detail_' + count + '__IDPer" name="detail[' + count + '].IDPer" readonly="true" placeholder="Mã NV" type="text" value="' + $("#abc option:selected").val() + '"></td>' +
                        '<td><input class="form-control" data-val="true" readonly="true" placeholder="Tên NV" type="text" value="' + $("#abc option:selected").text() + '"></td>' +
                        '<td><input class="form-control" data-val="true" id="detail_' + count + '__Point" name="detail[' + count + '].Point" placeholder="Điểm số" type="number" value="5"></td>' +
                  
                                '</tr>'
                                count = count + 1;
                                $(html).appendTo($("#gvCustomers"))
                            }
                        };
                        $("#btnAddVT").click(addRowVT);

                        $('.table tbody').on('click', '.xoadongR', function () {

                            var sodong = $(this).attr("data-sodong") - 1;
                            $('#detail_' + sodong + '__ItemID').attr("value", "");
                            $(this).closest('tr').hide();


                        });


                    });
                </script>



            </div>

        </div>
    </div>
}


