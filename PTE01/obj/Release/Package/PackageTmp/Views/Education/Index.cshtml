@model PagedList.IPagedList<Model.View.ListEducation>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Đào tạo</h3>

                <div class="card-tools">
                    @using (Html.BeginForm("Index", "Education", FormMethod.Get))
                    {
                        <div class="input-group " style="width: 300px;">
                            <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    @foreach (var item in Model)
                    {
                        <li>
                            <span> <i class="nav-icon fa fa-graduation-cap"></i></span>
                            <a href="/Education/Edit/@item.ID"> <span class="text">@item.EduName</span></a>
                            <span class="badge badge-danger float-right" data-toggle="tooltip" title="thời gian: @item.Time tiếng"><i class="fa fa-user"></i> @item.TechName </span>
                            <span class="badge badge-primary float-right"><i class="fa fa-clock-o"></i> @item.Time tiếng</span>
                            <span class="badge badge-success float-right"><i class="fa fa-calendar"></i> @item.StartDate.ToString("dd/MM/yyyy")</span>

                        </li>
                    }

                </ul>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Education/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
