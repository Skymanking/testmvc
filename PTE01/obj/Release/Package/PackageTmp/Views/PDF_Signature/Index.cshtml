@model List<Model.EF.PDF_Signature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<style>
    img {
        width: 100px;
    }
</style>

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Chữ ký</h3>
                <div class="card-tools">
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "PDF_Signature", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="Warehouse">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User ID</th>
                            <th>User Name</th>
                            <th>Img</th>
                            <th>Status</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.IDEmp</td>
                                <td>@item.EmpName</td>
                                <td>
                                    @Html.Raw(item.Img)
                                </td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <i class="fa fa-2x fa-check-circle"></i>}
                                    else
                                    {
                                        <i class="fa fa-2x fa-remove"></i>}
                                </td>
                                <td><a href="/PDF_Signature/Edit/@item.ID">Chi tiết</a></td>

                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
