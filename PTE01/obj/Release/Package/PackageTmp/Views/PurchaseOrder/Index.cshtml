@model PagedList.IPagedList<Model.View.PurchaseOrderView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Đơn Đặt Hàng</h3>
                <div class="card-tools">
                    @*<a class="btn btn-warning float-right" href="/PurchaseOrder/SearchAdvance1">Advanced Search</a>*@
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            Filter <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/PurchaseOrder/Index?searchString=tretamung" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #fdb49d;"></i>Đã trễ + chưa tạm ứng </a>
                            <a href="/PurchaseOrder/Index?searchString=chuatamung" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #fbf6cb;"></i>Chưa tạm ứng</a>
                            <a href="/PurchaseOrder/Index?searchString=tregiaohang" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #ceeefd;"></i>Đã trễ + chưa giao hàng</a>
                            <a href="/PurchaseOrder/Index?searchString=chuagiaohang" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #d6f7b1;"></i>Chưa giao hàng</a>
                            <a href="/PurchaseOrder/Index?searchString=trethanhtoan" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #9E9E9E;"></i>Đã trễ + chưa thanh toán</a>
                            <a href="/PurchaseOrder/Index?searchString=chuathanhtoan" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #795548;"></i>Chưa thanh toán</a>
                            <a href="/PurchaseOrder/Index?searchString=donhanghuy" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #000;"></i>Đơn hàng bị hủy</a>
                        </div>
                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "PurchaseOrder", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="/PurchaseOrder/Create" data-toggle="tooltip" title="Thêm mới yêu cầu ">Thêm mới PO<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>

                    </li>
                    @foreach (var item in Model)
                    {

                        <li>
                            @if(item.Status==true)
                            { <a href="/PurchaseOrder/Edit/@item.ID"><span class="text">@item.IDPO</span></a>}
                            else
                            {<a href="/PurchaseOrder/Edit/@item.ID"><span class="text" style="color:red;"><del>@item.IDPO</del></span></a><span>(đơn đã bị hủy)</span>}
                           
                            <span class="badge badge-info"><i class="fa fa-briefcase"></i> @item.Customer </span>
                            <span class="badge badge-dark" data-toggle="tooltip" title='tạo ngày: @item.CreateDate.ToString("dd/MM/yyyy")'><i class="fa fa-user"></i> @item.CreateBy </span>


                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 18px; margin-right: 18px; ">
                                @if (item.PaymentApp == false && item.PaymentDat < DateTime.Now)
                                { <span class="badge bg-danger" style="color:#fff">trễ Thanh Toán</span>}
                                else
                                {<span class="badge bg-warning">Thanh Toán</span> }
                                @Html.Raw(item.PaymentApp ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                            </a>
                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 18px; margin-right: 18px; ">
                                @if (item.DeliveryApp == false && item.DeliveryDat < DateTime.Now)
                                { <span class="badge bg-danger" style="color:#fff">trễ Giao Hàng</span>}
                                else
                                {<span class="badge bg-warning">Giao Hàng</span> }
                                @Html.Raw(item.DeliveryApp ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                            </a>
                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 18px; margin-right: 18px; ">
                                @if (item.DepositApp == false && item.DepositDat < DateTime.Now)
                                { <span class="badge bg-danger" style="color:#fff">trễ Tạm Ứng</span>}
                                else
                                {<span class="badge bg-warning">Tạm Ứng</span> }
                                @Html.Raw(item.DepositApp ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                            </a>
                            @*<span class="float-right">@Html.Raw(item.HODApproval ? "<span class='fa fa-check fa-2x' style='color: #0cb583;width: 30px;'></span>" : "<span class='fa fa-times fa-2x' style='color: #f90d0d;width: 30px;'></span>")</span>*@
                        </li>

                    }

                </ul>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/PurchaseOrder/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
