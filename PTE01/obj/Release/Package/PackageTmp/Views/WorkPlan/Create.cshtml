@model Model.EF.WorkPlan
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    var userName = ViewBag.userN;
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tạo Mới Kế Hoạch Công Việc</h1>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm("Create", "WorkPlan", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thông Tin Công Việc
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <div class="form-group">
                                <div class='col-md-12'>
                                    <label class="control-label">Chủ Đề</label>
                                    @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", @placeholder = "chủ đề công việc" })
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                </div>
                                <div class='col-md-12'>
                                    <label class="control-label">Nội Dung Công Việc</label>
                                    @Html.TextAreaFor(model => model.Detail, new { @class = "form-control",@rows="7", @placeholder = "chi tiết nội dung công việc" })
                                    @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                                </div>
                                <div class='col-md-4'>
                                    @if(userName != "admin" && userName != "quy.le")
                                    { 
                                    <label class="control-label">Người Thực Hiện</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        @Html.TextBoxFor(model => model.ListUser, new { @class = "form-control", @readonly = "true", @placeholder = @userName })
                                    </div>
                                    }
                                    else
                                    {
                                        <label class="control-label">Người Thực Hiện</label>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        @Html.TextBoxFor(model => model.ListUser, new { @class = "form-control"})
                                    </div>
                                    }
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label">Ngày Tạo </label>
                                    <div class='input-group date' id='datetimepicker1'>
                                        @Html.TextBoxFor(model => model.CreateDate, new { @class = "form-control", @placeholder = "ngày tạo"})
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>

                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label">Hạn Chót Thực Hiện </label>
                                    <div class='input-group date' id='datetimepicker2'>
                                        @Html.TextBoxFor(model => model.DeadLine, new { @class = "form-control", @placeholder = "deadline" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>

                                </div>
                                <script type="text/javascript">
                                    $(function () {
                                        $('#datetimepicker1').datetimepicker({
                                            format: 'MM/DD/YYYY'
                                        });

                                    });
                                    $(function () {
                                        $('#datetimepicker2').datetimepicker({
                                            format: 'MM/DD/YYYY'
                                        });

                                    });
                                </script>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--------------------------fd-------End------------------------------------>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </div>

    }
</div>



<p></p>
