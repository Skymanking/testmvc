@model PagedList.IPagedList<Model.View.RFQuotation1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";

}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>YCBG</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px;margin-top:-20px;">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/RFQuotation/Index?searchString=fWorking" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #ffc107;"></i>Working</a>
                            <a href="/RFQuotation/Index?searchString=fDone" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #28a745;"></i>Done</a>
                            <a href="/RFQuotation/Index?searchString=fDelay" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #dc3545;"></i>Delay</a>
                            <a href="/RFQuotation/Index?searchString=fCancel" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #c2c7d0;"></i>Cancel</a>
                            <a href="/RFQuotation/Index?searchString=fPause" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #999;"></i>Pause</a>
                            <a href="/RFQuotation/Index" style="color:black;" class="dropdown-item"><i style="width:20px;height:20px;border-radius:50%; background:red;"></i>Tất cả</a>
                            <a href="/RFQuotation/Report1" style="color:black;" class="dropdown-item"><i style="width:20px;height:20px;border-radius:50%; background:red;"></i>Report</a>
                        </div>
                    </div>
                    <a href="/RFQuotation/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "RFQuotation", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow:inherit">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th width="100px">Priority</th>
                                <th width="100px">Status</th>
                                <th width="70px">Owner</th>
                                <th width="100px">Dateline</th>
                                <th width="60px">View</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border-left: 6px solid green;">

                                    <td ><a href="/RFQuotation/Edit/@item.ID" style="color:black;">@item.Name</a></td>
                                    @if (item.Priority == 1)
                                    {
                                        <td style="background: #eee;"><span style="font-weight: bold; color: #007bff; "> Low</span></td>
                                    }
                                    @if (item.Priority == 2)
                                    {
                                        <td style="background: #eee;"><span style="font-weight: bold; color: #28a745; "> Medium </span></td>
                                    }
                                    @if (item.Priority == 3)
                                    {
                                        <td style="background: #eee;"><span style="font-weight: bold; color: #dc3545; "> High</span></td>
                                    }
                               
                                    @if (item.Status == 0)
                                    {
                                        <td style="background: #c2c7d0; font-size: 18px; color: #ffffff; ">Canceled</td>
                                    }
                                    @if (item.Status == 1)
                                    {
                                        if (item.FinishDate00 == null)
                                        {

                                            if (DateTime.Now > item.Deadline)
                                            {
                                                <td style="background: #dc3545; font-size: 18px; color: #ffffff; ">Delay</td>
                                            }
                                            else
                                            {
                                                <td style="background: #ffc107; font-size: 18px; color: #ffffff; ">Working</td>
                                            }

                                        }
                                        else
                                        {
                                            if (item.FinishDate00 > item.Deadline)
                                            {
                                                <td style="background: #dc3545; font-size: 18px; color: #ffffff; ">Delay</td>
                                            }
                                            else
                                            {
                                                <td style="background: #28a745; font-size: 18px; color: #ffffff; ">Done</td>
                                            }
                                        }

                                    }
                                    @if (item.Status == 2)
                                    {
                                        <td style="background: #999; font-size: 18px; color: #fff">Paused</td>
                                    }


                                    <td>
                                        <div class="tooltipImage" style="background: url('@item.ImageOwner');background-size: 35px;">
                                            <span>
                                                <img src="@item.ImageOwner" style="width: 100px;" />
                                                <p>@item.CreateBy</p>
                                            </span>
                                        </div>
                                    </td>
                                    <td> @item.Deadline.ToString("dd/MM/yyyy")</td>
                                    <td><a href="/RFQuotation/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 20px;"></span></a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">
                
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
