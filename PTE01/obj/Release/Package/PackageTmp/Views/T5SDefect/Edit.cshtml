@model Model.EF.T5SDefect

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listZ = (IEnumerable<Model.EF.T5SZone>)ViewBag.listZone;
    var dsZ = new List<SelectListItem>();
    foreach (var item in listZ)
    {
        dsZ.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
            Selected = true
        });
    }
    var listA = (IEnumerable<Model.EF.T5SArea>)ViewBag.listArea;
    var dsA = new List<SelectListItem>();
    foreach (var item in listA)
    {
        dsA.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
            Selected = true
        });
    }
}
@section jsFooter
{
    <script src="/Assets/theme3/plugins/datepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(function () {
            $('.form_datetime').datetimepicker({
                format: 'mm/dd/yyyy hh:ii',
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
            });
            $('.select2').select2()

            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-red',
                radioClass: 'iradio_flat-red'
            })
        })
    </script>
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#Image').val(url);

                $('#hinh').attr('src', $('#Image').val());
            };
            finder.popup();
        })
        $('#btnSelectImage2').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#Image2').val(url);

                $('#hinh2').attr('src', $('#Image2').val());
            };
            finder.popup();
        })


    </script>

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function () {
        $(window).keydown(function (event) {
            if (event.keyCode == 13) {
                event.preventDefault();
                return false;
            }
        });
        $('#hinh').attr('src', $('#Image').val());
        $('#hinh2').attr('src', $('#Image2').val());
    });
</script>


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Defect 5S</h3>
    </div>
    @using (Html.BeginForm("Edit", "T5SDefect", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-6 col-md-3">
                    <div class="form-group">
                        <label class="control-label">Bộ Phận</label>
                        @Html.DropDownListFor(model => model.IDZone, dsZ, new { @class = "form-control select2", @style = "width: 100%;" })
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="form-group">
                        <label class="control-label">Khu Vực</label>
                        @Html.DropDownListFor(model => model.IDArea, dsA, new { @class = "form-control select2", @style = "width: 100%;" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Loại vấn đề:</label>

                        <div class="row">
                            <div class="col-6 col-md-3">@Html.CheckBoxFor(model => model.Type1, new { @class = "flat-red" }) 5S</div>
                            <div class="col-6 col-md-3">@Html.CheckBoxFor(model => model.Type2, new { @class = "flat-red" }) An toàn</div>
                            <div class="col-6 col-md-3">@Html.CheckBoxFor(model => model.Type3, new { @class = "flat-red" }) Chất lượng</div>
                            <div class="col-6 col-md-3">@Html.CheckBoxFor(model => model.Type4, new { @class = "flat-red" }) Sản Xuất</div>
                        </div>

                    </div>


                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-12">Hiện trạng vấn đề</label>
                        @Html.TextAreaFor(model => model.Name, new { @class = "form-control", @rows = "2" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <label class="control-label">Hình ảnh vấn đề</label>
                        <div class='input-group'>
                            @Html.TextBoxFor(model => model.Image, new { @class = "form-control", @style = "background: #f9d7d4;", @placeholder = "chọn hình" })
                            <div class=" input-group-append">
                                <span class="input-group-text">
                                    <a id="btnSelectImage" href="#"><span class="fa fa-image"></span></a>
                                </span>

                            </div>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <img src="" id="hinh" class="img-thumbnail" style="width:100%">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="col-md-12">
                        <label class="control-label">Hình ảnh đã khắc phục</label>
                        <div class='input-group'>
                            @Html.TextBoxFor(model => model.Image2, new { @class = "form-control", @style = "background: #f9d7d4;", @placeholder = "chọn hình " })
                            <div class=" input-group-append">
                                <span class="input-group-text">
                                    <a id="btnSelectImage2" href="#"><span class="fa fa-image"></span></a>
                                </span>

                            </div>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <img src="" id="hinh2" class="img-thumbnail" style="width:100%">
                    </div>
                </div>
                
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-12">Hướng khắc phục</label>
                            @Html.TextAreaFor(model => model.Solution, new { @class = "form-control", @rows = "4" })
                        </div>
                    </div>
                    <div class="col-6">
                        <label>Deadline:<span data-toggle="tooltip" title="@Model.DeadlineHistory"><i class="fa fa-info-circle"></i></span></label>
                        <div class="input-group date form_datetime" data-link-field="Deadline">
                            @if(Model.Deadline!=null)
                                {<input class="form-control" type="text" value='@Model.Deadline.Value.ToString("MM/dd/yyyy HH:mm")' readonly>}
                            else
                                 {<input class="form-control" type="text" value='' readonly>}                                                                                                       
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                        @Html.TextBoxFor(model => model.Deadline, new { @class = "form-control", @type = "hidden" })
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="control-label">Khắc phục xong</label>
                            <div class="row">
                                <div class="col-md-6">@Html.CheckBoxFor(model => model.Fixed, new { @class = "flat-green" }) BP xác nhận @if (Model.FixDate != null)
                                {<span data-toggle="tooltip" title='@Model.Fixer - @Model.FixDate.Value.ToString("MM/dd/yyyy HH:mm")'><i class="fa fa-info-circle"></i></span>}</div>
                                <div class="col-md-6">@Html.CheckBoxFor(model => model.Checked, new { @class = "flat-green" }) Accessor xác nhận @if (Model.CheckDate != null)
                                {<span data-toggle="tooltip" title='@Model.Checker - @Model.CheckDate.Value.ToString("MM/dd/yyyy HH:mm")'><i class="fa fa-info-circle"></i></span>}</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-12">Accessor ghi chú</label>
                            @Html.TextAreaFor(model => model.NoteA, new { @class = "form-control", @rows = "4" })
                        </div>
                    </div>
                </div>
            
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Lưu thông tin</button>
        </div>


    }
</div>
