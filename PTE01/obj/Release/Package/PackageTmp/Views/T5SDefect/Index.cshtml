@model PagedList.IPagedList<Model.View.T5SView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>5S Defect</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            More <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/T5SDefect/SearchAdvance" style="color:black;" class="dropdown-item">Advance Search</a>
                            @*<a href="/T5SDefect/Report1/2020" style="color:black;" class="dropdown-item">Thống kê Năm 2020</a>
                            <a href="/T5SDefect/Report1/2021" style="color:black;" class="dropdown-item">Thống kê Năm 2021</a>*@
                            <a href="/T5SDefect/Report1/2022" style="color:black;" class="dropdown-item">Thống kê Năm 2022</a>
                        </div>
                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "T5SDefect", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="/T5SDefect/Create">Thêm Defect mới<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>
                    </li>
                    @foreach (var item in Model)
                    {
                <li>
                   
                    <a href="/T5SDefect/Edit/@item.ID"><span class="text">@item.DefectName</span></a>
                    @if (item.Deadline != null)
                    {<span class="badge badge-info"><i class="fa fa-clock-o"></i>Deadline @item.Deadline.Value.ToString("dd/MM/yyyy hh:mm") </span>}


                    <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                        <span class="badge bg-warning">ReCheck</span>
                        @Html.Raw(item.Checked ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                    </a>
                    <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                        <span class="badge bg-warning">Khắc Phục</span>
                        @Html.Raw(item.Fixed ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                    </a>
                    <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                        <span class="badge bg-warning">Giải pháp</span>
                        @Html.Raw(item.Soluted ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                    </a>

                    <br />
                    <span style="float:left"> 
                        <div class="tooltipImage" style="background: url('@item.CreateImage');background-size: 35px;">
                            <span>
                                <img src="@item.CreateImage" style="width: 100px;">
                                <p>@item.CreateBy</p>
                            </span>
                        </div>
                    ( Số phiếu: @item.ID )</span>
                    <div class="tooltipImage" style="background: url('@item.PICImage');background-size: 35px;">
                        <span>
                            <img src="@item.PICImage" style="width: 100px;">
                            <p>@item.PIC</p>
                        </span>
                    </div>
                    <span class="badge badge-warning"><i class="fa fa-briefcase"></i> @item.AreaName </span>
                    <span class="badge badge-warning"><i class="fa fa-briefcase"></i> @item.ZoneName </span>
                    <span class="badge badge-info"><i class="fa fa-calendar"></i> tạo ngày: @item.CreateDate.ToString("dd/MM/yyyy") </span>
                    @*<span class="badge badge-dark"><i class="fa fa-clock-o"></i>ngày cần sd @item.Deadline.ToString("dd/MM/yyyy hh:mm") </span>*@
                </li>
                    }

                </ul>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/T5SDefect/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>


