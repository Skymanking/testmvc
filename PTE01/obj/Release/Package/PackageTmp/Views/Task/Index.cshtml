@model PagedList.IPagedList<Model.View.TaskView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";

    string itMe = (string)ViewBag.itMe;
    IEnumerable<Model.View.UserView2> lInferior = ViewBag.lInferior;
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Nhiệm Vụ</h3>
                <div class="card-tools">
                    @*<a class="btn btn-sm btn-warning float-right" href="/Task/Report"><i class="fa fa-print" style="font-size:24px;"></i></a>*@               
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/Task/Index?searchString=filterC0" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #dc3545;"></i>Chưa xong + trễ Deadline</a>
                            <a href="/Task/Index?searchString=filterC1" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #ffc107;"></i>Chưa xong + chưa đến Deadline</a>
                            <a href="/Task/Index?searchString=filterC-3" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #edc2f9;"></i>Kết quả chưa đạt</a>
                            <a href="/Task/Index?searchString=filterC2" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #17a2b8;"></i>Đã xong + trễ Deadline</a>
                            <a href="/Task/Index?searchString=filterC3" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #28a745;"></i>Đã xong + đúng Deadline</a>
                            <a href="/Task/Index?searchString=filterC-1" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #495057;"></i>Nhiện vụ bị hủy</a>
                            <a href="/Task/Index?searchString=filterC-2" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #495057;"></i>Nhiện vụ bị từ chối</a>
                            <a href="/Task/Index?searchString=filterC-4" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #495057;"></i>Nhiện vụ bị tạm dừng</a>
                            <a href="/Task/Index?searchString=filterCA" style="color:black;" class="dropdown-item"><i class="fa fa-tasks fa-2x"></i>Tất cả nhiệm vụ</a>
                            <a href="/Calendar/Personal" style="color:black;" class="dropdown-item"><i class="fa fa-calendar-check-o fa-2x"></i> Lịch của tôi</a>
                            <a href="/Task/Report" style="color:black;" class="dropdown-item"><i class="fa fa-print fa-2x" ></i> Tìm kiếm nâng cao + Report</a>
                            <a href="/Task/Report2" style="color:black;" class="dropdown-item"><i class="fa fa-print fa-2x"></i>Report theo Bộ Phận</a>
                        </div>
                        <a href="/Task/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "Task", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                           
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="/Task/Create2" data-toggle="tooltip" title="Thêm nhiệm vụ mới ">Thêm nhiệm vụ mới<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>

                    </li>
                    @foreach (var item in Model)
                    {
                        @MyHelper.ViewTaskinTask(item, null)
                    }

                </ul>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Task/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
