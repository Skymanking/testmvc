@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme2.cshtml";
    var listLine = (List<Model.EF.WorkCenter>)ViewBag.Linek;
    var temp = (List<Model.View.PlaningView1>)ViewBag.temp;
}
@section jsFooter
        {
    <script src="~/Scripts/CreateRecordProductionInXi.js"></script>
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script>
        $(function () {
            $(".date1").datepicker();
            $("#dates").datepicker();
            $("#end").datepicker();
            $("#StartDate").datepicker();
            $("#EndDate").datepicker();
            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('.select2').select2()
        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <select class="form-control select2" id="lines" name="lines">
                    @foreach (var item in listLine)
                    {
                        if (ViewBag.lines == item.ID)
                        {
                            <option value="@item.ID" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.ID">@item.Name</option>}

                    }

                </select>
            </div>

            <div class="col-4">
                <div class="bootstrap-timepicker">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" id="dates" name="dates" class="form-control"  readonly="readonly" value='@if (ViewBag.dates != null && ViewBag.dates !=""){@ViewBag.dates}else{@DateTime.Now.ToShortDateString()}'><br>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 text-center">
                <div class="form-group">
                    <a class="btn btn-primary" id="inbaocao">Tìm kiếm</a>
                </div>
            </div>
        </div>
        @*
            <script src="~/Scripts/jquery-1.9.1.min.js"></script>*@
        <script>
            $(document).ready(function () {

                $("#inbaocao").click(function () {
                    var iditems = $("#iditems").val();
                    var lines = $('#lines').val();
                    var dates = $('#dates').val();
                    if (lines == "" || dates == "") {
                        alert("chưa nhập đủ thông tin");
                        $('#inbaocao').attr("href", '#');
                    }
                    else { $('#inbaocao').attr("href", '/RecordProduction/Index2InXi?iditems=&lines=' + lines + '&dates=' + dates); }

                });
            });

        </script>
    </div>


</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">          
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="padding:3px">Kế Hoạch</th>                             
                                <th style="padding:3px">Cập Nhật</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in temp)
                            {
                                <tr>
                                    <td>
                                        <img class="img-fluid pad" src="~/Assets/theme3/dist/img/sanxuat.jpg">
                                        <p>@item.StartDate.ToString("dd/MM/yyyy HH:mm")-@item.EndDate.ToString("dd/MM/yyyy HH:mm")</p>                                  
                                        <span style="font-size:20px">  @item.ItemName </span>
                                        <p style="font-size:16px; color:red;"> @item.ItemID - SL:<strong> @item.Quantity</strong></p>
                                        <p style="font-size:16px; color:blue;">Số SP đã gắn:<strong> @item.SumOKOUT</strong></p>

                                    </td>
                                    <td>
                                        <div class="input-group" style="height: 50px; margin-bottom: 20px;">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" style="font-size: 22px;" id="Tok_@item.ID"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                            </div>
                                            <input class="form-control" id="slok_@item.ID" placeholder="SL OK" type="number" value="@item.SumNG" style=" font-size: 30px; color: green;">
                                            <div class="input-group-prepend">
                                                <a class="input-group-text" style="font-size: 22px;" id="Cok_@item.ID"> <i class="fa fa-plus" aria-hidden="true"></i></a>
                                            </div>
                                        </div>
                                        @*<input class="form-control" id="slok_@item.ID" placeholder="Số lượng" type="number" style=" font-size: 30px; width: 140px; color: green;">*@
                                    @*<input class="form-control" id="ngayep_@item.ID" placeholder="Ngày Ép" type="text" style=" font-size: 22px; width: 140px; color: red;">*@
                                        <div class="bootstrap-timepicker">
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <input type="text" id="ngayep_@item.ID" name="dates" class="date1 form-control" readonly="readonly" value='@if (ViewBag.dates != null && ViewBag.dates !=""){@ViewBag.dates}else{@DateTime.Now.ToShortDateString()}'><br>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>  
                                        <div class="input-group" style="height: 50px; margin-bottom: 20px;">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" style="font-size: 22px;"><i class="fa fa-credit-card" aria-hidden="true"></i></span>
                                            </div>
                                            <input class="form-control" id="tagid_@item.ID" placeholder="quẹt thẻ" type="text" style=" font-size: 22px; color: black;">

                                        </div>                                 
                                        @*<input class="form-control" id="tagid_@item.ID" placeholder="quẹt thẻ" type="text" style=" font-size: 18px; width: 140px; color: blue;">*@
                                       
                                        <a class="btn-saveitem btn btn-app" data-planid="@item.ID" data-itemid="@item.ItemID" data-lineid="" data-stepname="" data-slok="" data-ngayep="" data-tagid="" id="save_@item.ID" style="color: #dc3545; background: #c0daf7; font-weight: bold; height: 60px; width: 100%; margin-left: 0; padding-top: 10px;">
                                            <i class="fa fa-save"></i> Lưu thông tin
                                        </a>                                        
                                    </td>

                                </tr>
                                <script>
                                    $(document).ready(function () {
                                        $('#save_@item.ID').attr("data-lineid", $('#lines').val());
                                        $('#save_@item.ID').attr("data-stepname", $('#step').val());
                                        $('#save_@item.ID').hover(function () {
                                            $('#save_@item.ID').attr("data-slok", $('#slok_@item.ID').val());
                                            $('#save_@item.ID').attr("data-ngayep", $('#ngayep_@item.ID').val());
                                            $('#save_@item.ID').attr("data-stepname", $('#step').val());
                                            $('#save_@item.ID').attr("data-tagid", $('#tagid_@item.ID').val());
                                        });
                                        $('#Cok_@item.ID').click(function () {
                                            var slok = parseInt($('#slok_@item.ID').val()) +1 ;
                                            $('#slok_@item.ID').val(slok);
                                        });
                                        $('#Tok_@item.ID').click(function () {
                                            var slok = parseInt($('#slok_@item.ID').val()) - 1;
                                            $('#slok_@item.ID').val(slok);
                                        });

                                    });

                                </script>

                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
