@model Model.EF.RecordProduction
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

@using (Html.BeginForm("Edit", "RecordProduction", FormMethod.Post))
{
@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Cập nhật Ghi nhận SX</h3>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">ID</label>
                            @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @disabled = "disabled" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">ID Kế Hoạch</label>
                            @Html.TextBoxFor(model => model.PlanID, new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Line</label>
                            @Html.TextBoxFor(model => model.LineID, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Mã Sản Phẩm</label>
                            @Html.TextBoxFor(model => model.ItemID, new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Công Đoạn</label>
                            @Html.TextBoxFor(model => model.StepName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Công Đoạn trước</label>
                            @Html.TextBoxFor(model => model.PreRecordID, new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Người tạo</label>
                            @Html.TextBoxFor(model => model.CreateBy, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Ngày tạo</label>
                            @Html.TextBoxFor(model => model.CreateDate, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label col-md-12">History</label>
                            @Html.TextAreaFor(model => model.History, new { @class = "form-control",@row="4" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Số lượng OK</label>
                            @Html.TextBoxFor(model => model.SLOK, new { @class = "form-control", @style = "font-size: 42px;background: #e1f5e4;" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Số lượng NG</label>
                            @Html.TextBoxFor(model => model.SLNG, new { @class = "form-control", @style = "font-size: 42px;background: #f5babf;" })
                        </div>
                    </div>
                  


                </div>


            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Lưu thông tin</button>
            </div>
        </div>

    </div>

</div>
}