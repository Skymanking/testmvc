@model List<Model.ERP.jobmatl_mst>
@{
    ViewBag.Title = "check_BOMDetail";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListJob = Model.GroupBy(x => x.job);
}


<div class="card-body">
    <div class="row">
        @foreach (var item1 in ListJob)
        {
            <div class="col-md-6">
                <table class="table table-striped table-bordered table-hover" id="Warehouse">
                    <thead>
                        <tr>

                            <th>Job</th>
                            <th>SL Item</th>
                            <th>Estimate</th>
                            <th>SL Item</th>
                            <th>Current</th>
                            <th>SL Item</th>
                            <th>Xem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item1.Key == item.job)
                            {
                                <tr id="row_@item.job">
                                    <td>@item.job</td>
                                    <td>@item.oper_num</td>
                                    <td>@item.sequence</td>
                                    <td>@item.item</td>
                                    <td>@item.description</td>
                                    <td>@item.units</td>
                                    <td>@item.u_m</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <br />
                <br />
                <br />
                
            </div>
        }
        </div>
        
    </div>
