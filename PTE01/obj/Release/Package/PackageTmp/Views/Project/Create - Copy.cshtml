<script>
    var count = $('#gvCustomers tr').length - 1;
    $(document).ready(function () {


        function addRow() {
            var html =
            '<tr id="row_1">' +
            '<td> <input class="form-control" data-val="true" id="detail_' + count + '__Name" name="detail[' + count + '].Name"  type="text" value=""> </td>' +
           '<td><div class="input-group date form_datetime" data-link-field="detail[' + count + '].StartDate"><input class="form-control" type="text" id="detail_' + count + '__StartDate" name="detail[' + count + '].StartDate" value="" readonly><span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span><span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span><div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-calendar"></i></span></div></div><input type="hidden" id="detail_' + count + '__StartDate" name="detail[' + count + '].StartDate" value="" /></td>' +
           '<td><div class="input-group date form_datetime" data-link-field="detail[' + count + '].StartDate"><input class="form-control" type="text" id="detail_' + count + '__EndDate" name="detail[' + count + '].EndDate" value="" readonly><span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span><span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span><div class="input-group-prepend"><span class="input-group-text"><i class="fa fa-calendar"></i></span></div></div><input type="hidden" id="detail_' + count + '__EndDate" name="detail[' + count + '].EndDate" value="" /></td>' +
             '</tr>'
            count = count + 1;
            $(html).appendTo($("#gvCustomers"))
        };
        $("#btnAdd").click(addRow);



        $('.table tbody').on('click', '.xoadongR', function () {

            var sodong = $(this).attr("data-sodong") - 1;
            $('#detail_' + sodong + '__ItemID').attr("value", "");
            $(this).closest('tr').hide();


        });


    });
</script>





}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Dự Án Mới</h3>
    </div>
    @using (Html.BeginForm("Create", "Project", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label class="control-label col-md-12">Tên Dự Án</label>
                    @Html.TextBoxFor(model => model.item.Name, new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label class="control-label col-md-12">Tên Khách Hàng</label>
                    @Html.TextBoxFor(model => model.item.Customer, new { @class = "form-control" })
                </div>

                <div class="col-md-2">
                    <label>Ngày bắt đầu:</label>
                    <div class="input-group date form_datetime" data-link-field="item.StartDate">
                        <input class="form-control" type="text" id="item_StartDate" name="item.StartDate" value="" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <input type="hidden" id="item_StartDate" name="item.StartDate" value="" />
                </div>
                <div class="col-md-2">
                    <label>Ngày kết thúc:</label>
                    <div class="input-group date form_datetime" data-link-field="item.EndDate">
                        <input class="form-control" type="text" id="item_EndDate" name="item.EndDate" value="" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <input type="hidden" id="item_EndDate" name="item.EndDate" value="" />
                </div>

                <div class="col-md-12">
                    <label class="control-label col-md-12">Diễn giải chi tiết</label>
                    @Html.TextAreaFor(model => model.item.Description, new { @class = "form-control", @rows = "4" })
                </div>
            </div>
            <div class="rows">
                <div class="form-group" style="padding-top:20px;">
                    <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                        <thead>
                            <tr>
                                <th>Key milestone</th>
                                <th width="210px">StartDate</th>
                                <th width ="210px">EndDate</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="row_0" class="clonedInput">                             
                                <td> @Html.TextBoxFor(model => model.detail[0].Name, new { @class = "form-control", @placeholder = "" })</td>
                                <td >
                                    <div class="input-group date form_datetime" data-link-field="detail[0].StartDate">
                                        <input class="form-control" type="text" id="detail_0_StartDate" name="detail[0].StartDate" value="" readonly>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                    <input type="hidden" id="detail_0_StartDate" name="detail[0].StartDate" value="" />
                                </td>
                                <td>
                                    <div class="input-group date form_datetime" data-link-field="detail[0].EndDate">
                                        <input class="form-control" type="text" id="detail_0_EndDate" name="detail[0].EndDate" value="" readonly>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                    <input type="hidden" id="detail_0_EndDate" name="detail[0]EndDate" value="" />
                                </td>
                            </tr>
                            <tr id="row_1" class="clonedInput">
                                <td> @Html.TextBoxFor(model => model.detail[1].Name, new { @class = "form-control", @placeholder = "" })</td>
                                <td>
                                    <div class="input-group date form_datetime" data-link-field="detail[1].StartDate">
                                        <input class="form-control" type="text" id="detail_1_StartDate" name="detail[1].StartDate" value="" readonly>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                    <input type="hidden" id="detail_1_StartDate" name="detail[1].StartDate" value="" />
                                </td>
                                <td>
                                    <div class="input-group date form_datetime" data-link-field="detail[1].EndDate">
                                        <input class="form-control" type="text" id="detail_1_EndDate" name="detail[1].EndDate" value="" readonly>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                    <input type="hidden" id="detail_1_EndDate" name="detail[1].EndDate" value="" />
                                </td>
                            </tr>
                           
                        </tbody>
                    </table>
                    



                    <div id="addDelButtons" style="margin-top: 10px;" class="col-md-4">
                        <button type="button" id="btnAdd" class="btn btn-danger">Thêm dòng vật tư</button>
                    </div>


                </div>

            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Lưu thông tin</button>
        </div>
    }
</div>

