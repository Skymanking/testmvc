@model List<Model.EFBIO.ViewOT>

@{
    ViewBag.Title = "ApproveOT";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listInterval = (List<Model.EFBIO.att_timeinterval>)ViewBag.Timeinterval;
    var ListDept = (List<Model.EFBIO.personnel_department>)ViewBag.ListDept;
}
@section jsFooter
{

    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="/Assets/theme3/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/theme3/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#start").datepicker();
            $("#end").datepicker();
            $("#StartDate").datepicker();
            $("#EndDate").datepicker();
            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('.select2').select2()
            $('.time1').timepicker({
                showInputs: false,
                showMeridian: false
            })
            $('.time2').timepicker({
                showInputs: false,
                showMeridian: false
            })
            $('#baocom').DataTable({
                "pageLength": 20,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": false,
                "autoWidth": false
            });
        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="~/Scripts/BioTime.js"></script>

<div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Tăng ca</h3>
            <div class="card-tools">
                <div class="btn-group" style="height:40px">
                    <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                        More
                    </button>
                    <div class="dropdown-menu float-right" role="menu">
                        @*<a class="dropdown-item" href="/PTE_baocom/Report2" style="color:#000">Danh sách đã đặt</a>
                            <a class="dropdown-item" href="/PTE_baocom/Index3" style="color:#000">Đăng ký Cơm</a>
                            <a class="dropdown-item" href="/PTE_baocom/Index2" style="color:#000">Thay đổi Cơm</a>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("ApproveOT", "BioTime", FormMethod.Get))
            {
                <div class="row">

                    <div class="col-md-2">
                        <label class="control-label">Từ:</label>
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" id="start" name="Start" class="form-control" readonly="readonly" value='@ViewBag.Start.ToShortDateString()'><br>
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="control-label">Đến:</label>
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" id="end" name="End" class="form-control" readonly="readonly" value='@ViewBag.End.ToShortDateString()'><br>
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="control-label">Phòng ban</label>
                        <select class="form-control" name="depID">
                            @if (ListDept != null)
                            {
                                <option value="0">Tất cả</option>
                                foreach (var dep in ListDept)
                                {
                                    if (dep.id == ViewBag.DepID)
                                    {
                                        <option value="@dep.id" selected>@dep.dept_name</option>
                                    }
                                    else
                                    {
                                        <option value="@dep.id">@dep.dept_name</option>
                                    }
                                }
                            }

                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="control-label">Status</label>
                        <select class="form-control" name="Status">
                            @if (ListDept != null)
                            {
                                <option value="0">Tất cả</option>
                                <option value="1">Đang xử lý</option>
                                <option value="2">Chấp nhận</option>
                                <option value="3">Từ chối</option>

                            }

                        </select>
                    </div>
                    <div class="datcom col-md-1">
                        <label>Tìm kiếm</label><br />

                        <button type="submit" class="btn btn-primary" id="luulai">Tìm</button>
                    </div>
                </div>}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-success card-outline">
                <div class="card-body">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="table-responsive ">
                        <table class="table table-striped table-bordered table-hover " id="baocom">
                            <thead>
                                <tr>
                                    <th width="30px">@*<input type="checkbox" class="checkall">*@</th>
                                    <th>Mã nhân viên</th>
                                    <th>Tên nhân viên</th>
                                    <th>Phòng ban</th>
                                    <th>Từ</th>
                                    <th>Đến</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody class="parent">
                                @if (Model == null)
                                {
                                    <tr>Không có</tr>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <input type="checkbox" id="@item.id" onchange="onChange(this)">
                                            </td>
                                            <td>@item.EmpCode</td>
                                            <td>@item.EmpName</td>
                                            <td>@item.EmpDep</td>
                                            <td>@item.Start</td>
                                            <td>@item.End</td>
                                            @if (item.approval_status == 1)
                                            {
                                                <td style="background-color:#0094ff">Đang xử lý</td>
                                            }
                                            else if (item.approval_status == 2)
                                            {
                                                <td style="background-color: #00ff90">Đã duyệt</td>
                                            }
                                            else if (item.approval_status == 3)
                                            {
                                                <td style="background-color: #ff6a00">Từ chối</td>
                                            }

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("ApproveOT", "BioTime", FormMethod.Post))
    {
        <div class="card-footer">
            <input type="hidden" id="ListEmp" name="StrID" />
            <input type="hidden" id="type" name="type" />
            <div class=" row">
                <div class="col-4"><button id="Approve" class="btn btn-success" onclick="ApproveOT(1)">Chấp thuận</button></div>
                <div class="col-4"> <button id="Delete" class="btn btn-danger" onclick="ApproveOT(2)">Xoá</button></div>
                <div class="col-4"> <button id="Revoke" class="btn btn-danger" onclick="ApproveOT(0)">Từ chối</button></div>
            </div>


        </div>
    }
</div>
