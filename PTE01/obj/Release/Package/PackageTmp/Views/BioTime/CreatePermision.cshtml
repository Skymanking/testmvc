@model Model.EF.BIOPermistion
@{
    ViewBag.Title = "CreatePermision";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listUser = (List<Model.View.UserView2>)ViewBag.ListUser;
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />
<script src="~/Scripts/BioTime.js"></script>
<div class="row">

    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Create Permision</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">

                    @using (Html.BeginForm("CreatePermision", "BioTime", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12">
                            <div class="row">
                                <div class='col-md-4'>
                                    <label class="control-label">Name</label>
                                    @Html.TextBoxFor(model => model.Permistion, new { @class = "form-control", @id = "Permistion" })
                                </div>
                                <div class='col-md-8'>
                                    <label class="control-label">User</label>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "UserName", @style = "display: none" })
                                    <div id="chosenewmen">
                                        <select data-placeholder="Ca" multiple class="chosen-select form-control" id="User" style="width:99%; ">
                                            @foreach (var member in listUser)
                                            {
                                                <option value="@member.UserName">@member.FullName</option>
                                            }
                                        </select>
                                        <script type="text/javascript">
                                            $(".chosen-select").chosen({
                                                no_results_text: "Không tìm thấy:"
                                            });
                                            $('#shift_chosen').css({ "width": "100%" });
                                        </script>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="nutsave btn btn-primary" onclick="CreatePermision()">Lưu thông tin</button>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>
