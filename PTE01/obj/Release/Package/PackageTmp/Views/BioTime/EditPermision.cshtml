@model Model.EF.BIOPermistion
@{
    ViewBag.Title = "CreatePermision";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listUser = (List<Model.View.UserView2>)ViewBag.ListUser;
    var listUserP = (List<Model.EF.User>)ViewBag.listUserP;
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />
<script src="~/Scripts/BioTime.js"></script>
<div class="row">

    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Create Permision</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">

                    @using (Html.BeginForm("EditPermision", "BioTime", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-12">
                            <div class="row">
                                <div class='col-md-4'>
                                    <label class="control-label">Name</label>
                                    @Html.TextBoxFor(model => model.Permistion, new { @class = "form-control", @id = "Permistion", @readonly = true })
                                </div>
                                <div class='col-md-7'>
                                    <label class="control-label">User</label>
                                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @id = "UserName", @style = "display: none" })
                                    <div id="chosenewmen">
                                        <select data-placeholder="User" multiple class="chosen-select form-control" id="User" style="width:99%; ">
                                            @foreach (var member in listUser)
                                            {
                                                <option value="@member.UserName">@member.FullName</option>
                                            }
                                        </select>
                                        <script type="text/javascript">
                                            $(".chosen-select").chosen({
                                                no_results_text: "Không tìm thấy:"
                                            });
                                            $('#User_chosen').css({ "width": "100%" });
                                        </script>
                                    </div>
                                </div>
                                <div class='col-md-1'>
                                    <label class="control-label">Status</label>
                                    @Html.CheckBoxFor(model => model.Status, new { @class = "form-control", @style = "height: 30px" })
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="nutsave btn btn-primary" onclick="EditPermision()">Lưu thông tin</button>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td style="width:20%">UserName</td>
                    <td style="width:10%">Code</td>
                    <td>Name</td>
                    <td style="width:5%">Revoke</td>
                </tr>

            </thead>
            <tbody id="tableP">
                @foreach (var user in listUserP)
                {
                    <tr id="@user.Username">
                        <td>@user.Username</td>
                        <td>@user.CodeID</td>
                        <td>@user.FullName</td>
                        <td onclick="Revoke('@Model.Permistion', '@user.Username')"><i class="fa fa-ban" style="color:red"></i></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
