@{
    ViewBag.Title = "RequestForm";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<SelectListItem> listVT = new List<SelectListItem>();
    var Type = new List<SelectListItem>();
    Type.Add(new SelectListItem
    {
        Value = "0",
        Text = "Sản phẩm mới",
    });
    Type.Add(new SelectListItem
    {
        Value = "1",
        Text = "Cải tiến",
    });
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo mới Phiếu Y/C Gia cồng hàng mẫu </h3>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Lý do</label>
            <input type="text" class="form-control" id="" placeholder="Lý do">
        </div>
        <div class="col-md-2">
            <label class="control-label">Loại</label>
            <select class="form-control">
                @foreach (var item in Type)
                {
                    <option value="@item.Value">@item.Text</option>
                }

            </select>
        </div>
        <div class=" col-md-4">
            <label class="control-label">Chọn vật tư muốn đề nghị</label>
            <div class='input-group'>
                @Html.DropDownList("abc", listVT, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-12">
            <label class="control-label">Ghi chú</label>
            <textarea class="form-control" rows="3"></textarea>
        </div>
        <br />
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" onclick="">Tạo phiếu</button>
            </div>

        </div>
    </div>
</div>
