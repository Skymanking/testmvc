@model List<Model.EF.ProcessRequestForm1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>DS Phiếu yêu cầu</h3>

                <div class="card-tools">
                    <a href="/ProcessRequestForm/CreateRequest" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>

                    @*<a class="btn btn-warning float-right" href="/ProcessRequest/SearchAdvance1">Advanced Search</a>*@
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "ProcessRequestForm", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    @foreach (var item in Model)
                    {
                        <li>
                            <div class="tooltipImage" style="background: url('@item.Img');background-size: 35px;">
                                <span>
                                    <img src="@item.Img" style="width: 100px;">
                                    <p>@item.UserName</p>
                                </span>
                            </div>
                            @if (item.Status)
                            {
                                <a href="/ProcessRequestForm/Edit/@item.ID"><span>@item.Name</span></a>
                            }
                            else
                            {
                                <a href="/ProcessRequestForm/Edit/@item.ID" style="color:orangered"><span>@item.Name (Cancel)</span></a>
                            }
                            <br />
                            <span class="badge badge-warning"><i class="fa fa-briefcase"></i> @item.Dep </span>
                            <span class="badge badge-info"><i class="fa fa-clock-o"></i> @item.CreateDate.Value.ToShortDateString() </span>
                            <span> <a href="/ProcessRequestForm/Edit/@item.ID"><span style="color:black">(<i aria-hidden="true" style="font-size: 22px;color: #28a745;"></i> ID: @item.ID)</span></a></span>

                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                                <span class="badge bg-warning">Approved</span>
                                @Html.Raw(item.Approve1 ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 35px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 35px;'></span>")
                            </a>
                            <br />

                        </li>

                    }

                </ul>
            </div>
        </div>
    </div>
</div>