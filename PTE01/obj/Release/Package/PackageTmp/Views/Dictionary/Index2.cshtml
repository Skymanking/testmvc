@model PagedList.IPagedList<Model.View.DictionaryView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Từ Điển</h3>

                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            Filter <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="~/Dictionary/Index2" style="color:black;" class="dropdown-item">Tất cả</a>
                            <a href="~/Dictionary/Index2?searchString=Kiến+Thức+Chung" style="color:black;" class="dropdown-item">Kiến Thức Chung</a>
                            <a href="~/Dictionary/Index2?searchString=Quản+Lý" style="color:black;" class="dropdown-item">Quản Lý</a>
                            <a href="~/Dictionary/Index2?searchString=Kỹ+Thuật+-+Khuôn" style="color:black;" class="dropdown-item">KT - Khuôn</a>
                            <a href="~/Dictionary/Index2?searchString=Kỹ+Thuật+-+Ép+Nhựa" style="color:black;" class="dropdown-item">KT - Ép Nhựa</a>
                            <a href="~/Dictionary/Index2?searchString=Kỹ+Thuật+-+Xi+Mạ" style="color:black;" class="dropdown-item">KT - Xi Mạ</a>
                            <a href="~/Dictionary/Index2?searchString=Chất+Lượng+-+ISO" style="color:black;" class="dropdown-item">CL - ISO</a>
                            <a href="~/Dictionary/Index2?searchString=Chất+Lượng+-+IATF" style="color:black;" class="dropdown-item">CL - IATF</a>
                            <a href="~/Dictionary/Index2?searchString=Chất+Lượng+-+Tiêu+Chuẩn" style="color:black;" class="dropdown-item">CL - Tiêu Chuẩn</a>
                            <a href="~/Dictionary/Index2?searchString=Toyota+Project" style="color:black;" class="dropdown-item">Toyota Project</a>
                            <a href="~/Dictionary/Index2?searchString=Honda+Project" style="color:black;" class="dropdown-item">Honda Project</a>
                            <a href="~/Dictionary/Index2?searchString=Vinfast+Project" style="color:black;" class="dropdown-item">Vinfast Project</a>
                            <a href="~/Dictionary/Index2?searchString=Hyundai+Project" style="color:black;" class="dropdown-item">Hyundai Project</a>
                            <a href="~/Dictionary/Index2?searchString=TPM" style="color:black;" class="dropdown-item">TPM</a>
                        </div>
                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("Index2", "Dictionary", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            @*<script src="~/Scripts/jquery-1.9.1.min.js"></script>*@
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="~/Dictionary/Create2" data-toggle="tooltip" title="Thêm mới ">Thêm từ mới<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>
                    </li>
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="~/Dictionary/Edit2/@item.ID">(ID:@item.ID) <span class="text">@item.Name</span></a><span> (@item.Des1)</span>
                       
                            <span class="badge badge-info float-right" data-toggle="tooltip" title='chỉnh sửa: @item.ModifyDate.ToString("dd/MM/yyyy")'><i class="fa fa-user-circle"></i> @item.CreateBy </span>
                            <span class="badge badge-warning float-right" ><i class="fa fa-book"></i> @item.Cate </span>
                        </li>
                    }

                </ul>
            </div>
            <!-- The Modal -->

            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Dictionary/Create2"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index2", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>

