<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin từ vựng</h3>
    </div>
    @using (Html.BeginForm("Edit2", "Dictionary", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">


            <div class="row">
                <div class='col-md-9'>
                    <label class="control-label">Tên Từ Vựng</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>

                <div class='col-md-3'>
                    <label class="control-label">Thư Mục</label>
                    @Html.DropDownListFor(model => model.Category, listCate, new { @class = "form-control" })
                </div>

                <div class='col-md-12'>
                    <label class="control-label chude1">Diễn giải ngắn</label>
                    @Html.TextBoxFor(model => model.Des1, new { @class = "form-control" })
                </div>

                <div class='col-md-12'>
                    <label class="control-label noidung1">Chi tiết</label>
                    @Html.TextAreaFor(model => model.Des2, new { @class = "noidung form-control", @rows = "15" })
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
        </div>
    }
</div>


