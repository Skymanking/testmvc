@model Model.EF.Dictionary

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
@section jsFooter{
<script src="/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
<script src="/Assets/plugin/ckeditor/ckeditor.js"></script>
    <script>

        var editor = CKEDITOR.replace('txtContent', {
            customConfig: '/Assets/plugin/ckeditor/config.js',
        });
        var editor = CKEDITOR.replace('txtContent1', {
            customConfig: '/Assets/plugin/ckeditor/config.js',
        });
    </script>
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông Tin Kinh Nghiệm</h3>
    </div>
    @using (Html.BeginForm("Edit", "Dictionary", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">

            <div class="row">
                <div class='col-md-12'>
                    <label class="control-label">Tên Vấn Đề</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                <div class='col-md-12'>
                    <label class="control-label chude1">Nguyên Nhân</label>
                    @Html.TextAreaFor(model => model.Des1, new { @class = "form-control", id = "txtContent" })
                </div>

                <div class='col-md-12'>
                    <label class="control-label noidung1">Cách Giải Quyết</label>
                    @Html.TextAreaFor(model => model.Des2, new { @class = "form-control", id = "txtContent1" })
                </div>
            </div>

        </div>
        <div class="card-footer">
            <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
        </div>
    }
</div>
