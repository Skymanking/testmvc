@model PagedList.IPagedList<Model.View.DictionaryView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Kinh Nghiệm</h3>
                <div class="card-tools">
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "Dictionary", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="~/Dictionary/Create" data-toggle="tooltip" title="Thêm mới ">Thêm kinh nghiệm mới<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>
                    </li>
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="~/Dictionary/Edit/@item.ID">(ID:@item.ID) <span class="text">@item.Name</span></a>

                            <span class="badge badge-info float-right" data-toggle="tooltip" title='chỉnh sửa: @item.ModifyDate.ToString("dd/MM/yyyy")'><i class="fa fa-user-circle"></i> @item.CreateBy </span>

                        </li>
                    }

                </ul>
            </div>
            <!-- The Modal -->

            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Dictionary/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>

