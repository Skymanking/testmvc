@model PagedList.IPagedList<Model.View.MMRate1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    var userLogin = (string)ViewBag.userName;
    var countRated = (int)ViewBag.countRated;
    var sumRated = (int)ViewBag.sumRated;
    var countMM = (int)ViewBag.countMM;
    bool IsMM= ViewBag.IsMM;
    string chucvu=ViewBag.chucvu;
}

@if (IsMM == true || chucvu == "Giám Đốc" || chucvu == "Quản Trị" || chucvu == "Phó Giám Đốc")
{ 
<div class="row">

    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Mình Được Đánh Giá
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "MMRate", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-12">
                            <a class="btn btn-primary" href="/MMRate/Create">Thêm mới</a>
                            <a class="btn btn-success" href="/MMRate/Index2">Xem Danh Sách Mình Đã Đánh Giá</a>
                            <a class="btn btn-info" href="/MMRate/Index3">Xem Tổng Đánh Giá</a>
                            Số lần được đánh giá trong tháng: @countRated/@countMM - Tổng điểm: @sumRated
                        </div>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th style="width:40px">ID</th>
                                <th>User</th>
                                <th>Ngày tạo</th>
                                <th>Tổng điểm</th>
                                <th style="width:40px">Hành động</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.ID</td>
                                    <td>@item.UserRated</td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.SumPoint</td>
                                    <td width="120px"> 
                                            @Html.ActionLink("|Xem|  ", "View", new { ID = item.ID })
                                 </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
}
else
{ 

<div class="alert alert-danger" style="margin-top:50px;">
    <strong>Cảnh báo!</strong>  Chức năng này chỉ dành cho chức vụ Trưởng Phòng trở lên
</div>
}