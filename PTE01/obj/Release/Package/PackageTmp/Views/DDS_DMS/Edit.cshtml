@model Model.EF.DDS_DMS

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var Type = new List<SelectListItem>();
    Type.Add(new SelectListItem
    {
        Value = "0",
        Text = "Department DDS",
    });
    Type.Add(new SelectListItem
    {
        Value = "1",
        Text = "SC DDS",
    });
    var ListFactory = (List<Model.View.Dropdownlist2>)ViewBag.Factory;
    var Factory = new List<SelectListItem>();
    Factory.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn xưởng",
    });
    foreach (var item in ListFactory)
    {

        Factory.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });

    }
}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(function () {

            $('.select2').select2()
        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo DMS</h3>
    </div>
    @using (Html.BeginForm("Edit", "DDS_DMS", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên DMS</label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "Name", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Loại</label>
                                @Html.DropDownListFor(model => model.Type, Type, new { @ID = "Type", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Xưởng</label>
                                <select class="form-control select2" id="Factory" name="Factory">
                                    @foreach (var item in Factory)
                                    {
                                        if (item.Value == Model.Factory)
                                        {
                                            <option value="@item.Value" selected="selected">@item.Text</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

