@model List<Model.EF.CMMSCategory1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "CMMSDevice";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
@section jsFooter
{
    <script src="/Assets/theme3/plugins/datepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
    <script>
        $(function () {
            $("#start").datepicker();
            $("#end").datepicker();
            $("#StartDate").datepicker();
            $("#EndDate").datepicker();
            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('.select2').select2()
            $('.time1').timepicker({
                showInputs: false,
                showMeridian: false
            })
            $('.time2').timepicker({
                showInputs: false,
                showMeridian: false
            })
        })
    </script>

    <script src="~/Scripts/FindNameItem.js"></script>
    <script src="~/Scripts/CMMSCategory.js"></script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-12">

        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Xem danh sách hạng mục bảo trì</h3>

                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            More
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewListTrans" style="color:#000">Danh sách phiếu nhập xuất</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewDetailTrans" style="color:#000">Bảng kê nhập xuất kho</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewAmountTrans" style="color:#000">Check tồn kho hiện tại</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewAmountTrans2" style="color:#000">View tồn kho hiện tại</a>

                        </div>
                        <a href="/WarehouseTransaction/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>

                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("CMMSDevice", "CMMSCategory", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="SearchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <label class="control-label"></label>
                        <div class="bootstrap-timepicker">
                            <label style="font-size:30px">Hạng mục bảo trì trể/ đến hạn</label>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="baocom">
                    <thead>
                        <tr>
                            <th style="width:80px">ID</th>
                            <th>Thiết bị </th>
                            <th>Tên hạng mục </th>
                            <th style="width:150px">Chu kỳ </th>
                            <th style="width:200px">Ngày bảo trì gần nhất </th>
                            <th style="width:200px">Ngày bảo trì kế hoạch </th>
                            <th style="width:200px">Trạng thái </th>
                            <th style="width:100px">Chi tiết </th>
                        </tr>
                    </thead>
                    <tbody class="parent">

                        @foreach (var item in Model)
                        {
                            <tr id="row_@item.ID">
                                <td><span>@item.IDDevice</span> </td>
                                <td><span>@item.NameDevice</span> </td>
                                <td><span>@item.Name</span> </td>
                                <td><span style="font-size:20px">@item.Cycle </span> ngày</td>
                                @if (@item.MainDate != null)
                                {
                                    <td>@item.MainDate.Value.ToShortDateString()</td>
}
                                else
                                {
                                    <td></td>
}
                                <td>@item.Deadline.Value.ToShortDateString()</td>
                                <td>@item.Type</td>
                                <td><a href="/CMMSCategory/CMMSPerform/@item.IDDevice"><span class='fa fa-eye' style="font-size: 20px;"></span></a></td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

