@model List<Model.EF.CMMSDevice>
@{
    ViewBag.Title = "ViewListDivice";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<SelectListItem> listVT = new List<SelectListItem>();
    List<SelectListItem> listTB = new List<SelectListItem>();
}
@section jsFooter
{
    <script src="~/Scripts/FindNameItem.js"></script>
    <script src="~/Scripts/CMMSCategory.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Danh sách thiết bị bảo trì</h3>

                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            More
                        </button>
                        <div class="dropdown-menu float-right" role="menu">

                        </div>
                    </div>

                    <div style="float:left">
                        @using (Html.BeginForm("ViewListDivice", "CMMSCategory", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="SearchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <label style="color:cornflowerblue; font-size:30px">Thiết bị có hạng mục bảo trì</label>
                <table class="table table-striped table-bordered table-hover" id="baocom">
                    <thead>
                        <tr>
                            <th style="width:80px">ID </th>
                            <th>Thiết bị </th>
                            <th style="width:50px">Xem </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.status)
                            {
                                <tr id="row_@item.IDDevice">
                                    <td><span>@item.IDDevice</span> </td>
                                    <td><span>@item.NameDevice</span> </td>
                                    <td><a href="/CMMSCategory/Edit/@item.IDDevice"><span class='fa fa-eye' style="font-size: 22px;"></span></a> </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <label style="color:red; font-size:30px">Thiết bị chưa có hạng mục bảo trì</label>
                <table class="table table-striped table-bordered table-hover" id="baocom">
                    <thead>
                        <tr>
                            <th style="width:80px">ID </th>
                            <th>Thiết bị </th>
                            <th style="width:50px">Thêm </th>
                            <th style="width:50px">Copy </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (!item.status)
                            {
                        <tr id="row_@item.IDDevice">
                            <td style="width:100px"><span>@item.IDDevice</span> </td>
                            <td><span>@item.NameDevice</span> </td>
                            <td><a href="/CMMSCategory/edit/@item.IDDevice"><span class='fa fa-plus' style="font-size: 22px; color:red"></span></a> </td>
                            <td>
                                <button type="button" data-toggle="modal" onclick="Copy(@item.IDDevice)" data-target="#copydevice" style="color: red; "><span class="fa fa-clone"></span></button>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
<div id="Copy">
    <div class="modal fade" id="copydevice" role="dialog">
        <div class="modal-dialog" style="max-width: 900px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" style="width: 50px; font-size: 20px;">&times;</button>
                    <h4 class="modal-title" style="position: absolute;">Copy hạng mục</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="control-label">Tìm tên thiết bị</label>
                            <div class="input-group">
                                <input type="text" class="form-control tentb" id="tentb" placeholder="chỉ hiện 20 kết quả gần giống nhất">
                                <div class="input-group-append btnFindTBcopy" id="btnFindTBcopy">
                                    <span class="btn btn-default"><i class="fa fa-search"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class=" col-md-6">
                            <label class="control-label">Chọn thiết bị muốn copy</label>
                            <div class='input-group'>
                                @Html.DropDownList("NewID", listTB, new { @class = "form-control", @ID = "newid" })
                            </div>
                            <input type="hidden" id="nametb" name="item.NameDevice" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" id="copyid" class="btn-copydevice" style="background: red; padding: 7px;  color: white;">Tạo bản sao</a>
                </div>
            </div>
        </div>
    </div>
</div>