@model IEnumerable<Model.View.ReportBuy1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    double nosuccess = 0;
    double nodanger = 0;
    double noinfo = 0;
    double notong = 0;
    DateTime homnay = DateTime.Now;
    double countItem = Model.Count();
    var countID = Model.Select(x => x.ID).Distinct().Count();
}






<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Report Tiến Độ Mua Vật Tư PTE tháng @Model.FirstOrDefault().LimitedDate.ToString("MM/yyyy")</h3>
            </div>
            <div class="card-body">
               
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Tổng loại vật tư <span class="badge">@countItem</span></button>

                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Tổng phiếu đã duyệt <span class="badge">@countID</span></button>

                    </div>
                </div>
              
                @*<a href="/ProposalToBuy/Reportbuy"><--- quay lại trọn tháng muốn xem thống kê</a>*@
                <p></p>

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        notong = notong + 1;
                        if (item.ImportDate == null)
                        {
                            if (item.LimitedDate.Subtract(homnay).Days >= 0)
                            {
                                noinfo = noinfo + 1;
                            }
                            else
                            {
                                nodanger = nodanger + 1;
                            }
                        }
                        else
                        {
                            if (item.ImportDate.Value.Subtract(item.LimitedDate).Days > 0)
                            {
                                nodanger = nodanger + 1;
                            }
                            else
                            {
                                nosuccess = nosuccess + 1;
                            }
                        }
                    }
                     <div class="row">
                    <div class="col-md-4">
                        <button type="button" class="btn btn-primary">@((nodanger * 100 / notong).ToString("0.00"))% quá hạn</button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-primary">@((nosuccess * 100 / notong).ToString("0.00"))% đúng hạn</button>
                    </div>
                    <div class="col-md-4">
                        <button type="button" class="btn btn-primary">@((noinfo * 100 / notong).ToString("0.00"))% chưa đến hạn</button>
                    </div>
                   
                </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>STT</th>
                                    <th>Tên vật tư</th>
                                    <th>Nhân viên phụ trách</th>
                                    <th>Thời hạn đáp ứng</th>
                                    <th>Ngày nhập kho</th>
                                    <th>Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.No</td>
                                        <td>@item.MaterialName   </td>
                                        <td>@item.NvMH  </td>
                                        <td>@item.LimitedDate.ToString("dd/MM/yyyy")</td>
                                        @if (item.ImportDate == null)
                                        {
                                            if (item.LimitedDate.Subtract(homnay).Days >= 0)
                                            {
                                                <td>chưa nhập kho</td>
                                                <td style="background: #5bc0de; color: white;">chưa đến hạn</td>
                                            }
                                            else
                                            {
                                                <td>chưa nhập kho</td>
                                                <td style="background: #d9534f; color:white;">trễ hạn</td>
                                            }
                                        }
                                        else
                                        {
                                            if (item.ImportDate.Value.Subtract(item.LimitedDate).Days > 0)
                                            {
                                                <td>@item.ImportDate.Value.ToString("dd/MM/yyyy")</td>
                                                <td style="background: #d9534f; color: white;">trễ hạn</td>
                                            }
                                            else
                                            {
                                                <td>@item.ImportDate.Value.ToString("dd/MM/yyyy")</td>
                                                <td style="background: #5cb85c; color: white;">đúng hạn</td>
                                            }
                                        }
                                    </tr>

                                }


                            </tbody>
                        </table>

                    </div>
                }
                else
                {
                    <p style="color:red;">chưa có dữ liệu tháng này.....</p>
                }



            </div>
        </div>
    </div>
</div>
