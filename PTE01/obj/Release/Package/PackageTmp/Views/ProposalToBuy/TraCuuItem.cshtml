         //{
         //    listVT.Add(new SelectListItem
         //    {
         //        Text = item.ItemId+" - "+item.ItemName+"("+item.UnitId+")",
         //        Value = item.ItemId,
         //        Selected = true
         //    });
         //   }
        
    }


    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Tra Cứu Vật Tư
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("TraCuuItem", "ProposalToBuy", FormMethod.Get))
                    {
                        <div class="row form-group">
                            <div class="col-lg-12">
                                <div class="col-md-4">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" placeholder="tìm theo tên.. " />
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-success">Tìm kiếm</button>

                                </div>
                            </div>
                        </div>
                    }
                    @*@Html.DropDownList("item", listVT, new { @class = "form-control" })*@

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Mã Item</th>
                                    <th>Tên vật tư</th>
                                    <th>ĐVT</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr id="">
                                        <td>@item.ItemId</td>
                                        <td>@item.ItemName </td>
                                        <td>@item.UnitId</td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>

