@model List<Model.View.ProposalToBuyView5>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    DateTime homnay = DateTime.Now;
    string ngaythangnam = "ReportMH" + DateTime.Now.ToUniversalTime();
    string listUser = "tatca";
    

    List<Model.EF.CostElement> cElement = ViewBag.cElement;
    Model.View.Dropdownlist2 cCenter1 = ViewBag.cCenter1;
    List<Model.View.Dropdownlist2> cCenter2 = ViewBag.cCenter2;
    List<Model.View.Dropdownlist5> cProject1 = ViewBag.cProject1;
    List<Model.View.Dropdownlist5> cProject2 = ViewBag.cProject2;
    List<Model.View.Dropdownlist2> cUser = ViewBag.cUser;
    foreach (var item in cUser)
    {
        listUser = listUser + "," + item.ID;
    }
    List<SelectListItem> listCU = new List<SelectListItem>();
    listCU.Add(new SelectListItem
    {
        Text = "chưa chọn",
        Value = "",
    });
    //listCU.Add(new SelectListItem
    //{
    //    Text = "Tất cả",
    //    Value = listUser,
    //});
    foreach (var item in cUser)
    {
        listCU.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }

    List<SelectListItem> listCE = new List<SelectListItem>();
    listCE.Add(new SelectListItem
    {
        Text = "chưa chọn",
        Value = "",
    });
    foreach (var item in cElement)
    {
        listCE.Add(new SelectListItem
        {
            Text = item.Name + " - " + item.ID,
            Value = item.ID,
        });
    }
    List<SelectListItem> listCC = new List<SelectListItem>();
    listCC.Add(new SelectListItem
    {
        Text = "chưa chọn",
        Value = "",
    });
    listCC.Add(new SelectListItem
    {
        Text = "(C)" + cCenter1.Name + " - " + cCenter1.ID,
        Value = cCenter1.ID,
    });

    foreach (var item in cCenter2)
    {
        listCC.Add(new SelectListItem
        {
            Text = "(C)" + item.Name + " - " + item.ID,
            Value = item.ID,
        });
    }

    foreach (var item in cProject1)
    {
        listCC.Add(new SelectListItem
        {
            Text = "(P)" + item.Name + " - " + item.ID,
            Value = item.ID.ToString(),
        });
    }
    foreach (var item in cProject2)
    {
        listCC.Add(new SelectListItem
        {
            Text = "(P)" + item.Name + " - " + item.ID,
            Value = item.ID.ToString(),
        });
    }
    List<SelectListItem> listType = new List<SelectListItem>();

    listType.Add(new SelectListItem
    {
        Text = "Cost Center",
        Value = "C",
    });
    listType.Add(new SelectListItem
    {
        Text = "Project",
        Value = "P",
    });
}

