<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tìm kiếm nâng cao</h3>
        
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="callout callout-info">
                    <label class="control-label" style="color: #FF5722;">Người tạo</label><br>
                    @*<input type="text" class="form-control" id="nguoitao" name="nguoitao" />*@
                    @Html.DropDownList("nguoitao", listCU, new { @class = "form-control select2" })
                    <label class="control-label" style="color: #FF5722;">Mã vật tư</label><br>
                    <input type="text" class="form-control" id="mavt" name="mavt" placeholder="Mã vật tư A0000...." />
                </div>
            </div>
            <div class="col-md-6">
                <div class="callout callout-info">
                   <span style="display:none"> @Html.DropDownList("loaic", listType, new { @class = "form-control" })</span>
                    <label class="control-label" style="color: #FF5722;">Cost Center / Project</label><br>
                    @Html.DropDownList("cost1", listCC, new { @class = "form-control select2" })
                    <label class="control-label" style="color: #FF5722;">Danh mục chi Phí</label><br>                   
                    @Html.DropDownList("cost2", listCE, new { @class = "form-control select2" })
                </div>
            </div>

            <div class="col-md-3">
                <div class="callout callout-info">
                    <label class="control-label" style="color: #FF5722;">Ngày tạo phiếu</label>
                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            <div class="input-group">
                                <label>Từ:</label><input type="text" id="ngay1" name="ngay1" class="time1 form-control" readonly="readonly" value="@DateTime.Now.AddDays(-7).ToShortDateString()"><br>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            <div class="input-group">
                                <label>Đến:</label> <input type="text" id="ngay2" name="ngay2" class="time1 form-control" readonly="readonly"><br>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 text-center">
                <div class="form-group">
                    <a class="btn btn-primary" id="inbaocao">Tìm kiếm</a>
                </div>
            </div>
        </div>
        <script src="~/Scripts/jquery-1.9.1.min.js"></script>
        <script>
            $(document).ready(function () {
                var nguoitao = $("#nguoitao").val();
                var mavt = $("#mavt").val();
                var loaic = $("#loaic").val();
                var cost1 = $("#cost1").val();
                var cost2 = $("#cost2").val();
                var ngay1 = $('#ngay1').val();
                var ngay2 = $('#ngay2').val();
                $('#inbaocao').attr("href", '/ProposalToBuy/SearchAdvanceCost?nguoitao=' + nguoitao + '&mavt=' + mavt + '&loaic=' + loaic + '&cost1=' + cost1 + '&cost2=' + cost2 + '&ngay1=' + ngay1 + '&ngay2=' + ngay2);

                $("#inbaocao").focus(function () {
                    var nguoitao = $("#nguoitao").val();
                    var mavt = $("#mavt").val();
                    var loaic = $("#loaic").val();
                    var cost1 = $("#cost1").val();
                    var cost2 = $("#cost2").val();
                    var ngay1 = $('#ngay1').val();
                    var ngay2 = $('#ngay2').val();
                    $('#inbaocao').attr("href", '/ProposalToBuy/SearchAdvanceCost?nguoitao=' + nguoitao + '&mavt=' + mavt + '&loaic=' + loaic + '&cost1=' + cost1 + '&cost2=' + cost2 + '&ngay1=' + ngay1 + '&ngay2=' + ngay2);
                });
                $('#cost1').change(function () {
                    var typeC = $('#cost1').find(":selected").text().substring(1,2);
                    document.getElementById('loaic').value = typeC;
                });
               
            });

        </script>
    </div>
    <div class="card-footer">

    </div>

</div>


<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Kết quả</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            Tool
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <span class="dropdown-item" onclick="exportTableToExcel('inputdata', '@ngaythangnam')">Export to Excel</span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-body">
                @if (Model != null)
                {
                    <script>
                        function exportTableToExcel(tableID, filename) {
                            var downloadLink;
                            var dataType = 'application/vnd.ms-excel';
                            var tableSelect = document.getElementById(tableID);
                            var tableHTML = tableSelect.outerHTML.replace(/ /g, '%20');
                            filename = filename ? filename + '.xls' : 'excel_data.xls';
                            downloadLink = document.createElement("a");
                            document.body.appendChild(downloadLink);
                            if (navigator.msSaveOrOpenBlob) {
                                var blob = new Blob(['\ufeff', tableHTML], {
                                    type: dataType
                                });
                                navigator.msSaveOrOpenBlob(blob, filename);
                            } else {
                                downloadLink.href = 'data:' + dataType + ', ' + tableHTML;
                                downloadLink.download = filename;
                                downloadLink.click();
                            }
                        }
                    </script>
               
                    <div class="table-responsive">
                        <table class="table table-bordered" id="inputdata">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>STT</th>
                                    <th>Mã vật tư</th>
                                    <th>Tên vật tư</th>
                                    <th>Ghi chú</th>
                                    <th>Số lượng</th>
                                    <th>DVT</th>
                                    <th>Người tạo</th>
                                    <th>Ngày tạo</th>
                                    <th>Giá</th>
                                    <th>Loại Cost</th>
                                    <th>Center / Project</th>
                                    <th>Cost Element</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.No</td>
                                        <td>@item.MaterialID</td>
                                        <td>@item.MaterialName</td>
                                        <td>@item.Note</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Unit</td>
                                        <td>@item.CreateBy</td>
                                        <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>                                       
                                        <td>@if (item.Price != null) { <span>@item.Price</span>}else{<span>0 giá</span>}</td>
                                        <td>@item.TypeC</td>
                                        <td>@item.Cost1</td>
                                        <td>@item.Cost2</td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                     

                    </div>
                }
                else
                {
                    <span>chưa có kết quả nào</span>
                }
            </div>
            <div class="card-footer clearfix">

            </div>
        </div>
    </div>
</div>








