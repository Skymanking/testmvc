@model Model.EF.InfoPlating
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme1.cshtml";

}

<div class="row">
    @using (Html.BeginForm("EditInfoPlating", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thông Tin Chi Tiết Sản Phẩm
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="table-responsive">
                                <div class="col-lg-4" style="display:block">
                                    @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @style = "display: none; visibility: hidden;" })
                                </div>
                                <table class="table">
                                    <tbody>

                                        <tr>
                                            <td>Số SP / Gá:</td>
                                            <td>@Html.TextBoxFor(model => model.PinJ, new { @class = "form-control", @type = "number" })</td>
                                        </tr>
                                        <tr>
                                            <td>Số Gá / Cầu:</td>
                                            <td>@Html.TextBoxFor(model => model.JinB, new { @class = "form-control", @type = "number" })</td>

                                        </tr>
                                        <tr>
                                            <td>Mã Gá:</td>
                                            <td>@Html.TextBoxFor(model => model.IDJig, new { @class = "form-control", @placeholder = "Tên Sản phẩm" })</td>

                                        </tr>
                                        
                                        <tr>
                                            <td>Tên Line Xi:</td>
                                            <td>@Html.DropDownListFor(model => model.IDLine, null, new { @class = "form-control" })</td>
                                        </tr>
                                        <tr>
                                            <td>Tên Qui Trình Xi:</td>
                                            <td>@Html.DropDownListFor(model => model.IDPlaOpt, null, new { @class = "form-control" })</td>

                                        </tr>
                                        <tr>
                                            <td>Cycle Time:</td>
                                            <td>@Html.TextBoxFor(model => model.CycleTime, new { @class = "form-control", @placeholder = "đơn vị phút", @type = "number" })</td>

                                        </tr>
                                        <tr>
                                            <td>Task Time:</td>
                                            <td>@Html.TextBoxFor(model => model.TaskTime, new { @class = "form-control", @placeholder = "đơn vị giây", @type = "number" })</td>
                                        </tr>
                                        <tr>
                                            <td>Độ phức tạp:</td>
                                            <td>@Html.TextBoxFor(model => model.Complexity, new { @class = "form-control", @placeholder = "1,2,3", @type = "number" })</td>
                                        </tr>
                                        <tr>
                                            <td>Tỉ lệ thành phẩm:</td>
                                            <td>@Html.TextBoxFor(model => model.RateS, new { @class = "form-control", @placeholder = "%", @type = "number" })</td>
                                        </tr>
                                        <tr>
                                            <td>Thời gian nhân công / SP:</td>
                                            <td>@Html.TextBoxFor(model => model.Labor, new { @class = "form-control", @placeholder = "đơn vị giây", @type = "number" })</td>
                                        </tr>
                                        <tr>
                                            <td>Số Kw điện / SP:</td>
                                            <td>@Html.TextBoxFor(model => model.Electric, new { @class = "form-control", @placeholder = "kilowatt", @type = "number" })</td>
                                        </tr>
                                        <tr>
                                            <td>Số m3 nước / SP:</td>
                                            <td>@Html.TextBoxFor(model => model.Water, new { @class = "form-control", @placeholder = "mét khối", @type = "number" })</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>


                        </div>

                    </div>
                </div>
            </div>

        </div>

        <!--------------------------fd-------End------------------------------------>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </div>


    }
</div>



