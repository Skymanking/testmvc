<form id="myForm" method="post">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" style="width:20px">&times;</button>
                    <h4 class="modal-title">Thêm NVL vào BOM</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class='col-md-12'>
                            <label class="control-label">Chọn NVL</label>
                            <select class="form-control" id="IDItem" name="IDItem">
                                <option value="none">còn trống</option>
                                @foreach (var item in listItem)
                                {
                                    <option value="@item.ID">   @item.Name    </option>
                                }

                            </select>
                        </div>
                        <div class='col-md-6'>
                            <label class="control-label">Số lượng</label>
                            <input class="form-control" data-val="true" id="Quantity" name="Quantity" placeholder=" " type="number" value="0">
                        </div>
                        <div class='col-md-6'>
                            <label class="control-label">Người thực hiện</label>
                            <select class="form-control" id="Type" name="Type">
                                <option value="Unit" selected="selected">Unit</option>       
                                <option value="Lot">Lot</option>                         
                            </select>
                        </div>
                    </div>
                </div>
                <script>
                    $(document).ready(function () {
                        $("#IDItem").blur(function () {
                            $('#addNVL').attr("data-iditem", $('#IDItem').val());
                        });
                        $("#Quantity").blur(function () {
                            $('#addNVL').attr("data-quantity", $('#Quantity').val());
                        });
                        $("#Type").blur(function () {
                            $('#addNVL').attr("data-type", $('#Type').val());
                        });
                    });
                </script>


                <div class="modal-footer">
                    <a href="#" id="addNVL" class="addNVL btn-cancel" data-id="@infoXi.ID" style="background: red;    padding: 7px;  color: white;">Lưu thông tin</a>
                </div>
            </div>

        </div>
    </div>
</form>