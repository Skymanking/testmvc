@model Model.EF.Product
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme1.cshtml";

}
@section jsFooter{
    <script>
        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#txtImage').val(url);
            };
            finder.popup();
        })
    </script>
}
<div class="row">
    @using (Html.BeginForm("EditProduct", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thông Tin Chi Tiết Sản Phẩm
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Mã SP mới:</td>
                                            <td>@Html.TextBoxFor(model => model.Code1, new { @class = "form-control", @placeholder = "Mã SP mới theo ERP" })</td>
                                        </tr>
                                        <tr>
                                            <td>Mã SP cũ:</td>
                                            <td>@Html.TextBoxFor(model => model.Code2, new { @class = "form-control", @placeholder = "Mã SP của Khách hàng" })</td>

                                        </tr>
                                        <tr>
                                            <td>Tên SP:</td>
                                            <td>@Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Tên Sản phẩm" })</td>

                                        </tr>
                                        <tr>
                                            <td>Hình SP:</td>
                                            <td>
                                                @Html.TextBoxFor(model => model.Image, new { @id = "txtImage", @style = "width:200px" })
                                            <a id="btnSelectImage" class="btn btn-primary" href="#">Chọn ảnh</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Tên Khách Hàng:</td>
                                        <td>@Html.DropDownListFor(model => model.IDCus, null, new { @class = "form-control" })</td>
                                    </tr>
                                    <tr>
                                        <td>Vật liệu:</td>
                                        <td>@Html.DropDownListFor(model => model.IDMat, null, new { @class = "form-control" })</td>

                                    </tr>
                                    <tr>
                                        <td>Diện tích sản phẩm (cm2):</td>
                                        <td>@Html.TextBoxFor(model => model.ProductArea, new { @class = "form-control", @placeholder = "đơn vị cm2" })</td>

                                    </tr>
                                    <tr>
                                        <td>Diện tích xi mạ (cm2):</td>
                                        <td>@Html.TextBoxFor(model => model.PlatingArea, new { @class = "form-control", @placeholder = "đơn vị cm2" })</td>

                                    </tr>
                                    <tr>
                                        <td>Khối lượng (g):</td>
                                        <td>@Html.TextBoxFor(model => model.Weight, new { @class = "form-control", @placeholder = "đơn vị gram" })</td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>


                    </div>

                </div>
            </div>
        </div>

    </div>

        <!--------------------------fd-------End------------------------------------>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </div>


    }
</div>



