@model Model.EF.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<SelectListItem> loaiphoi = new List<SelectListItem>();
    loaiphoi.Add(new SelectListItem
    {
        Text = "Chưa chọn",
        Value = "0",
        Selected = true
    });
    loaiphoi.Add(new SelectListItem
    {
        Text = "KHUNG",
        Value = "1",
    });

    loaiphoi.Add(new SelectListItem
         {
             Text = "ĐƠN",
             Value = "2",
         });


}
@using (Html.BeginForm("Edit99", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">

        <!-- Cot ben trai -->
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Thông Tin Sản Phẩm Cơ Bản - Kế Toán
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="row">
                                <div class='col-md-4'>
                                    <label class="control-label">Mã ERP 2019</label>
                                    @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @readonly = "true" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.ModifyBy - @Model.ModifyDate.ToString()">Mã Cũ Sản Phẩm</label>
                                    @Html.TextBoxFor(model => model.Code1, null, new { @class = "form-control" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label">Mã SP của Khách</label>
                                    @Html.TextBoxFor(model => model.Code2, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="row">
                                <div class='col-md-4'>
                                    <label class="control-label">Tên Sản Phẩm</label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "bắt buộc điền", @style = "background: #f9d7d4;" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label">Loại Sản Phẩm</label>
                                    @Html.DropDownListFor(model => model.IDType, null, new { @class = "form-control" })
                                </div>

                                <div class='col-md-4'>
                                    <label class="control-label">Khách Hàng</label>
                                    @Html.DropDownListFor(model => model.IDCus, null, new { @class = "form-control" })
                                </div>
                                <div class='col-md-12'>
                                    <label class="control-label">Ghi chú</label>
                                    @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @rows = "5" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-red">
                <div class="panel-heading">
                    Thông Tin Kỹ Thuật Gá
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-12">
                            <div class="row">
                                <div class='col-md-6'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoAC1 - @if(@Model.InfoAD1!= null) {@Model.InfoAD1.Value.ToString()}">Trọng lượng Gá(kg)</label>
                                    @Html.TextBoxFor(model => model.InfoA1, new { @class = "form-control", @type = "number", @step = "0.000001", @min = "0", @max = "1000000" })
                                </div>
                                <div class='col-md-6'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoAC2 - @if(@Model.InfoAD2!= null) {@Model.InfoAD2.Value.ToString()}">Tổng thời gian gia công(phút)</label>
                                    @Html.TextBoxFor(model => model.InfoA2, null, new { @class = "form-control", @type = "number", @step = "0.000001", @min = "0", @max = "1000000" })
                                </div>

                            </div>

                            <div class="row">
                                <div class='col-md-4'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoAC3 - @if(@Model.InfoAD3!= null) {@Model.InfoAD3.Value.ToString()}">Số Phôi / Gá</label>
                                    @Html.TextBoxFor(model => model.InfoA3, new { @class = "form-control", @type = "number", @step = "1", @min = "0", @max = "1000000" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoAC4 - @if(@Model.InfoAD4!= null) {@Model.InfoAD4.Value.ToString()}">Số Gá / Cầu</label>
                                    @Html.TextBoxFor(model => model.InfoA4, null, new { @class = "form-control", @type = "number", @step = "1", @min = "0", @max = "1000000" })
                                </div>
                                <div class='col-md-4'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoBC1 - @if(@Model.InfoBD1!= null) {@Model.InfoBD1.Value.ToString()}">Loại Gá</label>
                                    @Html.DropDownListFor(model => model.InfoB1, loaiphoi, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class='col-md-12'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoBC9 - @if(@Model.InfoBD9!= null) {@Model.InfoBD9.Value.ToString()}">Hình Gá</label>
                                    <div class='input-group date' id='datetimepicker2'>
                                        @Html.TextBoxFor(model => model.InfoB9, new { @class = "form-control", @style = "background: #f9d7d4;", @placeholder = "kích thước hình tối đa 1000px x 1000px " })
                                        <span class="input-group-addon">
                                            <a id="btnSelectImage" href="#"><span class="glyphicon glyphicon-picture"></span></a>
                                        </span>
                                    </div>
                                </div>
                                <script>
                                    $('#btnSelectImage').on('click', function (e) {
                                        e.preventDefault();
                                        var finder = new CKFinder();
                                        finder.selectActionFunction = function (url) {
                                            $('#InfoB9').val(url);
                                            $('#btnViewFile').attr("href", $('#InfoB9').val());
                                        };
                                        finder.popup();
                                    })


                                    var editor = CKEDITOR.replace('txtContent', {
                                        customConfig: '/Assets/plugin/ckeditor/config.js',
                                    });
                                </script>
                            </div>

                            <div class="row">
                                <div class='col-md-12'>
                                    <label class="control-label" data-toggle="tooltip" title="modify by: @Model.InfoBC3 - @if(@Model.InfoBD3!= null) {@Model.InfoBD3.Value.ToString()}">Ghi chú</label>
                                    @Html.TextAreaFor(model => model.InfoB3, new { @class = "form-control", @rows = "5" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

      
    </div>
    <div class="row" style="padding-top:10px">
        <div class="col-md-4">

            <input type="submit" value="Cập Nhật" class="btn btn-success" />
        </div>
    </div>
}
<div class="row">
    <center>
        <div class="col-md-6">
            @if (Model.InfoB9 != null && Model.InfoB9.Count() > 5)
            {  <img src="@Model.InfoB9" class="img-rounded" alt="Cinque Terre" width="100%" height="auto">}
            else
            {
                <img src="../../../Assets/dist/css/no_image.jpg" class="img-rounded" alt="Cinque Terre" width="100%" height="auto">
            }

        </div>
    </center>
</div>
