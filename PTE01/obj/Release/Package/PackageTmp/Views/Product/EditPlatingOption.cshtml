@model List<Model.EF.InfoPlatingOption>
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    var proName = (string)ViewBag.proName ;
    var optName = (string)ViewBag.optName ;
    var linName = (string)ViewBag.linName ;
    
    var listLay = (List<Model.EF.PlatingLayer>) ViewBag.Layer;
    var LLay = new List<SelectListItem>();

    foreach (var item in listLay)
    {
        LLay.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
        });
    }
}

<div class="row">
    @using (Html.BeginForm("EditPlatingOption", "Product", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Chỉnh Sửa Điều Kiện Xi Mạ Của Sản Phẩm
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <p style="font-weight:bold;">Sản Phẩm: @proName </p>
                            <p style="font-weight:bold;">Option: @optName</p>
                            <p style="font-weight:bold;">Line: @linName</p>
                        </div>
                        
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Lớp mạ</th>
                                            <th>Mật độ dòng (A/dm2)</th>
                                            <th>Thời gian (giây)</th>
                                            <th>Bề dày (micromet)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count();i++ )
                                        {
                                            foreach (var item in LLay)
                                            {
                                                if (item.Value == Model[@i].IDLay.ToString())
                                                {
                                                    item.Selected = true;
                                                    break;
                                                }
                                            }
                                            <tr>
                                                <td>@Html.DropDownListFor(model => model[@i].IDLay, LLay, new { @class = "form-control" })</td>
                                                <td>@Html.TextBoxFor(model => model[@i].CurrentDensity, new { @class = "form-control" })</td>
                                                <td>@Html.TextBoxFor(model => model[@i].Time, new { @class = "form-control" })</td>
                                                <td>@Html.TextBoxFor(model => model[@i].Thickness, new { @class = "form-control" })</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                                                     
                        </div>

                    </div>
                </div>
            </div>

        </div>

        <!--------------------------fd-------End------------------------------------>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </div>


    }
</div>



