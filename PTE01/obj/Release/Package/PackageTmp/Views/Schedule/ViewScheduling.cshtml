@model List<Model.EF.Maintenance_Job_Schdeduling>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ViewScheduling";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listU = (IEnumerable<Model.View.UserView2>)ViewBag.listUser;
    var staff = new List<SelectListItem>
        ();
    var manage = new List<SelectListItem>
        ();
    staff.Add(new SelectListItem
    {
        Text = "Chưa chọn",
        Value = "Chưa chọn",
    });
    foreach (var item in listU)
    {
        staff.Add(new SelectListItem
        {
            Text = item.FullName,
            Value = item.UserName,
        });
    }
    foreach (var item in listU)
    {
        manage.Add(new SelectListItem
        {
            Text = item.FullName,
            Value = item.UserName,
        });
    }
}
