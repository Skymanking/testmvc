@model Model.EF.ProcessOperation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListUser = (List<Model.View.Dropdownlist2>)ViewBag.User;
    var User = new List<SelectListItem>();
    User.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn Owner",
    });
    foreach (var item in ListUser)
    {
        User.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(function () {
            $('.select2').select2()
        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Operation</h3>
    </div>
    @using (Html.BeginForm("Create", "ProcessOperation", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label col-md-6">Tên Operation</label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "Name", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Owner 1</label>
                                @Html.DropDownListFor(model => model.Owner1, User, new { @ID = "Owner1", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Owner 2</label>
                                @Html.DropDownListFor(model => model.Owner2, User, new { @ID = "Owner2", @class = "form-control select2" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

