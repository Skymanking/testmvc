@model List<Model.View.DocumentReaded1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    DateTime homnay = DateTime.Now;
    string ngaythangnam = "ReportMH" + DateTime.Now.ToUniversalTime();



    List<Model.View.Dropdownlist2> cCenter = ViewBag.cCenter;
    List<Model.View.Dropdownlist2> cUser = ViewBag.cUser;
    List<Model.View.Dropdownlist2> cDocument = ViewBag.cDocument;

    List<SelectListItem> listCU = new List<SelectListItem>();
    listCU.Add(new SelectListItem
    {
        Text = "chưa chọn",
        Value = "",
    });
    foreach (var item in cUser)
    {
        listCU.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }


    List<SelectListItem> listCC = new List<SelectListItem>();
    listCC.Add(new SelectListItem
    {
        Text = "chưa chọn",
        Value = "",
    });
    foreach (var item in cCenter)
    {
        listCC.Add(new SelectListItem
        {
            Text =  item.Name + " - " + item.ID,
            Value = item.ID,
        });
    }
    List<SelectListItem> listCD = new List<SelectListItem>();
    listCD.Add(new SelectListItem
    {
        Text = "chưa chọn",
        Value = "",
    });
    foreach (var item in cDocument)
    {
        listCD.Add(new SelectListItem
        {
            Text = item.Name + " - " + item.ID,
            Value = item.ID,
        });
    }

}

@section jsFooter
{

    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script>
        $(function () {
            $("#ngay1").datepicker();
