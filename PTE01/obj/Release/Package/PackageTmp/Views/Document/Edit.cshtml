@model Model.EF.Document

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listPos = (List<Model.View.DocumentPosition1>)ViewBag.listPos;
    bool cStatus =(bool) ViewBag.cStatus;
   

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="/Scripts/ChangeStatusDocumentPos.js"></script>
    <script src="/Scripts/ChangeStatusDocumentAllPos.js"></script>
    <script>
        $(function () {

            $('.select2').select2()
            $(".date1").datepicker(
                {
                    dateFormat: 'mm/dd/yy',
                    changeMonth: true,
                    changeYear: true,
                    numberOfYears: 1,
                    numberOfMonths: 1,
                    yearRange: "-90:+10",
                    onSelect: function (selectedDate) {
                        // we can write code here
                    }
                });

            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-red',
                radioClass: 'iradio_flat-red'
            })

        })
    </script>

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin tài liệu</h3>
    </div>
    @using (Html.BeginForm("Edit", "Document", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="card-body">
            <div class="row">

                <div class="col-md-12">
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class='col-md-10'>
                            <label class="control-label">Tên tài liệu</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @style = "background: #f9d7d4;" })
                        </div>
                        <div class='col-md-2'>
                            <label style=" padding-top: 35px;">
                                @Html.CheckBoxFor(model => model.Disable, new { @class = "flat-red" })
                                không hiển thị
                            </label>
                        </div>
                        <div class='col-md-2'>
                            <label class="control-label">Ngày ban hành</label>
                            <div class="input-group mb-3">
                                <input autocomplete="off" style="background: #f9d7d4;" class="date1 form-control" id="DateIssued" name="DateIssued" type="text" value="@if (@Model.DateIssued != null){@Model.DateIssued.Value.ToString("MM/dd/yyyy")}">
                                <div class=" input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>                          
                        </div>
                        <div class='col-md-3'>
                            <label class="control-label">Nhóm tài liệu</label>
                            @Html.DropDownListFor(model => model.CateID, null, new { @class = "form-control", @style = "background: #f9d7d4;" })
                        </div>
                        <div class='col-md-5'>
                            <label class="control-label">Tài liệu cha</label>
                            @Html.DropDownListFor(model => model.DocID, null, new { @class = "form-control select2" })
                        </div>

                        <div class='col-md-2'>
                            <label style=" padding-top: 35px;">
                                @Html.CheckBoxFor(model => model.Feature, new { @class = "flat-green" })
                                Ưu tiên hiển thị
                            </label>
                        </div>
                        <div class='col-md-4'>
                            <label class="control-label">Bài test Online</label>
                            @Html.DropDownListFor(model => model.TestID, null, new { @class = "form-control select2" })
                        </div>
                        <div class='col-md-4'>
                            <label class="control-label">File đính kèm</label>
                            <div class='input-group'>
                                @Html.TextBoxFor(model => model.Link, new { @class = "form-control", @style = "background: #f9d7d4;", @placeholder = "upload file đính kèm" })
                                <div class=" input-group-append">
                                    <span class="input-group-text">
                                        <a id="btnViewFile" href="#"><span class="fa fa-paperclip"></span></a>
                                    </span>
                                </div>
                            </div>
                            <script>
                                $('#btnViewFile').on('click', function (e) {
                                    e.preventDefault();
                                    var finder = new CKFinder();
                                    finder.selectActionFunction = function (url) {
                                        $('#Link').val(url);
                                        $('#btnViewFile').attr("href", $('#Link').val());
                                    };
                                    finder.popup();
                                })
                            </script>

                        </div>
                        <div class='col-md-4'>
                            <label class="control-label">Link Video</label>
                            @Html.TextBoxFor(model => model.Link2, new { @class = "form-control" })
                        </div>
                        <div class='col-md-12'>
                            <label class="control-label">Từ khóa</label>
                            @Html.TextBoxFor(model => model.Keyword, new { @class = "form-control" })
                        </div>
                        <div class='col-md-12'>
                            <label class="control-label">Ghi chú</label>
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @row = "4" })
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary" onclick="openNav()">Lưu thông tin</button>
        </div>


    }
</div>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Các vị trí / chức vụ bắt buộc xem tài liệu</h3> 
        <div class="card-tools">
            <span class="float-right"> Check all <a href="#" class="change-all-status" onclick="openNav()" data-docid="@Model.ID" data-stat="@cStatus">@Html.Raw(cStatus ? "<i class='fa fa-check-square-o fa-2x' style='color:#28a745'></i>" : "<i class='fa fa-check-square-o fa-2x' style='color:#dc3545'></i>")</a></span>

            </div>
        </div>
        <div class="card-body">
            <div class="row">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="width: 50px;">ID </th>
                                <th>Tên vị trí / chức vụ</th>
                                <th style="width:110px;">Phải xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in listPos)
                            {
                                <tr>
                                    <td>@item.PosID</td>
                                    <td>@item.PosName</td>                                    
                                    <td>
                                        <a href="#" class="change-status" data-docid="@item.DocID" data-posid="@item.PosID">@Html.Raw(item.Status1 ? "<i class='fa fa-graduation-cap fa-2x' style='color:#28a745'></i>" : "<i class='fa fa-graduation-cap fa-2x' style='color:#dc3545'></i>")</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
             
            </div>
        </div>

        <div class="card-footer">
            @*<button type="submit" class="btn btn-primary" onclick="openNav()">Lưu thông tin</button>*@
        </div>
</div>
