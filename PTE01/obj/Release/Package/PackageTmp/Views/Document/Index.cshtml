@model PagedList.IPagedList<Model.View.DocumentView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    IEnumerable<Model.View.DocumentView1> Topteen = ViewBag.TopTeen;
    List<Model.EF.CategoryDocument> CateDoc = ViewBag.CateDoc;
    List<Model.EF.CategoryDocument> CateOwner = ViewBag.CateOwner;
    string userName = ViewBag.userName;
    bool edited = false;
}
@section jsFooter
{
    <script src="/Scripts/ChangeReadedDocument.js"></script>

}
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header" style="background-image: url('/Assets/theme3/dist/img/bg-document1.jpg'); background-size: cover;height:200px">
                @*<h3 class="card-title">Tài liệu</h3>*@
                <div class="card-tools">
                    <div class="btn-group" style="height: 37px; margin-top: -20px;">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/Document">Tất cả</a>
                            @foreach (var item in CateDoc)
                            {
                                <a class="dropdown-item" href="/Document?searchString=@item.Name">@item.Name</a>
                            }
                            <a class="dropdown-item" href="/Document/SearchAdvance1"><i class="fa fa-circle fa-2x" style="color: #fdb49d;"></i>Thống kê NV đã xem TL</a>  
                            <a class="dropdown-item" href="/Document/SearchAdvance2"><i class="fa fa-circle fa-2x" style="color: #fdb49d;"></i>Thống kê Tài liệu phải xem</a>                      
                        </div>
                    </div>
                    <a href="/Document/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "Document", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 250px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Tài liệu</th>
                                <th>Ban hành</th>
                                <th style="width:100px;">Tài liệu liên quan</th>
                                <th style="width:50px;">File</th>
                                <th style="width:50px;">Video</th>
                                <th style="width:50px;">Test</th>
                                <th style="width:110px;">Tự xác nhận đã xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    @{edited = false; }
                            
                                    <td>@item.ID</td>
                                    @foreach(var cate in CateOwner)
                                    {
                                        if(item.CateName==cate.Name)
                                        { edited = true; }
                                    }
                                    <td>
                                        @if (item.Feature == true)
                                    { <i class="fa fa-star" aria-hidden="true" style="font-size: 24px; color: #dc3545"></i>}
                                    @if(edited==true)
                                    { <span><a href="/Document/Edit/@item.ID">@item.Name</a></span>}
                                     else
                                    {<span>@item.Name</span> }
                                    </td>
                                    <td>@if (item.DateIssued != null) { <span>@item.DateIssued.Value.ToString("dd/MM/yyyy")</span>} </td>
                                    <td>
                                        @if(item.DocID==1)
                                        {
                                             <a href="/Document?searchString=@item.ID"><img src="~/Assets/theme3/dist/img/icon-library.png" /></a>                                           
                                        }
                                        else
                                        {
                                             <a href="/Document?searchString=@item.DocID"><img src="~/Assets/theme3/dist/img/icon-library.png" /></a>                                           
                                        }
                                    </td>
                                    <td>@if (item.Link != null && item.Link.Length > 10){<a href="@item.Link" target="_blank"><img src="~/Assets/theme3/dist/img/icon-pdf.png" /></a>}</td>
                                    <td>@if (item.Link2 != null && item.Link.Length > 10){<a href="@item.Link2" target="_blank"><img src="~/Assets/theme3/dist/img/icon-video.png" /></a>}</td>
                                    <td>@if (item.TestID > 1){<a href="/DoTestQuestion/Create/@item.TestID" target="_blank"><img src="~/Assets/theme3/dist/img/icon-test.png" /></a>}</td>    
                                    <td><a href="#" class="change-status" data-id="@item.ID">@Html.Raw(item.Readed ? "<img src='/Assets/theme3/dist/img/icon-Faccept.png' />" : "<img src='/Assets/theme3/dist/img/icon-Fwarning.png' />")</a>                                                                                       
                                    </td>                   
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>




