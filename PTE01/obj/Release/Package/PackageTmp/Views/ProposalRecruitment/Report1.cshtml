@model IEnumerable<Model.View.ReportPR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    double nosuccess = 0;
    double nodanger = 0;
    double noinfo = 0;
    double notong = 0;
    DateTime homnay = DateTime.Now;
    double countItem = Model.Count();     

}
<div class="row">
    @using (Html.BeginForm("Report1", "ProposalRecruitment", FormMethod.Get))
    {
        <div class="col-md-3 text-right">
            <label class="control-label">_</label>
            <p> Chọn tháng / năm cần xem</p>
        </div>
        <div class="col-md-2">
            <label class="control-label">Tháng</label>
            <input type="number" value="@ViewBag.month" class="form-control" name="month" />
            </div>
         <div class="col-md-2">
            <label class="control-label">Năm</label>
             <input type="number" value="@ViewBag.year" class="form-control" name="year" />
            </div>
         <div class="col-md-2">
             <label class="control-label">_</label>
             <button type="submit" class="btn btn-success form-control">Xem Báo Cáo</button>
            </div>
    }
</div>
@if (Model.Count() > 0)
                {

<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Report Tuyển Dụng PTE tháng @Model.FirstOrDefault().BOSSDate.Value.ToString("MM/yyyy")
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Tổng yêu cầu được duyệt <span class="badge">@countItem</span></button>

                    </div>
                </div>
                @*<a href="/ProposalToBuy/Reportbuy"><--- quay lại trọn tháng muốn xem thống kê</a>*@
                <p></p>

                
                    @foreach (var item in Model)
                    {
                        notong = notong + 1;
                        if (item.FinishDate == null)
                        {
                            if (homnay.Subtract(item.BOSSDate.Value).Days > @item.TypeJob)
                            {
                                nodanger = nodanger + 1;
                            }
                            else
                            {
                                noinfo = noinfo + 1;
                            }
                        }
                        else
                        {
                            if (item.FinishDate.Value.Subtract(item.BOSSDate.Value).Days > @item.TypeJob)
                            {
                                nodanger = nodanger + 1;
                            }
                            else
                            {
                                nosuccess = nosuccess + 1;
                            }
                        }
                    }
                    <div class="row">
                        <div class="progress">
                            <div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar" aria-valuenow="@(nodanger*100/notong)" aria-valuemin="0" aria-valuemax="100" style="width:@(nodanger*100/notong)%">
                                @((nodanger * 100 / notong).ToString("0.00"))% quá hạn
                            </div>
                            <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="@(nosuccess * 100 /notong)" aria-valuemin="0" aria-valuemax="100" style="width: @(nosuccess * 100 /notong)%">
                                @((nosuccess * 100 / notong).ToString("0.00"))% đúng hạn
                            </div>
                            <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="@(noinfo * 100 / notong)" aria-valuemin="0" aria-valuemax="100" style="width: @(noinfo * 100 / notong)%">
                                @((noinfo * 100 / notong).ToString("0.00"))% chưa đến hạn
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>Người YC</th>
                                    <th>Vị Trí Tuyển</th>
                                    <th>Ngày Duyệt</th>
                                    <th>Ngày Có Ứng Viên</th>
                                    <th>Số ngày quy định</th>
                                    <th>Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.CreateBy</td>
                                        <td>@item.Position  </td>
                                        <td>@item.BOSSDate.Value.ToString("dd/MM/yyyy")</td>
                                        @if (item.FinishDate == null)
                                        {
                                            <td>chưa có</td>
                                        }
                                        else
                                        {
                                            <td>@item.FinishDate.Value.ToString("dd/MM/yyyy")</td>
                                        }
                                        <td>@item.TypeJob ngày = @item.DateLine.Value.ToString("dd/MM/yyyy")  </td>
                                        @if (item.FinishDate == null)
                                        {
                                            if (homnay.Subtract(item.BOSSDate.Value).Days > @item.TypeJob)
                                            {
                                                <td style="background: #d9534f; color: white;">chưa tuyển được</td>
                                            }
                                            else
                                            {
                                                <td style="background: #5bc0de; color: white;">chưa đến hạn</td>
                                            }
                                        }
                                        else
                                        {
                                            if (item.FinishDate.Value.Subtract(item.BOSSDate.Value).Days > @item.TypeJob)
                                            {
                                                <td style="background: #d9534f; color: white;">trễ hạn</td>
                                            }
                                            else
                                            {
                                                <td style="background: #5cb85c; color: white;">đúng hạn</td>
                                            }
                                        }

                                    </tr>

                                }


                            </tbody>
                        </table>

                    </div>
                
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
    }
                else
                {
                    <p style="color:red;">chưa có dữ liệu tháng này.....</p>
                }