@model IEnumerable<Model.View.ReportPR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    DateTime homnay = DateTime.Now;
    double countItem = Model.Count();

}

@if (Model.Count() > 0)
{

    <div class="row">

        <div class="col-lg-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh Sách Yêu Cầu Sắp Đến Hạn và Chưa có người
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-primary">Tổng yêu cầu được duyệt <span class="badge">@countItem</span></button>

                        </div>
                    </div>

                    <p></p>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>Người YC</th>
                                    <th>Vị Trí Tuyển</th>
                                    <th>Ngày Duyệt</th>
                                    <th>Ngày Có Ứng Viên</th>
                                    <th>Số ngày quy định</th>
                                    <th>Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.CreateBy</td>
                                        <td>@item.Position  </td>
                                        <td>@item.BOSSDate.Value.ToString("dd/MM/yyyy")</td>
                                        @if (item.FinishDate == null)
                                        {
                                            <td>chưa có</td>
                                        }
                                        else
                                        {
                                            <td>@item.FinishDate.Value.ToString("dd/MM/yyyy")</td>
                                        }
                                        <td>@item.TypeJob ngày = @item.DateLine.Value.ToString("dd/MM/yyyy")  </td>
                                        @if (item.FinishDate == null)
                                        {
                                            if (homnay.Subtract(item.BOSSDate.Value).Days > @item.TypeJob)
                                            {
                                                <td style="background: #d9534f; color: white;">chưa tuyển được</td>
                                            }
                                            else
                                            {
                                                <td style="background: #5bc0de; color: white;">chưa đến hạn</td>
                                            }
                                        }
                                        else
                                        {
                                            if (item.FinishDate.Value.Subtract(item.BOSSDate.Value).Days > @item.TypeJob)
                                            {
                                                <td style="background: #d9534f; color: white;">trễ hạn</td>
                                            }
                                            else
                                            {
                                                <td style="background: #5cb85c; color: white;">đúng hạn</td>
                                            }
                                        }

                                    </tr>

                                }


                            </tbody>
                        </table>

                    </div>

                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
    </div>
}
else
{
    <p style="color:red;">chưa có dữ liệu tháng này.....</p>
}