@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<Model.View.Report4> listall = ViewBag.listall;
    double countItem = listall.Count();
    long sum1 = 0; long sum2 = 0; long sum3 = 0; long sum4 = 0; long sum5 = 0; long sum6 = 0;
}

@if (countItem > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DANH SÁCH ỨNG VIÊN
                </div>
                <div class="panel-body">
                   

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Vị trí chức vụ</th>
                                    <th>SL Hồ Sơ ƯV</th>
                                    <th>SL ƯV Mời PV</th>
                                    <th>SL ƯV Tham gia PV</th>
                                    <th>SL ƯV PV Đạt</th>
                                    <th>SL ƯV Đến Nhận Việc</th>
                                    <th>SL ƯV Ký HĐ chính thức</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listall)
                                {
                                    <tr id="row">
                                        <td>@item.Name</td>
                                        <td>@item.Value1 </td>
                                        <td>@item.Value2 (@(item.Value2 * 100 / item.Value1)%)</td>
                                        <td>@item.Value3 (@(item.Value3 * 100 / item.Value1)%)</td>
                                        <td>@item.Value4 (@(item.Value4 * 100 / item.Value1)%)</td>
                                        <td>@item.Value5 (@(item.Value5 * 100 / item.Value1)%)</td>
                                        <td>@item.Value6 (@(item.Value6 * 100 / item.Value1)%)</td>
                                     </tr>
                                    {
                                    sum1 = sum1 + item.Value1;
                                    sum2 = sum2 + item.Value2;
                                    sum3 = sum3 + item.Value3;
                                    sum4 = sum4 + item.Value4;
                                    sum5 = sum5 + item.Value5;
                                    sum6 = sum6 + item.Value6;
                                      }
                              
                                }
                                <tr id="row" style="background: #8BC34A;font-weight: bold; color: red; font-size:16px;">
                                    <td>Tổng cộng</td>
                                    <td>@sum1</td>
                                    <td>@sum2 <span style="font-weight: normal; color: black; font-size:14px;"> (@(sum2 * 100 / sum1)%)</span></td>
                                    <td>@sum3 <span style="font-weight: normal; color: black; font-size:14px;"> (@(sum3 * 100 / sum1)%)</span></td>
                                    <td>@sum4 <span style="font-weight: normal; color: black; font-size:14px;"> (@(sum4 * 100 / sum1)%)</span></td>
                                    <td>@sum5 <span style="font-weight: normal; color: black; font-size:14px;"> (@(sum5 * 100 / sum1)%)</span></td>
                                    <td>@sum6 <span style="font-weight: normal; color: black; font-size:14px;"> (@(sum6 * 100 / sum1)%)</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p style="color:red;">chưa có dữ liệu tháng này.....</p>
}