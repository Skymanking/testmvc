@model  List<Model.View.Candidate3>
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Theme1.cshtml";
        //List<Model.View.Candidate3> listall = ViewBag.listall;
        double countItem = Model.Count();
        int sum1 = 0; int sum2 = 0; int sum3 = 0; int sum4 = 0; int sum5 = 0;
    }


    @using (Html.BeginForm("Report2", "Candidate", FormMethod.Get))
    {
        <div class="row">
            <div class='col-md-4'>
                <label class="control-label">Thời gian từ: </label>
                <div class='input-group date' id='datetimepicker1'>
                    <input class="form-control" type="text" value="@ViewBag.ngay1" name="ngay1">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

            </div>

            <div class='col-md-4'>
                <label class="control-label">Thời gian đến: </label>
                <div class='input-group date' id='datetimepicker2'>
                    <input class="form-control" type="text" value="@ViewBag.ngay2" name="ngay2">
                    <span class=" input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>

            </div>
            <div class="col-md-2">
                <label class="control-label">_</label>
                <button type="submit" class="btn btn-success form-control">Xem Báo Cáo</button>
            </div>
            <script type="text/javascript">
                $(function () {
                    $('#datetimepicker1').datetimepicker({
                        format: 'MM/DD/YYYY'
                    });

                });
            </script>
            <script type="text/javascript">
                $(function () {
                    $('#datetimepicker2').datetimepicker({
                        format: 'MM/DD/YYYY'
                    });

                });
            </script>

        </div>
    }
    @if (countItem > 0)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        DANH SÁCH ỨNG VIÊN ĐÃ PHỎNG VẤN
                    </div>
                    <div class="panel-body">


                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Họ tên</th>
                                        <th>Năm sinh</th>
                                        <th>Vị trí ứng tuyển</th>
                                        <th>Thời gian phỏng vấn</th>
                                        <th>Kết quả PV</th>
                                        <th>Ngày nhận việc</th>
                                        <th>Ghi chú</th>
                                        <th>Nguồn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row">
                                            <td>@item.Name</td>
                                            <td>@item.Year </td>
                                            <td>@item.PositionName</td>
                                            <td>@item.InterviewTime.Value.ToString("dd/MM/yyyy hh:mm")</td>
                                            @if (item.Interviewed != null)
                                            {
                                            <td>@Html.Raw(item.Interviewed.Value ? "Đạt" : "Không đạt")</td>}
                                            else
                                            {
                                            <td>ko đến</td>}

                                            @if (item.StartDate != null)
                                            {
                                            <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td>}
                                            else
                                            {
                                            <td></td>}
                                            <td>@item.Note1 , @item.Note2</td>
                                            <td>@item.Source</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p style="color:red;">chưa có dữ liệu tháng này.....</p>
    }
