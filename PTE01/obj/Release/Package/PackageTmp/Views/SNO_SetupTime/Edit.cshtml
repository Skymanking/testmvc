@model Model.EF.SNO_SetupTime

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";

}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(function () {
            $('.select2').select2()
        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Setup Time</h3>
    </div>
    @using (Html.BeginForm("Edit", "SNO_SetupTime", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-5">
                            <div class="form-group">
                                <label class="control-label col-md-12">Từ</label>
                                @Html.TextBoxFor(model => model.FromMachine, new { @ID = "FromMachine", @class = "form-control", @required = true, @readonly = true })
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form-group ">
                                <label class="control-label col-md-12">Đến</label>
                                @Html.TextBoxFor(model => model.ToMachine, new { @ID = "ToMachine", @class = "form-control", @required = true, @readonly = true })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Thời gian (s)</label>
                                @Html.TextBoxFor(model => model.Time, new { @ID = "Time", @type = "number", @class = "form-control", @required = true, @min = 0 })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-md-12">Ghi chú</label>
                                @Html.TextAreaFor(model => model.Note, new { @ID = "Note", @class = "form-control", @rows = 3 })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>
    }
</div>



