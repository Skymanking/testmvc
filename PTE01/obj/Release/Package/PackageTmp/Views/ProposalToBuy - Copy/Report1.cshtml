@model IEnumerable<Model.View.ReportBuy1>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    double nosuccess = 0;
    double nodanger = 0;
    double noinfo = 0;
    double notong = 0;
    DateTime homnay = DateTime.Now;
    double countItem = Model.Count();
    var countID = Model.Select(x => x.ID).Distinct().Count();
}


<div class="row">

    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Report Tiến Độ Mua Vật Tư PTE tháng @Model.FirstOrDefault().LimitedDate.ToString("MM/yyyy")
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Tổng loại vật tư <span class="badge">@countItem</span></button>

                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-primary">Tổng phiếu đã duyệt <span class="badge">@countID</span></button>

                    </div>
                </div>
                @*<a href="/ProposalToBuy/Reportbuy"><--- quay lại trọn tháng muốn xem thống kê</a>*@
                <p></p>

                @if (Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        notong = notong + 1;
                        if (item.ImportDate == null)
                        {
                            if (item.LimitedDate.Subtract(homnay).Days >= 0)
                            {
                                noinfo = noinfo + 1;
                            }
                            else
                            {
                                nodanger = nodanger + 1;
                            }
                        }
                        else
                        {
                            if (item.ImportDate.Value.Subtract(item.LimitedDate).Days > 0)
                            {
                                nodanger = nodanger + 1;
                            }
                            else
                            {
                                nosuccess = nosuccess + 1;
                            }
                        }
                    }
                    <div class="row">
                        <div class="progress">
                            <div class="progress-bar progress-bar-danger progress-bar-striped" role="progressbar" aria-valuenow="@(nodanger*100/notong)" aria-valuemin="0" aria-valuemax="100" style="width:@(nodanger*100/notong)%">
                                @((nodanger * 100 / notong).ToString("0.00"))% quá hạn
                            </div>
                            <div class="progress-bar progress-bar-success progress-bar-striped" role="progressbar" aria-valuenow="@(nosuccess * 100 /notong)" aria-valuemin="0" aria-valuemax="100" style="width: @(nosuccess * 100 /notong)%">
                                @((nosuccess * 100 / notong).ToString("0.00"))% đúng hạn
                            </div>
                            <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="@(noinfo * 100 / notong)" aria-valuemin="0" aria-valuemax="100" style="width: @(noinfo * 100 / notong)%">
                                @((noinfo * 100 / notong).ToString("0.00"))% chưa đến hạn
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Số phiếu</th>
                                    <th>STT</th>
                                    <th>Tên vật tư</th>
                                    <th>Thời hạn đáp ứng</th>
                                    <th>Ngày nhập kho</th>
                                    <th>Tình trạng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.No</td>
                                        <td>@item.MaterialName   </td>
                                        <td>@item.LimitedDate.ToString("dd/MM/yyyy")</td>
                                        @if (item.ImportDate == null)
                                        {
                                            if (item.LimitedDate.Subtract(homnay).Days >= 0)
                                            {
                                                <td>chưa nhập kho</td>
                                                <td style="background: #5bc0de; color: white;">chưa đến hạn</td>
                                            }
                                            else
                                            {
                                                <td>chưa nhập kho</td>
                                                <td style="background: #d9534f; color:white;">trễ hạn</td>
                                            }
                                        }
                                        else
                                        {
                                            if (item.ImportDate.Value.Subtract(item.LimitedDate).Days > 0)
                                            {
                                                <td>@item.ImportDate.Value.ToString("dd/MM/yyyy")</td>
                                                <td style="background: #d9534f; color: white;">trễ hạn</td>
                                            }
                                            else
                                            {
                                                <td>@item.ImportDate.Value.ToString("dd/MM/yyyy")</td>
                                                <td style="background: #5cb85c; color: white;">đúng hạn</td>
                                            }
                                        }
                                    </tr>

                                }


                            </tbody>
                        </table>

                    </div>
                }
                else
                {
                    <p style="color:red;">chưa có dữ liệu tháng này.....</p>
                }
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
