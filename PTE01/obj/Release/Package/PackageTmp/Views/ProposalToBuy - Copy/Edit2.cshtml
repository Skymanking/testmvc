                    <td>@Html.CheckBoxFor(model => model.item.PDApproval, new { @style = "height:90px; width:90px;" })</td>
                    <td>@Html.CheckBoxFor(model => model.item.BOSSApproval, new { @style = "height:90px; width:90px;" })</td>
                </tr>
            </tbody>
        </table>
        <!--------------------------fd-------End------------------------------------>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Xóa Phiếu Yêu Cầu </button>
            </div>
        </div>

