                                                <tr>
                                                    <th style="max-width:40px">Xóa </th>
                                                    <th style="min-width:100px">Mã VT</th>
                                                    <th style="min-width:300px">Tên vật tư</th>
                                                    <th style="min-width:100px">Ghi chú</th>
                                                    <th style="min-width:100px">ĐVT</th>
                                                    <th style="min-width:100px">Số lượng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @for (int e = 0; e < lenght; e++)
