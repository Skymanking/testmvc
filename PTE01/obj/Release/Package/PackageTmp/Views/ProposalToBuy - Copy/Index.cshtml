@model PagedList.IPagedList<Model.View.ProposalToBuyView1>
@using PagedList.Mvc;
@{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Theme1.cshtml";
}

<div class="row">

    <div class="col-md-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Danh Sách Phiếu Yêu Cầu Mua Vật Tư
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "ProposalToBuy", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="col-md-6">                            
                                <div class="input-group">
                                    <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit" style="padding-left:30px;padding-right:50px;"><i class="glyphicon glyphicon-search"></i> </button>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <a class="btn btn-primary" href="/ProposalToBuy/Create1">Thêm mới</a>                            
                            </div>
                        </div>
                    </div>
                   
                }

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Số phiếu</th>
                                <th>Ngày tạo</th>
                                <th>Phòng ban</th>
                                <th>Người tạo</th>
                                <th>Lý do</th>
                                <th>TBP duyệt</th>
                                <th>GĐ duyệt lần 1</th>
                                <th>Mua Hàng duyệt</th>
                                <th>GĐ duyệt lần 2</th>
                                <th>Hành động</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td><a href="/ProposalToBuy/Index?searchString=@item.ID">@item.ID</a></td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                    <td><a href="/ProposalToBuy/Index?searchString=@item.Department">@item.Department</a></td>
                                    <td><a href="/ProposalToBuy/Index?searchString=@item.FullName">@item.FullName</a></td>
                                    <td>@item.Reason</td>
                                    <td>@Html.Raw(item.HODApproval ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</td>
                                    <td>@Html.Raw(item.BOSSApproval1 ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</td>
                                    <td>@Html.Raw(item.PDApproval ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</td>
                                    <td>@Html.Raw(item.BOSSApproval ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x'></span>")</td>
                                    <td width="120px">
                                        @if(item.BOSSApproval==false)
                                        {
                                            if(item.Type=="new")
                                            { 
                                                if(item.BOSSApproval1==true)
                                                {
                                                    @Html.ActionLink("|Xem Chi Tiết|  ", "Edit1", new { ID = item.ID })
                                                }
                                                else
                                                {
                                                     @Html.ActionLink("|Xem Chi Tiết|  ", "Edit2", new { ID = item.ID })
                                                }
                                            }
                                            else { @Html.ActionLink("|Xem Chi Tiết|  ", "Edit", new { ID = item.ID })}
                                          
                                           
                                        }
                                        else
                                        {
                                            @Html.ActionLink("|Xem Lại|  ", "View", new { ID = item.ID })
                                        }
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
