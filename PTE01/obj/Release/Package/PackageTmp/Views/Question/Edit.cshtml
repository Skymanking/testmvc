@model Model.View.FullQuestion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var i = 0;
    IEnumerable<Model.EF.CategoryQuestion> CateID = ViewBag.CateID;
    List<SelectListItem> CategoryID = new List<SelectListItem>();
    foreach (var item in CateID)
    {
        CategoryID.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
        });
    }
    List<SelectListItem> RightNo = new List<SelectListItem>();
    RightNo.Add(new SelectListItem
    {
        Text = "A",
        Value = "A",
        Selected = true
    });

    RightNo.Add(new SelectListItem
         {
             Text = "B",
             Value = "B",
         });
    RightNo.Add(new SelectListItem
    {
        Text = "C",
        Value = "C",

    });
    RightNo.Add(new SelectListItem
    {
        Text = "D",
        Value = "D",
    });

    List<SelectListItem> Point = new List<SelectListItem>();
    Point.Add(new SelectListItem
    {
        Text = "5",
        Value = "5",
        Selected = true
    });
    Point.Add(new SelectListItem
    {
        Text = "10",
        Value = "10",
    });
    Point.Add(new SelectListItem
    {
        Text = "15",
        Value = "15",
    });
    Point.Add(new SelectListItem
    {
        Text = "20",
        Value = "20",
    });
    List<SelectListItem> CauA = new List<SelectListItem>();
    CauA.Add(new SelectListItem
    {
        Text = "A",
        Value = "A",
        Selected = true
    });
    List<SelectListItem> CauB = new List<SelectListItem>();
    CauB.Add(new SelectListItem
    {
        Text = "B",
        Value = "B",
        Selected = true
    });
    List<SelectListItem> CauC = new List<SelectListItem>();
    CauC.Add(new SelectListItem
    {
        Text = "C",
        Value = "C",
        Selected = true
    });
    List<SelectListItem> CauD = new List<SelectListItem>();
    CauD.Add(new SelectListItem
    {
        Text = "D",
        Value = "D",
        Selected = true
    });
}


@using (Html.BeginForm("Edit", "Question", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
    <div class="row">
        <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Tạo Mới Câu Hỏi Trắc Nghiệm</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class='col-12'>
                            <label class="control-label">Nội dung câu hỏi</label>
                            @Html.TextBoxFor(model => model.item.Name, new { @class = "form-control", @placeholder = "Nội dung câu hỏi" })
                        </div>
                        <div class='col-12'>
                            <div class="row">
                                <div class='col-4'>
                                    <label class="control-label">Danh Mục</label>
                                    @Html.DropDownListFor(model => model.item.CateID, CategoryID, new { @class = "form-control" })
                                </div>
                                <div class='col-4'>
                                    <label class="control-label">Câu Đúng</label>
                                    @Html.DropDownListFor(model => model.item.RightNo, RightNo, new { @class = "form-control" })
                                </div>
                                <div class='col-4'>
                                    <label class="control-label">Số Điểm</label>
                                    @Html.DropDownListFor(model => model.item.Point, Point, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                            <div class="col-md-12" style="display:block">
                                @Html.TextBoxFor(model => model.item.ID, new { @class = "form-control", @style = "display: none; visibility: hidden;" })
                            </div>
                            <div class="col-12" style="padding-top:20px;">
                                <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                                    <thead>
                                        <tr>
                                            <th>STT</th>
                                            <th>Câu Đáp Án</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr id="row_0" class="clonedInput">
                                            <td width="100px">@Html.DropDownListFor(model => model.detail[0].No, CauA, new { @class = "form-control" })</td>
                                            <td> @Html.TextBoxFor(model => model.detail[0].Name, new { @class = "form-control", @placeholder = "nội dung câu đáp án" })</td>
                                        </tr>

                                        <tr id="row_1">
                                            <td width="100px">@Html.DropDownListFor(model => model.detail[1].No, CauB, new { @class = "form-control" })</td>
                                            <td> @Html.TextBoxFor(model => model.detail[1].Name, new { @class = "form-control", @placeholder = "nội dung câu đáp án" })</td>
                                        </tr>
                                        <tr id="row_2">
                                            <td width="100px">@Html.DropDownListFor(model => model.detail[2].No, CauC, new { @class = "form-control" })</td>
                                            <td> @Html.TextBoxFor(model => model.detail[2].Name, new { @class = "form-control", @placeholder = "nội dung câu đáp án" })</td>
                                        </tr>
                                        <tr id="row_3">
                                            <td width="100px">@Html.DropDownListFor(model => model.detail[3].No, CauD, new { @class = "form-control" })</td>
                                            <td> @Html.TextBoxFor(model => model.detail[3].Name, new { @class = "form-control", @placeholder = "nội dung câu đáp án" })</td>
                                        </tr>

                                    </tbody>
                                </table>

                            </div>

                        </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                </div>
            </div>

        </div>
    </div>
}
