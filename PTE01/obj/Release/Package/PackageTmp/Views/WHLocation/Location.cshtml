@model List<Model.EF.WHLocation2>
@{
    ViewBag.Title = "Location";
    Layout = "~/Views/Shared/_Theme3.cshtml";

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title">Kho</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/WarehouseTransaction/Create" style="color:#000">Tạo phiếu nhập xuất</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewListTrans" style="color:#000">Danh sách phiếu nhập xuất</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewListMounth" style="color:#000">Danh sách vật tư theo tháng</a>
                        </div>
                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("Warehouse", "Warehouse", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="Warehouse">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Kho</th>
                            <th>Tên Vị trí</th>
                            <th>Xem</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="row_@item.ID">
                            <td>@item.ID</td>
                            <td>@item.NameWH</td>
                            <td>@item.Name</td>
                            <td>
                                <a href="/WHLocation/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a>
                            </td>
                            <td><a href="/WHLocation/Detail/@item.ID">Chi tiết</a></td>

                        </tr>


                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
