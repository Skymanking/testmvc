@model Model.EF.ProposalLeave

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listU = (IEnumerable<Model.View.UserView2>)ViewBag.listUser;
    string nguoitao = ViewBag.nguoitao;
    var startNote = new List<SelectListItem>();
    startNote.Add(new SelectListItem
    {
        Text = "buổi sáng",
        Value = "buổi sáng",
        Selected = true,
    });
    startNote.Add(new SelectListItem
    {
        Text = "buổi chiều",
        Value = "buổi chiều",
    });

    var endNote = new List<SelectListItem>();
    endNote.Add(new SelectListItem
    {
        Text = "buổi sáng",
        Value = "buổi sáng",
    });
    endNote.Add(new SelectListItem
    {
        Text = "buổi chiều",
        Value = "buổi chiều",
        Selected = true,
    });

    var sNgayMai = DateTime.Now.AddDays(1).ToString("MM/dd/yyyy");
}
@section jsFooter
{

<script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
<script>
    $(function () {
        $(".date1").datepicker();
        $(".date2").datepicker();
    })
</script>

    }
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $('.date1').val('@sNgayMai');
        $('.date2').val('@sNgayMai');
           
        });
</script>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông Tin Nghỉ Phép</h3>
    </div>
    @using (Html.BeginForm("Create", "ProposalLeave", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">

                <div class="col-md-3 col-sm-6 col-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Từ Buổi</label>
                        @Html.DropDownListFor(model => model.StartNote, startNote, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Ngày:</label>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model.StartTime, new { @class = "date1 form-control", @autocomplete = "off",})
                            <div class=" input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
 

                <div class="col-md-3 col-sm-6 col-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Đến Hết Buổi</label>
                        @Html.DropDownListFor(model => model.EndNote, endNote, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-6">
                    <div class="form-group">
                        <label>Ngày:</label>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model.EndTime, new { @class = "date2 form-control", @autocomplete = "off" })
                            <div class=" input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-12">Lý do nghỉ phép</label>
                        @Html.TextAreaFor(model => model.Reason, new { @class = "form-control", @rows = "4" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Lưu thông tin</button>
        </div>
    }
</div>
