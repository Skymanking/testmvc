@model PagedList.IPagedList<Model.View.PInOut1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
@section jsFooter
{
    <script src="/Scripts/AppovalPInOut.js"></script>
    <script src="/Scripts/DeletePInOut.js"></script>
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>RA VÀO CỔNG</h3>
                <div class="card-tools">

                    <a href="/PInOut/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "PInOut", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tên nv, user người tạo, bộ phận">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Họ Tên</th>
                                <th>Bộ Phận</th>
                                <th>Lý Do</th>
                                <th>Diễn giải</th>
                                <th width="120px">Thời gian</th>
                                <th width="70px">Người tạo</th>
                                <th width="60px">Xóa</th>
                                <th width="60px">Duyệt</th>
                                <th width="60px">View</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border-left: 6px solid green;">
                                    <td>
                                        @item.PerName
                                        <div class="tooltipImage" style="background: url('@item.Image2');background-size: 35px;">
                                            <span>
                                                <img src="@item.Image2" style="width: 100px;">
                                                <p>@item.PerID</p>
                                            </span>
                                        </div>
                                    </td>
                                    <td>@item.DepName </td>
                                    @if (item.Type2 == 1)
                                    {
                                    <td>Cá nhân</td>}
                                    else
                                    {
                                        if (item.Type2 == 2)
                                        {
                                        <td>Tan ca</td>}
                                        else
                                        {
                                            if (item.Type2 == 3)
                                            {
                                            <td>Việc CTY</td>}
                                            else
                                            {
                                            <td>Error</td>}
                                        }
                                    }
                                    <td>@item.Reason </td>
                                    <td> @item.TimeFrom.ToString("dd/MM/yyyy")<span style="color:red;"> @item.TimeFrom.ToString("HH:mm")-@item.TimeTo.ToString("HH:mm")</span></td>
                                    <td>
                                        <div class="tooltipImage" style="background: url('@item.Image1');background-size: 35px;">
                                            <span>
                                                <img src="@item.Image1" style="width: 100px;">
                                                <p>@item.CreateBy</p>
                                            </span>
                                        </div>
                                    </td>
                                    <td><a href="#" class="btn-delete" data-id="@item.ID"><span class='fa fa-trash fa-2x' style='color:gray'></span></a></td>
                                    <td><a href="#" class="btn-approval" data-id="@item.ID">@Html.Raw(item.Approval ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x' style='color:red'></span>")</a></td>

                                    <td><a href="/PInOut/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 20px;"></span></a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">

                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
