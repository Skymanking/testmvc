@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var temp = (List<Model.View.Report4>)ViewBag.temp;

}
@section jsFooter
        {
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script>
        $(function () {
            $("#d1").datepicker();
            $("#d2").datepicker();
            $("#end").datepicker();
            $("#StartDate").datepicker();
            $("#EndDate").datepicker();
            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('.select2').select2()
        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thống kê Đơn nghỉ việc</h3>
        <div class="card-tools">
            <div class="btn-group" style="height:40px">
                <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                    More
                </button>
                <div class="dropdown-menu float-right" role="menu">
                    <a class="dropdown-item" href="/Resignation/Index" style="color:#000">Danh sách</a>
                    <a class="dropdown-item" href="/Resignation/Report1" style="color:#000">Thống kê</a>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <label class="control-label">Từ Ngày:</label>
                <div class="bootstrap-timepicker">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" id="d1" name="d1" class="form-control" readonly="readonly" value='@if (ViewBag.d1 != ""){@ViewBag.d1}else{@DateTime.Now.AddDays(-100).ToShortDateString()}'><br>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <label class="control-label">Đến Ngày:</label>
                <div class="bootstrap-timepicker">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" id="d2" name="d2" class="form-control" readonly="readonly" value='@if (ViewBag.d2 != ""){@ViewBag.d2}else{@DateTime.Now.ToShortDateString()}'><br>
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-2 text-center">
                <label class="control-label"></label>
                <div class="form-group">
                    <a class="btn btn-primary" id="inbaocao">Tìm kiếm</a>
                </div>
            </div>
        </div>
        <script>
            $(document).ready(function () {

                $("#inbaocao").click(function () {
                    var d1 = $('#d1').val();
                    var d2 = $('#d2').val();
                    if (d1 == "" || d2 == "") {
                        alert("chưa nhập đủ thông tin");
                        $('#inbaocao').attr("href", '#');
                    }
                    else { $('#inbaocao').attr("href", '/Resignation/Report1?d1=' + d1 + '&d2=' + d2); }
                });
            });

        </script>
    </div>


</div>

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> <span id="sokq" style="color:red;font-weight:bold;"></span>Kết quả</h3>
            </div>
            <div class="card-body">
                @if (temp != null)
                {
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên Bộ Phận</th>
                                    <th>Tổng đơn nghỉ việc (theo ngày viết đơn)</th>
                                    <th style="width:150px">Số đơn không đúng Luật LĐ</th>
                                    <th style="width:150px">Số đơn không đúng QĐ CTY</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in temp)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        @if (@item.Value1 == 0)
                                        {
                                        <td>@item.Value1</td> }
                                        else
                                        {
                                        <td style="font-weight:bold; color:red;">@item.Value1</td> }
                                        @if (@item.Value2 == 0)
                                        {
                                            <td>@item.Value2</td> }
                                        else
                                        {
                                            <td style="font-weight:bold; color:red;">@item.Value2</td> }
                                        @if (@item.Value3 == 0)
                                        {
                                            <td>@item.Value3</td> }
                                        else
                                        {
                                            <td style="font-weight:bold; color:red;">@item.Value3</td> }

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
