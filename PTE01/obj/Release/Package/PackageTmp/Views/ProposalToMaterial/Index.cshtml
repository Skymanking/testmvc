@model PagedList.IPagedList<Model.View.ProposalToMaterialView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>YC cấp Vật Tư</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            Filter <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/ProposalToMaterial/Index?searchString=BOSSR" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #fdb49d;"></i>BGD đã duyệt</a>
                            <a href="/ProposalToMaterial/Index?searchString=BOSSC" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #fbf6cb;"></i>BGD chưa duyệt</a>
                            <a href="/ProposalToMaterial/Index?searchString=NONEFI" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #007bff;"></i>Chưa hoàn thành</a>
                            <a href="/ProposalToMaterial/Index?searchString=BOSSA" style="color:black;" class="dropdown-item"><i style="width:20px;height:20px;border-radius:50%; background:red;"></i>Tất cả</a>
                            <a href="/ProposalToMaterial/SearchAdvanceCost" style="color:black;" class="dropdown-item">Tìm theo chi phí</a>
                        </div>
                    </div>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "ProposalToMaterial", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <ul class="todo-list">
                    <li>
                        <a href="/ProposalToMaterial/Create">Thêm yêu cầu mới<i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>
                    </li>
                    @foreach (var item in Model)
                    {
                        <li>
                            @if (item.Status == true)
                            {
                                if (item.HODApproval == false)
                                {
                                    if (item.Type == "A")
                                    {<i class="fa fa-bomb" aria-hidden="true" style="font-size: 24px;color: #dc3545;"></i> <a href="/ProposalToMaterial/Edit3/@item.ID"><span class="text">@item.Reason</span></a>}
                                    else
                                    {
                                        if (item.Type == "E")
                                        {<i class="fa fa-bomb" aria-hidden="true" style="font-size: 24px; color: #ff8000"></i> <a href="/ProposalToMaterial/Edite3/@item.ID"><span class="text">@item.Reason</span></a>}
                                        else
                                        {
                                            <a href="/ProposalToMaterial/Edit/@item.ID"><span class="text">@item.Reason</span></a>
                                        }
                                    }
                                }
                                else
                                {
                                    if (item.Type == "A")
                                    { <i class="fa fa-bomb" aria-hidden="true" style="font-size: 24px;color: #dc3545;"></i> <a href="/ProposalToMaterial/Edit3/@item.ID"><span class="text">@item.Reason</span></a>}
                                    else
                                    {
                                        if (item.Type == "E")
                                        { <i class="fa fa-bomb" aria-hidden="true" style="font-size: 24px; color: #ff8000;"></i> <a href="/ProposalToMaterial/Edite3/@item.ID"><span class="text">@item.Reason</span></a>}
                                        else
                                        {
                                            <a href="/ProposalToMaterial/Edit4/@item.ID"><span class="text">@item.Reason</span></a>
                                        }
                                    }
                                }

                            }
                            else
                            {
                                <a href="/ProposalToMaterial/View/@item.ID"> <span class="text" style="color:red"><del>@item.Reason</del> </span>(phiếu đã bị xóa)</a>
                            }
                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                                <span class="badge bg-warning">Finished</span>
                                @Html.Raw(item.Finished ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                            </a>
                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                                <span class="badge bg-warning">BGD</span>
                                @Html.Raw(item.BOSSApproval ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                            </a>
                            <a class="btn btn-app float-right" style="min-width: 30px; height: 30px; padding: 5px 5px; border: none; margin-left: 8px; margin-right: 8px; ">
                                <span class="badge bg-warning">TBP</span>
                                @Html.Raw(item.HODApproval ? "<span class='fa fa-check-circle-o fa-2x' style='color: #0cb583;font-size: 30px;'></span>" : "<span class='fa fa-times-circle-o fa-2x' style='color: #f90d0d;font-size: 30px;'></span>")
                            </a>
                            <br />
                            <span style="float:left"> <span> <a href="/ProposalToMaterial/EditA1/@item.ID"><span style="color:black">(<i class="fa fa-money" aria-hidden="true" style="font-size: 22px;color: #28a745;"></i> Số: @item.ID)</span></a></span><span class="badge badge-secondary">@item.CreateDate.ToString("dd/MM/yyyy")</span></span>

                            <div class="tooltipImage" style="background: url('@item.Image');background-size: 35px;">
                                <span>
                                    <img src="@item.Image" style="width: 100px;">
                                    <p>@item.FullName</p>
                                </span>
                            </div>
                            <span class="badge badge-warning"><i class="fa fa-briefcase"></i> @item.Department </span>
                            <span class="badge badge-dark"><i class="fa fa-clock-o"></i>cần sd lúc @item.Deadline.ToString("dd/MM/yyyy hh:mm") </span>
                        </li>
                    }

                </ul>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/ProposalToMaterial/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
