@model Model.View.FullPTM
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var dsVTBoM = (List<Model.ERP.eBOMItemDetail>)ViewBag.dsVTBoM;
    var dsLienKet = (List<Model.ERP.eLinkBOKH>)ViewBag.dsLienKet;
    var dsQuyCach = (List<Model.View.BaseView2>)ViewBag.dsquycach;
    var dsKH = (string)ViewBag.dsKH;
    int lenght = dsVTBoM.Count;

}
@section jsFooter
{
    <script src="/Assets/theme3/plugins/datepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
    <script src="/Scripts/FindNameVT.js"></script>
    <script src="/Scripts/CancelMaterial.js"></script>
    <script>
        $(function () {
            $('.form_datetime').datetimepicker({
                format: 'mm/dd/yyyy hh:ii',
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
            });
            $('.select2').select2()

        })
    </script>
    <script>
        $(document).ready(function () {

            $('#luutt').hover(function () {
                var lydo = $("#item_Reason").val();
                var deadline = $("#item_LimitedDate").val();
                if (lydo.length < 1 || deadline.length < 1) {
                    $('#luutt').text("Hãy điền đủ lý do và deadline");
                    $('#luutt').attr("type", "button");
                    $('#luutt').attr("class", "btn btn-block btn-secondary");
                }
                else {
                    $('#luutt').text("Lưu lại");
                    $('#luutt').attr("type", "submit");
                    $('#luutt').attr("class", "btn btn-block btn-primary");
                }
            });

        });
    </script>
    <script type="text/javascript">
        $('button[type!=submit]').click(function () {
            // code to cancel changes
            return false;
        });
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thông tin Phiếu Yêu Cầu Cấp Vật Tư</h3>
    </div>
    @using (Html.BeginForm("eCreateLSX", "ProposalToMaterial", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">

                <div class="col-md-9">
                    <label class="control-label col-md-12">Lý do</label>
                    @Html.TextBoxFor(model => model.item.Reason, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label>Deadline:</label>
                    <div class="input-group date form_datetime" data-link-field="item.LimitedDate">
                        <input class="form-control" id="item_LimitedDate" name="item.LimitedDate" type="text" value="" readonly>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                    <input type="hidden" id="item_LimitedDate" name="item.LimitedDate" value="" /><br />
                </div>
                <div class="col-md-12" style="display:none">
                    <input class="form-control" id="item_LimitedHistory" name="item.LimitedHistory" type="text" value="@dsKH">
                </div>
            </div>

            <script>
                $(document).ready(function () {
                    $(window).keydown(function (event) {
                        if (event.keyCode == 13) {
                            event.preventDefault();
                            return false;
                        }
                    });
                });
            </script>

            <div class="row">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="min-width: 60px;width: 60px;">Xóa </th>
                                <th style="min-width: 400px;width:400px">Thông tin vật tư cần</th>
                                <th style="min-width: 100px;width:100px">SL theo BOM</th>
                                <th style="min-width: 100px;width:100px">Tồn kho tại xưởng</th>
                                <th style="min-width: 100px;width:100px">Quy cách đóng gói</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int e = 0; e < lenght; e++)
                            {
                                <tr id="dong_@(e)">
                                    <td> <button type="button" data-sodong="@(e)" class="xoadongR" style="color: red; width: 30px; height: 30px; border-radius: 50%;"><span class="fa fa-trash"></span></button></td>
                                    <td>
                                        <input class="form-control" id="detail_@(e)__ItemID" name="detail[@e].ItemID" readonly="true" style="width:120px;float:left;" type="text" value="@dsVTBoM[e].ItemID">
                                        <input class="form-control" id="detail_@(e)__Quantity" name="detail[@e].Quantity" style="width:170px;float:left; background:#f798c4" type="number">
                                        <input class="form-control" id="detail_@(e)__Unit" name="detail[@e].Unit" readonly="true" style="width:80px;float:left;" type="text" value="@dsVTBoM[e].Unit">
                                        <input class="form-control" id="detail_@(e)__MaterialName" name="detail[@e].MaterialName" readonly="true" type="text" value="@dsVTBoM[e].MaterialName">
                                    </td>
                                    <td> <input class="form-control" id="detail_@(e)__A1" name="detail[@e].A1" readonly="true" type="number" value="@dsVTBoM[e].Quatity.ToString()">  </td>
                                    <td> <input class="form-control" id="detail_@(e)__A2" name="detail[@e].A2" type="number" value="0"> </td>
                                    @foreach (var item in dsQuyCach)
                                    {
                                        if (item.S1 == dsVTBoM[e].ItemID)
                                        {
                                            <td> <input class="form-control" id="detail_@(e)__A3" name="detail[@e].A3" readonly="true" type="number" value="@item.D1"> </td>
                                        }
                                    }
                                    <td> @Html.TextAreaFor(model => model.detail[e].Note, new { @class = "form-control", @rows = "2" })</td>

                                </tr>
                                <script>
                                    $(document).ready(function () {
                                        var bom = $('#detail_@(e)__A1').val();
                                        var tonkho = $('#detail_@(e)__A2').val();
                                        var quycach = $('#detail_@(e)__A3').val();
                                        var temp = bom - tonkho;
                                        var gaptron = Math.ceil(temp / quycach);
                                        var slcan = 0;
                                        if (temp < 0)
                                        { slcan = 0; }
                                        else
                                        {
                                            slcan = gaptron * quycach;
                                        }

                                        $('#detail_@(e)__Quantity').val(slcan);

                                        $("#detail_@(e)__A2").change(function () {
                                            var bom = $('#detail_@(e)__A1').val();
                                            var tonkho = $('#detail_@(e)__A2').val();
                                            var quycach = $('#detail_@(e)__A3').val();
                                            var temp = bom - tonkho;
                                            var gaptron = Math.ceil(temp / quycach);
                                            var slcan = 0;
                                            if (temp < 0)
                                            { slcan = 0; }
                                            else
                                            {
                                                slcan = gaptron * quycach;
                                            }

                                            $('#detail_@(e)__Quantity').val(slcan);

                                        });
                                    });
                                </script>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <h2> DANH SÁCH BOM ĐÃ SỬ DỤNG TRONG CÁC LỆNH SX NÀY</h2>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr style="background: #28a745;">
                                <th>ID Kế hoạch</th>
                                <th>Mã Sản Phẩm</th>
                                <th>Mã BOM</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in dsLienKet)
                            {
                                <tr>
                                    <td>@item.S1</td>
                                    <td>@item.S2</td>
                                    <td>
                                       @if( @item.S0.Length>6)
                                       {
                                           <span>@item.S0</span>
                                       }
                                       else
                                       {
                                           <span>Current BOM</span>
                                       }    
                                           
                                   
                                    </td>

                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" id="luutt" class="btn btn-block btn-primary">Lưu thông tin</button>
        </div>
    }
</div>
