@model Model.View.FullPTM
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var infoCreateBy = (Model.View.UserView1)ViewBag.ngtao;
    var detail = (Model.View.FullPTM)ViewBag.detail;
    var lenght = detail.detail.Count();
    string style1 = "color: #28a745;font-weight: bold;background: #c3efcd;"; string style2 = "";
}
@section jsFooter
{
    <script src="/Scripts/CancelMaterial.js"></script>
}
<div class="card card-primary">
    @using (Html.BeginForm("Edit3", "ProposalToMaterial", FormMethod.Post))
    {
        if (detail.item.Status == true)
        { <div class="card-header" style="background: #ffc107">
            <h3 class="card-title"><i class="fa fa-info-circle" data-toggle="tooltip" title="@Model.item.History"></i>Phiếu Cấp Vật Tư - Số Phiếu: <strong>@detail.item.ID</strong></h3>
        </div>
        }
        else
        {<div class="card-header" style="background: #dc3545">
            <h3 class="card-title"><i class="fa fa-info-circle" data-toggle="tooltip" title="@Model.item.History"></i>Phiếu Cấp Vật Tư Đã Hủy - Số Phiếu: <strong>@detail.item.ID</strong></h3>
        </div>
        }

        <div class="card-body">
            <div class="row">

                <div class="col-md-12">
                    <div class="row" style="text-align: center;">
                        <div class="col-lg-4" style="display:block">
                            @Html.TextBoxFor(model => model.item.ID, new { @class = "form-control", @style = "display: none; visibility: hidden;" })
                        </div>
                        <div class="col-md-12">
                            CTY TNHH SX HIỆP PHƯỚC THÀNH QUY ĐỊNH NHẬP-XUẤT KHO và BẢO QUẢN SẢN PHẨM BM13/01
                        </div>
                        <div class="col-md-12">
                            <h2 style="font-weight: bold;"> PHIẾU ĐỀ NGHỊ CẤP VẬT TƯ</h2>
                        </div>
                        <div class="col-md-12">
                            Số phiếu: @detail.item.ID
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xs-6">
                            <p>Người Đề Nghị: <strong>@infoCreateBy.FullName</strong></p>
                        </div>
                        <div class="col-md-6 col-xs-6">
                            <p>Bộ phận: <strong>@infoCreateBy.DepartmentName</strong></p>
                        </div>

                        <div class="col-md-12">
                            <p>Lý do: @detail.item.Reason</p>
                        </div>

                        <div class='col-md-6 col-xs-6'>
                            <p>Ngày yêu cầu: @detail.item.CreateDate.ToString("dd/MM/yyyy hh:MM")</p>

                        </div>
                        <div class='col-md-6 col-xs-6'>
                            <p style="font-weight:bold;">Thời hạn đáp ứng: @detail.item.LimitedDate.ToString("dd/MM/yyyy hh:MM") </p>
                        </div>
                    </div>
                    <div class="row" style="padding-top:5px;margin:20px;">
                        <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                            <thead>
                                <tr>
                                    <th style="width:40px;">STT</th>
                                    <th style="width:100px;">Mã vật tư</th>
                                    <th>Tên vật tư</th>
                                    <th>Ghi chú</th>
                                    <th style="width:40px;">ĐVT</th>
                                    <th style="width:80px;">SL yêu cầu</th>
                                    <th style="width:90px;">SL Kho cấp</th>
                                    <th style="width:90px;">SL thực nhận</th>

                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < lenght; i++)
                                {
                                    <tr id="row">

                                        <td style="text-align: center;"><span style="display:none;">@Html.TextBoxFor(model => model.detail[i].No, new { @class = "" })</span> @detail.detail[i].No</td>
                                        <td>@detail.detail[i].ItemID</td>
                                        <td>@detail.detail[i].MaterialName</td>
                                        <td>@detail.detail[i].Note</td>

                                        <td>@detail.detail[i].Unit</td>
                                        @if (Model.detail[i].A4 == null)
                                        { Model.detail[i].A4 = detail.detail[i].Quantity; style1 = "background: #c2c7d0;"; }
                                        else
                                        {
                                            if (Model.detail[i].A4 == @detail.detail[i].Quantity)
                                            { style1 = "color: #28a745;font-weight: bold;background: #c3efcd;"; }
                                            else
                                            { style1 = "color: #dc3545;font-weight: bold;background: #c3efcd;"; }
                                        }

                                        @if (Model.detail[i].A5 == null)
                                        { Model.detail[i].A5 = Model.detail[i].A4; style2 = "background: #c2c7d0;"; }
                                        else
                                        {
                                            if (Model.detail[i].A5 == @detail.detail[i].Quantity)
                                            { style2 = "color: #28a745;font-weight: bold;background: #c3efcd;"; }
                                            else
                                            { style2 = "color: #dc3545;font-weight: bold;background: #c3efcd;"; }
                                        }
                                        <td style="font-weight: bold; text-align: center; background: #fac2c7;">@detail.detail[i].Quantity</td>
                                        <td>@Html.TextBoxFor(model => model.detail[i].A4, new { @class = "form-control", @type = "number", @style = @style1 }) </td>
                                        <td> @Html.TextBoxFor(model => model.detail[i].A5, new { @class = "form-control", @type = "number", @style = @style2 }) </td>

                                    </tr>

                                }
                            </tbody>
                        </table>

                    </div>

                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="col-md-6" style="width:33%;">TBP duyệt</th>
                                        <th class="col-md-6" style="width:33%;">BGD duyệt</th>
                                        <th class="col-md-6" style="width:33%;">Xác nhận hoàn thành</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr id="row_0">
                                        <td style="background: #f2fbe9;">@Html.CheckBoxFor(model => model.item.HODApproval, new { @style = "height:60px; width:60px;" })</td>
                                        <td style="background: #d7f5ba;">@Html.CheckBoxFor(model => model.item.BOSSApproval, new { @style = "height:60px; width:60px;" })</td>
                                        <td style="background: #d7f5ba;">@Html.CheckBoxFor(model => model.item.Finished, new { @style = "height:60px; width:60px;" })</td>
                                    </tr>
                                    <tr id="row_0">
                                        <td>
                                            @if (Model.item.HODDate != null)
                                            {<span> @Model.item.HODName duyệt @Model.item.HODDate.Value.ToString("dd/MM/yyyy")</span>}
                                        </td>
                                        <td>
                                            @if (Model.item.BOSSDate != null)
                                            {<span> @Model.item.BOSSName duyệt @Model.item.BOSSDate.Value.ToString("dd/MM/yyyy")</span>}
                                        </td>
                                        <td>
                                            @if (Model.item.FinishDate != null)
                                            {<span> @Model.item.CreateBy xác nhận @Model.item.FinishDate.Value.ToString("dd/MM/yyyy")</span>}
                                        </td>

                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="card-footer">

            <button type="submit" id="luutt" class="btn btn-primary">Lưu thông tin</button>
            <button type="button" class="btn btn-danger float-right" data-toggle="modal" data-target="#myModal">Xóa Phiếu Yêu Cầu </button>

        </div>
    }
</div>

<form id="myForm" method="post">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            Modal content
            <div class="modal-content">
                <div class="modal-header">
                    <span class="float-left"><h4 class="modal-title">Lý do xóa phiếu</h4></span>
                    <span class="float-right"><button type="button" class="close" data-dismiss="modal" style="width:20px">&times;</button></span>
                </div>
                <div class="modal-body">
                    <input class="form-control" data-val="true" id="lydo" name="lydo" placeholder="điền lý do hủy phiếu " type="text" value="">
                </div>
                <script>
                    $(document).ready(function () {
                        $("#lydo").keypress(function () {
                            var lydos = $('#lydo').val();
                            var abc = $('#huyphieu').attr("data-lydo", lydos);

                        });
                    });
                </script>

                <div class="modal-footer">
                    <a href="#" id="huyphieu" class="btn-cancel" data-id="@detail.item.ID" style="background: red;    padding: 7px;  color: white;">Hủy Phiếu</a>
                </div>
            </div>

        </div>
    </div>
</form>