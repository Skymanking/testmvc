@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var infoCreateBy = (Model.View.UserView1)ViewBag.ngtao;
    var detail = (Model.View.FullPTM)ViewBag.detail;
    var lenght = detail.detail.Count();
}
@section jsFooter
{
    <script src="/Scripts/CancelMaterial.js"></script>
}
<div class="card card-primary">

    @if (detail.item.Status == true)
    { <div class="card-header">
        <h3 class="card-title"><i class="fa fa-info-circle" data-toggle="tooltip" title="@detail.item.LimitedHistory"></i>Phiếu Cấp Vật Tư Đã Được Duyệt - Số Phiếu: <strong>@detail.item.ID</strong></h3>
    </div>
    }
    else
    {<div class="card-header" style="background: #dc3545">
        <h3 class="card-title"><i class="fa fa-info-circle" data-toggle="tooltip" title="@detail.item.LimitedHistory"></i>Phiếu Cấp Vật Tư Đã Hủy - Số Phiếu: <strong>@detail.item.ID</strong></h3>
    </div>
    }

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row" style="text-align: center;">
                    <div class="col-md-12">
                        CTY TNHH SX HIỆP PHƯỚC THÀNH QUY ĐỊNH NHẬP-XUẤT KHO và BẢO QUẢN SẢN PHẨM BM13/01
                    </div>
                    <div class="col-md-12">
                        <h2 style="font-weight: bold;"> PHIẾU ĐỀ NGHỊ CẤP VẬT TƯ</h2>
                    </div>
                    <div class="col-md-12">
                        Số phiếu: @detail.item.ID
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 col-xs-6">
                        <p>Người Đề Nghị: <strong>@infoCreateBy.FullName</strong></p>
                    </div>
                    <div class="col-md-6 col-xs-6">
                        <p>Bộ phận: <strong>@infoCreateBy.DepartmentName</strong></p>
                    </div>

                    <div class="col-md-12">
                        <p>Lý do: @detail.item.Reason</p>
                    </div>

                    <div class='col-md-6 col-xs-6'>
                        <p>Ngày yêu cầu: @detail.item.CreateDate.ToString("dd/MM/yyyy hh:MM")</p>

                    </div>
                    <div class='col-md-6 col-xs-6'>
                        <p style="font-weight:bold;">Thời hạn đáp ứng: @detail.item.LimitedDate.ToString("dd/MM/yyyy hh:MM") </p>
                    </div>
                </div>
                <div class="row" style="padding-top:5px;margin:20px;">
                    <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                        <thead>
                            <tr>
                                <th style="width:40px;">STT</th>
                                <th style="width:100px;">Mã vật tư</th>
                                <th>Tên vật tư</th>
                                <th>Ghi chú</th>
                                <th style="width:40px;">ĐVT</th>
                                <th style="width:80px;">SL yêu cầu</th>
                                <th style="width:80px;">SL thực nhận</th>

                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < lenght; i++)
                            {
                                <tr id="row">
                                    <td style="text-align: center;">@detail.detail[i].No</td>
                                    <td>@detail.detail[i].ItemID</td>
                                    <td>@detail.detail[i].MaterialName</td>
                                    <td>@detail.detail[i].Note</td>
                                   
                                    <td>@detail.detail[i].Unit</td>
                                    <td style="font-weight: bold; text-align: center;">@detail.detail[i].Quantity</td>
                                    <td> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                   
                </div>
                @*<div class="row">
                    <div class="col-md-12">
                        <p>Ý kiến của Giám Đốc: @detail.item.Confirm</p>
                    </div>
                </div>*@
                <div class="row">
                    <div class='col-md-6 col-xs-6'>
                        <p>@detail.item.HODName đã duyệt: @if (@detail.item.HODDate != null)
                        {@detail.item.HODDate.Value.ToString("dd/MM/yyyy hh:mm") }</p>

                    </div>
                    <div class='col-md-6 col-xs-6'>
                        <p>@detail.item.BOSSName đã duyệt: @if (@detail.item.BOSSDate != null)
                        {@detail.item.BOSSDate.Value.ToString("dd/MM/yyyy hh:mm") }</p>

                    </div>

                </div>

            </div>



        </div>
    </div>
    <div class="card-footer">
        @if (detail.item.Status == false)
        {
            <button type="button" style="display:none;" class="btn btn-danger float-right" data-toggle="modal" data-target="#myModal">Khôi Phục Yêu Cầu </button>
        }
    </div>
</div>

<form id="myForm" method="post">
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            Modal content
            <div class="modal-content">
                <div class="modal-header">
                    <span class="float-left"><h4 class="modal-title">Khôi phục yêu cầu đã xóa</h4></span>
                    <span class="float-right"><button type="button" class="close" data-dismiss="modal" style="width:20px">&times;</button></span>
                </div>
                <div class="modal-body">
                    <input class="form-control" data-val="true" id="lydo" name="lydo" placeholder="điền lý do khôi phục " type="text" value="">
                </div>
                <script>
                    $(document).ready(function () {
                        $("#lydo").keypress(function () {
                            var lydos = $('#lydo').val();
                            var abc = $('#huyphieu').attr("data-lydo", lydos);

                        });
                    });
                </script>

                <div class="modal-footer">
                    <a href="#" id="huyphieu" class="btn-cancel" data-id="@detail.item.ID" style="background: red;    padding: 7px;  color: white;">Khôi phục</a>

                </div>
            </div>

        </div>
    </div>
</form>
