@model List<Model.EFBIO.personnel_employee3>

@{
    ViewBag.Title = "ChiaCa";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listInterval = (List<Model.EFBIO.att_timeinterval>)ViewBag.Timeinterval;
}
@section jsFooter
{

    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="/Assets/theme3/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/theme3/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $("#start").datepicker();
            $("#end").datepicker();
            $("#StartDate").datepicker();
            $("#EndDate").datepicker();
            $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
                checkboxClass: 'icheckbox_flat-green',
                radioClass: 'iradio_flat-green'
            })
            $('.select2').select2()
            $('.time1').timepicker({
                showInputs: false,
                showMeridian: false
            })
            $('.time2').timepicker({
                showInputs: false,
                showMeridian: false
            })
            $('#baocom').DataTable({
                "paging": false,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": false,
                "autoWidth": false
            });
        })
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            var start = $('#start').val();
            var end = $('#end').val();
            var Ca = $('.select2').select();
            var emp_id = $('.abc input:checked').map(function () { return this.name; }).get();
            document.getElementById("startdate").value = $('#start').val();
            document.getElementById("enddate").value = $('#end').val();
            document.getElementById("Ca1").value = $('#Ca:selected').val();
            document.getElementById("emp_id1").value = $('.parent input:checked').map(function () { return this.name; }).get();
        });
    </script>



}


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Chia ca</h3>
            <div class="card-tools">
                <div class="btn-group" style="height:40px">
                    <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                        More
                    </button>
                    <div class="dropdown-menu float-right" role="menu">
                        @*<a class="dropdown-item" href="/PTE_baocom/Report2" style="color:#000">Danh sách đã đặt</a>
                        <a class="dropdown-item" href="/PTE_baocom/Index3" style="color:#000">Đăng ký Cơm</a>
                        <a class="dropdown-item" href="/PTE_baocom/Index2" style="color:#000">Thay đổi Cơm</a>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <label class="control-label">Từ ngày:</label>
                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" id="start" name="startdate" class="form-control" readonly="readonly" value='@if(ViewBag.start!=""){@ViewBag.start}else{@DateTime.Now.ToShortDateString()}'><br>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="control-label">Đến ngày:</label>
                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            <div class="input-group">
                                <input type="text" id="end" name="enddate" class="form-control" readonly="readonly" value='@if(ViewBag.end!=""){@ViewBag.end}else{@DateTime.Now.AddDays(7).ToShortDateString()}'><br>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="control-label">Ca</label><br>
                    <select class="form-control select2" id="Ca" name="Ca1">
                        @foreach (var item in listInterval)
                        {
                            <option value="@item.id">@item.alias</option>
                        }

                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card card-success card-outline">
                <div class="card-body">
                    @using (Html.BeginForm("ChiaCa", "personnel_employee", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="table-responsive ">
                            <table class="table table-striped table-bordered table-hover " id="baocom">
                                <thead>
                                    <tr>
                                        <th width="30px"><input type="checkbox" class="checkall"></th>
                                        <th>Mã nhân viên</th>
                                        <th>Tên nhân viên</th>
                                    </tr>
                                </thead>
                                <tbody class="parent">
                                    @if (Model == null)
                                    {
                                        <tr>Không có</tr>
                                    }
                                    else
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" id="emp_id" class="abc" name='@item.emp_id' onchange="onChange(this)">
                                                </td>
                                                <td>@item.emp_code</td>
                                                <td>@item.name</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                            <input type="hidden" id="startdate" name="startdate" value="" />
                            <input type="hidden" id="enddate" name="enddate" value="" />
                            <input type="hidden" id="Ca1" name="Ca1" value="" />
                            <input type="hidden" id="emp_id1" name="emp_id1" value="" />

                            <script>

                                function onChange(element) {
                                    $('#baocom').dataTable().fnFilter('');
                                }

                                $(document).ready(function () {

                                    $("#luulai").click(function () {
                                        var dep = $("#Ca").val();
                                        var start = $('#start').val();
                                        var end = $('#end').val();
                                        if (dep == "") {
                                            alert("chưa nhập đủ thông tin");
                                            $('#inbaocao').attr("href", '#');
                                        }
                                        else {
                                            document.getElementById("startdate").value = $('#start').val();
                                            document.getElementById("enddate").value = $('#end').val();
                                            document.getElementById("Ca1").value = $("#Ca").val();
                                            document.getElementById("emp_id1").value = $('.parent input:checked').map(function () { return this.name; }).get();
                                        }

                                    });

                                });

                            </script>
                            @*<span class="ketqua"></span>*@
                            <div class="datcom">
                                <button type="submit" class="btn btn-primary" id="luulai">Đặt cơm</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
