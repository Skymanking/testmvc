    @using (Html.BeginForm("Create", "Device_priority", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="card-secondary">
                <h3 class="card-secondary">Tìm thiết bị</h3>
            </div>
            <div class="row" id="gvCustomers">
                <div class="col-md-6">
                    <label class="control-label">Tìm tên thiết bị</label>
                    <div class="input-group">
                        <input type="text" class="form-control tenvt" id="tendv" placeholder="chỉ hiện 20 kết quả gần giống nhất">
                        <div class="input-group-append btnFindDevice" id="btnFindDevice">
