                        @Html.DropDownListFor(model => model.ID_Device, listDevice, new { @class = "form-control", @ID="abcde" })
                    </div>
                </div>
            </div>
            <br />

            <div class="card-secondary">
                <h3 class="card-secondary">Mức độ ảnh hưởng</h3>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-12">Sản xuất</label>
                        @Html.TextBoxFor(model => model.manu_affect, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-12">Chất lượng</label>
                        @Html.TextBoxFor(model => model.quality_affect, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-12">Bảo trì</label>
                        @Html.TextBoxFor(model => model.maintenance_affect, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-12">An toàn</label>
                        @Html.TextBoxFor(model => model.safe, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label col-md-12">Số năm sử dụng</label>
                        @Html.TextBoxFor(model => model.expity, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label col-md-12">Ghi chú</label>
                        @Html.TextBoxFor(model => model.note, new { @class = "form-control", style = "width: 100%; height: 150px;" })
                    </div>
                </div>
            </div>
            <script>
                $(document).ready(function () {
                    $(window).keydown(function (event) {
                        if (event.keyCode == 13) {
                            event.preventDefault();
                            return false;
                        }
                    });
                });
            </script>
        </div>
        <div class="datcom">
            <button type="submit" class="btn btn-primary" id="luulai">Lưu</button>
            <span id="fileinput" style="display:none"></span>
        </div>
    }
</div>
