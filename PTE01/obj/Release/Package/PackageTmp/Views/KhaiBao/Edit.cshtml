@model Model.EFKBYT.KhaiBao
@{
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var namsinh = new List<SelectListItem>();
    var thanhpho = new List<SelectListItem>();
    thanhpho.Add(new SelectListItem
    {
        Text = "Hồ Chí Minh",
        Value = "hcm",
        Selected = true
    });

    for (int i = 1900; i < 2010; i++)
    {
        if (i != 1990)
        {
            namsinh.Add(new SelectListItem
            {
                Text = i.ToString(),
                Value = i.ToString(),
            });
        }
        else
        {
            namsinh.Add(new SelectListItem
            {
                Text = "1990",
                Value = "1990",
                Selected = true
            });
        }
    }


}
<script>
    $(function () {

        $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
        })
        $('.select2').select2()
    })
</script>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title"> KHAI BÁO Y TẾ ONLINE</h3>
    </div>
    @using (Html.BeginForm("Edit", "KhaiBao", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 ">
                    <label>Họ và Tên</label>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                </div>
                <div class="col-md-2 col-8">
                    <label>Số điện thoại</label>
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control"})
                </div>
                <div class="col-md-2 col-4">
                    <label>Mã NV</label>
                    @Html.TextBoxFor(model => model.PerID, new { @class = "form-control"})
                </div>
                <div class="col-md-1 col-4">
                    <label>Năm sinh</label>
                    @Html.DropDownListFor(model => model.YBirth, namsinh, new { @class = "form-control" })
                </div>
                <div class="col-md-3 col-8">
                    <label>Tỉnh Thành</label>
                    @Html.DropDownListFor(model => model.CityID, null, new { @class = "form-control select2" })
                </div>
                <div class="col-md-12">
                    <label>Địa chỉ ở hiện tại</label>
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Trong 07 ngày qua, bạn có thấy những triệu chứng nào sau đây</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="row">
                                    <div class='col-md-2 col-6'>
                                        <br /> <label>@Html.CheckBoxFor(model => model.dh1, new { @class = "flat-red" }) Không triệu chứng</label>
                                    </div>
                                    <div class='col-md-2 col-6'>
                                        <br /> <label>@Html.CheckBoxFor(model => model.dh2, new { @class = "flat-red" }) Sốt</label>
                                    </div>
                                    <div class='col-md-2 col-6'>
                                        <br /> <label>@Html.CheckBoxFor(model => model.dh3, new { @class = "flat-red" }) Ho</label>
                                    </div>
                                    <div class='col-md-2 col-6'>
                                        <br /> <label>@Html.CheckBoxFor(model => model.dh4, new { @class = "flat-red" }) Khó Thở</label>
                                    </div>
                                    <div class='col-md-2 col-6'>
                                        <br /> <label>@Html.CheckBoxFor(model => model.dh5, new { @class = "flat-red" }) Đau Họng</label>
                                    </div>
                                    <div class='col-md-2 col-6'>
                                        <br /> <label>@Html.CheckBoxFor(model => model.dh6, new { @class = "flat-red" }) Mệt Mỏi</label>
                                    </div>
                                </div>
                            </td>

                        </tr>

                    </tbody>
                </table>
            </div>
            <div class="row">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Yếu tố dịch tễ </th>
                            <th style="width:80px">Có</th>
                            <th style="width:80px">Không</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1. Tiếp xúc gần ca nhiễm, ca nghi nhiễm COVID-19 trong vòng 07 ngày qua</td>
                            <td>@Html.RadioButtonFor(m => m.dt1, "true")</td>
                            <td>@Html.RadioButtonFor(m => m.dt1, "false")</td>
                        </tr>
                        <tr>
                            <td>2. Đi từ quốc gia hoặc vùng lãnh thổ khác trong vòng 07 ngày qua</td>
                            <td>@Html.RadioButtonFor(m => m.dt2, "true")</td>
                            <td>@Html.RadioButtonFor(m => m.dt2, "false")</td>
                        </tr>
                        <tr>
                            <td>3. Di chuyển đến tỉnh thành khác trong vòng 07 ngày qua</td>
                            <td>@Html.RadioButtonFor(m => m.dt3, "true")</td>
                            <td>@Html.RadioButtonFor(m => m.dt3, "false")</td>
                        </tr>
                        <tr>
                            <td>4. Di chuyển bằng các phương tiện công cộng trong vòng 07 ngày qua</td>
                            <td>@Html.RadioButtonFor(m => m.dt4, "true")</td>
                            <td>@Html.RadioButtonFor(m => m.dt4, "false")</td>
                        </tr>
                        <tr>
                            <td>5. Thường trú ở khách sạn, nhà trọ, chung cư</td>
                            <td>@Html.RadioButtonFor(m => m.dt5, "true")</td>
                            <td>@Html.RadioButtonFor(m => m.dt5, "false")</td>
                        </tr>
                        <tr>
                            <td>6. Tham gia các hoạt động hội nghị, tôn giáo tập trung từ 10 người trở lên</td>
                            <td>@Html.RadioButtonFor(m => m.dt6, "true")</td>
                            <td>@Html.RadioButtonFor(m => m.dt6, "false")</td>
                        </tr>



                    </tbody>
                </table>
            </div>
            <div class="row">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Trong 07 ngày qua, anh/chị và gia đình đã đi đâu? Bắt buộc liệt kê ra</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.TextAreaFor(model => model.Des1, new { @class = "form-control", @rows = "8" })
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="row">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Bạn có biết thông tin quan trọng nào liên quan đến dịch bệnh từ đồng nghiệp hoặc gia đình của họ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.TextAreaFor(model => model.Des2, new { @class = "form-control", @rows = "4", @placeholder = " " })
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
            </div>

        </div>
    }


</div>

