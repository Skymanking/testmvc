@model PagedList.IPagedList<Model.View.KhaiBao1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    int sumOnline = 1;
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Thông tin KBYT</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-file-excel-o"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/KhaiBao?searchString=cotrieuchung">Có Triệu Trứng</a>
                            <a class="dropdown-item" href="/KhaiBao?searchString=tiepxucgan">Tiếp xúc gần ca nghi nhiễm</a>
                            <a class="dropdown-item" href="/KhaiBao?searchString=thamgiatongiao">Tham gia hoạt động trên 10 người</a>
                        </div>
                    </div>
                   
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "KhaiBao", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style=" width: 70px;">Mã NV</th>
                                <th >Họ Tên</th>
                                <th style=" width: 150px;">Thời gian khai báo</th>
                                <th style=" width: 90px;">Điện Thoại</th>
                                <th>Dấu hiệu</th>
                                <th>Dịch tễ</th>
                                <th style=" width: 30px;">Xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                               
                                        <tr>
                                            <td>@item.PerID</td>
                                            <td>@item.Name</td>
                                            <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@item.Phone</td>
                                            <td>
                                                @if (item.dh1 == true)
{ <span style="color:green; font-weight:bold;">-Không có</span>}
                                                @if (item.dh2 == true)
                                                { <span style="color:red; font-weight:bold;">-Sốt</span>}
                                                @if (item.dh3 == true)
                                                { <span style="color:red; font-weight:bold;">-Ho</span>}
                                                @if (item.dh4 == true)
                                                { <span style="color:red; font-weight:bold;">-Khó thở</span>}
                                                @if (item.dh5 == true)
                                                { <span style="color:red; font-weight:bold;">-Đau họng</span>}
                                                @if (item.dh6 == true)
                                                { <span style="color:red; font-weight:bold;">-Mệt mỏi</span>}
                                            </td>
                                            <td>
                                                @if (item.dt1 == true)
                                                { <span style="color:red; font-weight:bold;">-Tiếp xúc gần ca nghi nhiễm</span>}
                                                @if (item.dt2 == true)
                                                { <span style="color:red; font-weight:bold;">-Đi nước ngoài</span>}
                                                @if (item.dt3 == true)
                                                { <span style ="color:red; font-weight:bold;">-Di chuyển qua tỉnh khác</span>}
                                                @if (item.dt4 == true)
                                                { <span style ="color: #f98211; font-weight: bold;">-Dùng phương tiện công cộng</span>}
                                                @if (item.dt5 == true)
                                                { <span style="color: #f98211; font-weight: bold;">-Ở nhà trọ, khách sạn, chung cư</span>}
                                                @if (item.dt6 == true)
                                                { <span style="color: red; font-weight: bold;">-Tham gia hoạt động hội nghị, tôn giáo</span>}
                                            </td>                                         
                                            

                                            <td><a href="/KhaiBao/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a></td>
                                        </tr>                                  
                            }
                        </tbody>
                    </table>

                </div>
            </div>
            <div class="card-footer clearfix">             
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>

    </div>
</div>
