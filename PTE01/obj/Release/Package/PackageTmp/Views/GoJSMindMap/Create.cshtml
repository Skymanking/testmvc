@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<script src="~/Scripts/GoJSMindMap.js"></script>
<div class="card card-primary">
    <div class="card-header">
        <h3>Mind Map</h3>
    </div>
</div>
<div class="md:flex flex-col md:flex-row md:min-h-screen w-full max-w-screen-xl mx-auto card-body">
    <label>Name</label><br />
    <input class="form-control" id="name" />
    <input id="IDMindMap" value="0" style="display:none" />
    <div id="navSide" class="flex flex-col w-full md:w-48 text-gray-700 bg-white flex-shrink-0"></div>
    <!-- * * * * * * * * * * * * * -->
    <!-- Start of GoJS sample code -->

    <script src="~/Scripts/go.js"></script>
    <div id="allSampleContent" class="p-4 w-full">
        <div id="sample">
            <div id="myDiagramDiv" style="border: solid 1px black; width:100%; height:500px;"></div>

            <textarea id="mySavedModel" style="width:100%;height:400px; display:none">
{ "class": "go.TreeModel",
  "nodeDataArray": [
{"key":0, "text":"Name", "loc":"0 0"}
 ]
}
  </textarea>
        </div>
    </div>
    <!-- * * * * * * * * * * * * * -->
    <!--  End of GoJS sample code  -->
</div>
<input id="diagramEventsMsg" style="color: red; display:none" value="0" onchange="ChangColorInput()" />
<div class="card-footer" style="text-align: center; background-color: #a8cbdb ">
    <div class="row">
        <div class="col-md-4">
            <button id="SaveButton" onclick="save()" class="btn btn-success" style="float:left">Save</button>
        </div><div class="col-md-4">
            @*<button onclick="load()" class="btn btn-success">Load</button>*@
            <a>Change Color &nbsp;&nbsp;<input type="color" class="btn btn-info" id="newcolor" onchange="changeColor()" style="background-color:transparent" /></a>

        </div>
    </div>
</div>
