@model Model.EF.GoJSMindMap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListUser = (List<Model.View.Dropdownlist2>)ViewBag.User;
    var User = new List<SelectListItem>();
    User.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn Owner",
    });
    foreach (var item in ListUser)
    {
        User.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }
}
<script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
<script src="~/Scripts/GoJSMindMap.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3>Mind Map</h3>
    </div>
</div>
<div class="md:flex flex-col md:flex-row md:min-h-screen w-full max-w-screen-xl mx-auto card-body">

    <div class="row" style="padding: 0 1.5rem 0 1.5rem">
        <div class="col-md-12">
            <label>Name</label><br />
            <input class="form-control" id="name" value="@Model.Name" style="background-color:transparent;" />
        </div>
