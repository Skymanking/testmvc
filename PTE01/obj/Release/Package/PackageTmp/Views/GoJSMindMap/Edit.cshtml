    <div class="row">
        <div class="col-md-4">
            <button id="SaveButton" onclick="save()" class="btn btn-success">Save</button>
        </div>
        <div class="col-md-4">
            <a>Change Color &nbsp;&nbsp;<input type="color" class="btn btn-info" id="newcolor" onchange="changeColor()" style="background-color:transparent" /></a>
        </div>
        <div class="col-md-4">
            @using (Html.BeginForm("Del", "GoJSMindMap", FormMethod.Post))
