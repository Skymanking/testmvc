@model PagedList.IPagedList<Model.View.DoTestQuestionView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Kết Quả Trắc Nghiệm</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px;">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/TestQuestion/Index" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #ffc107;"></i>DS Bài Trắc Nghiệm</a>
                            <a href="/DoTestQuestion/Index" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #28a745;"></i>DS Kết Quả</a>
                            <a href="/Question/Index" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #dc3545;"></i>DS Câu Hỏi</a>

                        </div>
                    </div>

                    <div style="float:left">
                        @using (Html.BeginForm("Index", "DoTestQuestion", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Người làm</th>
                                <th>Bài Trắc Nghiệm</th>
                                <th>Ngày làm</th>
                                <th>Số Điểm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                                        {
                            <tr id="row_@item.ID">
                                <td>@item.ID</td>
                                <td><a href="/DoTestQuestion/Index?searchString=@item.CreateName">@item.CreateName</a></td>
                                <td><a href="/DoTestQuestion/Index?searchString=@item.TestQuestionName">@item.TestQuestionName</a></td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.PointSum</td>

                            </tr>
                                        }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
            <div class="card-footer clearfix">
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>