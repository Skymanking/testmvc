@model Model.View.FullDoTestQuestion
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var detail = (Model.View.FullTestQuestion2)ViewBag.detail;
    string userLogin = ViewBag.userLogin;
    var lenght = detail.detail.Count();
    long IDTeQ = ViewBag.IDTeQ;
    var listIDPer = (List<Model.View.UserView2>)ViewBag.listIDPer;
    List<SelectListItem> SeIDPer = new List<SelectListItem>();
    foreach (var item in listIDPer)
    {
        SeIDPer.Add(new SelectListItem
        {
            Text = item.UserName,
            Value = item.FullName,
        });
    }
}

<div class="row">
    <div class="col-12">
        @using (Html.BeginForm("Create", "DoTestQuestion", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Làm Bài Trắc Nghiệm Số: <strong>@detail.item.ID</strong></h3>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12" style="padding-left:15px">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <h2><strong>@detail.item.Name</strong></h2>
                                </div>
                            </div>
                            @if (userLogin == "nhanvien")
                            {
                                <div class="row">
                                    <div class='col-md-6'>
                                        <label class="control-label">Mã Nhân Viên</label>
                                        @Html.ListBoxFor(model => model.item.CreateName,SeIDPer, new { @class = "form-control", @placeholder = "" })
                                    </div>

                                </div>
                            }
                            <div style="display:none;"> <input class="form-control" name="item.IDTeQ" type="text" value="@IDTeQ"></div>
                            @for (int i = 0; i < lenght; i++)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <p><strong>Câu @(i + 1) :  @detail.detail[i].item.Name</strong>(@detail.detail[i].item.Point Điểm)</p>
                                        <div style="display:none;"> <input class="form-control" name="detail[@i].IDQue" type="text" value="@detail.detail[i].item.ID"></div>
                                    </div>
                                    <div class="col-md-12">
                                        @foreach (var item in @detail.detail[i].detail)
                                        {
                                            <p> @Html.RadioButtonFor(model => model.detail[i].Answer, @item.No)  @item.No / @item.Name</p>

                                        }
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary" onclick="openNav()">Lưu thông tin</button>
            </div>

        }
    </div>
    </div>
