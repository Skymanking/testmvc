@model Model.EF.ItemPriceKH

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var listU = (IEnumerable<Model.View.Dropdownlist6>)ViewBag.listVattu;
    var dsvattu = new List<SelectListItem>();
    dsvattu.Add(new SelectListItem
    {
        Text = "Chọn Vật Tư",
        Value = "none",
        Selected = true
    });
    foreach (var item in listU)
    {
        dsvattu.Add(new SelectListItem
        {
            Text = item.ItemName+" # "+item.ItemId +"("+item.UnitId+")",
            Value = item.ItemId,
        });
    }   

}
@section jsFooter
{
    <script>
        $(function () {
            $('.select2').select2()
            $(".date").datepicker();
        })
    </script>

<script>
    $(document).ready(function () {
      
        $('.select2').on('change', function () {

            var abc = $(".select2 option:selected").text().substring(0, $(".select2 option:selected").text().indexOf('#'))
            $("#MaterialName").val(abc) ;
        });



    });
</script>




}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Mới</h3>
    </div>
    @using (Html.BeginForm("Create", "ItemPriceKH", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Vật tư<span style="font-weight:bold;color:red">*</span></label>
                        @Html.DropDownListFor(model => model.ItemID, dsvattu, new { @class = "form-control select2", @style = "width: 100%;" })
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label class="control-label col-md-12">Giá<span style="font-weight:bold;color:red">*</span></label>
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" ,@type="number"})
                    </div>
                </div>
               
                <div class="col-3">
                    <div class="form-group">
                        <label>Ngày áp dụng:</label>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model.EffectiveDate, new { @class = "date form-control", @autocomplete = "off", @value = @DateTime.Now.ToShortDateString() })
                            <div class=" input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class='col-6'>
                    <label class="control-label">Khách Hàng</label>
                    @Html.TextBoxFor(model => model.CusName, new { @class = "form-control" })

                </div>
                <div class='col-3'>
                    <label class="control-label">Số chứng từ</label>
                    @Html.TextBoxFor(model => model.IDDocument, new { @class = "form-control" })

                </div>   
                <div class='col-3' style="display:none">
                    <label class="control-label">Tên vật tư</label>
                    @Html.TextBoxFor(model => model.MaterialName, new { @class = "form-control" })

                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label class="control-label col-md-12">Ghi chú</label>
                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", @rows = "3" })
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" onclick="openNav()">Lưu thông tin</button>
        </div>
    }
</div>







