@model List<Model.EF.FullDDS>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.EF.Task> modeltask = ViewBag.task;
    var ListUser = (List<Model.View.Dropdownlist2>)ViewBag.User;
    var ListAlignment = (List<Model.EF.DDS_Alignment>)ViewBag.Alignment;
    var ListMember = (List<Model.View.Dropdownlist2>)ViewBag.Member;

    var User = new List<SelectListItem>();
    User.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn Owner",
    });
    foreach (var item in ListUser)
    {
        User.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }
    var ListFactory = (List<Model.View.Dropdownlist2>)ViewBag.Factory;
    var Factory = new List<SelectListItem>();
    foreach (var item in ListFactory)
    {
        Factory.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }
    int temp1 = 0;
}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(".date").datepicker();
        $('.select2').select2()
    </script>
    <style>
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    </style>
}
<script src="~/Scripts/DDS.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />
<style>
    #tab_1 .table td, #tab_1 .table th {
        padding: .35rem;
    }

    #tab_2 .table td, #tab_1 .table th {
        padding: .55rem;
    }
</style>
<div class="card card-success card-outline">
    <div class="card-header" style="padding:0px">
        @using (Html.BeginForm("Index", "DDSDepartment", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-8" style="text-align:center">
                    <br />
                    <h2 class="card-title" style="font-size:24px"><strong>DDS Department</strong></h2>
                    <div class="card-header d-flex p-0" style="text-align:center">
                        <ul class="nav nav-pills ml-auto p-2">
                            <li class="nav-item"><a class="nav-link active" href="#tab_1" data-toggle="tab">DDS</a></li>
                            <li class="nav-item"><a class="nav-link" href="#tab_2" data-toggle="tab">FOLLOW UP</a></li>
                            <li class="nav-item"><a class="nav-link" href="#tab_3" data-toggle="tab">Alignment</a></li>
                            <li class="nav-item"><a class="nav-link" href="#tab_4" data-toggle="tab">Member</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                </div>
                <div class="col-md-4" style="float:right">
                    <div class="row">
                        <div class="col-md-5">
                            <label class="control-label" style="color: #FF5722;">Xưởng</label><br>
                            <select id="Factory" class="form-control select2" name="Factory">
                                @foreach (var item in Factory)
                                {
                                    if (ViewBag.FactoryCho == item.Value)
                                    {
                                        <option value="@item.Value" selected>@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }

                            </select>
                        </div>
                        <div class="col-md-5">
                            <label class="control-label">Từ:</label>
                            <div class="bootstrap-timepicker">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" id="date" name="date" class="form-control date" readonly="readonly" value="@ViewBag.Date.ToString("MM/dd/yyyy")"><br>
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <label class="control-label" style="color: #FF5722;">Tìm</label><br>
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="card-body">
        @if (Model.Count() != 0)
        {
            <div class="tab-content">

                <div class="tab-pane active" id="tab_1">
                    <div class="row" style="overflow-x:auto">
                        <div class="col-md-12">
                            @try
                            {
                                using (Html.BeginForm("Index", "DDSDepartment", FormMethod.Get))
                                {

                                    <table class="table table-striped table-bordered" id="TableDDS" style="text-align:center">
                                        <thead style="text-align:center">
                                            <tr>
                                                <th style="width:70px; min-width:75px">DMS</th>
                                                <th style="width:100px">Measures</th>
                                                <th style="width: 20px">Target</th>
                                                <th colspan="@Model.FirstOrDefault().line.Count()">Line</th> @*colspan = số lượng line*@
                                                <th colspan="7" style="min-width:1000px">Detail</th>
                                            </tr>
                                            <tr>
                                                <th></th>
                                                <th></th>
                                                <th></th>
                                                @foreach (var line in Model.FirstOrDefault().line)
                                                {
                                                    <th style="width:65px; min-width:65px; max-width:65px ">@line.Name</th>
                                                }
                                                <th style="width: 80px">Line</th>
                                                <th style="width: 170px">Problem</th>
                                                <th style="width: 140px">Attach</th>
                                                <th style="width: 150px">Action</th>
                                                <th style="width: 80px; padding: unset">Owner</th>
                                                <th style="width: 80px; padding: unset">DueDate</th>
                                                <th style="width: 10px; padding: unset">Task</th>
                                            </tr>
                                        </thead>
                                        <tbody style="text-align:center;">
                                            @foreach (var dms in Model)
                                            {
                                                if (dms.measurses.Count() > 0)
                                                {
                                                    int rowspan = dms.measurses.Count() * 2;
                                                    int count = 0;
                                                    for (var i = 0; i < dms.measurses.Count(); i++)
                                                    {
                                                        <tr>
                                                            @if (count == 0)
                                                            {
                                                                <td rowspan="@rowspan"> <input value="@dms.dms.Name" readonly class="form-control" style="background-color:transparent; border:none"></td>
                                                                count++;
                                                            }
                                                            @try
                                                            {
                                                                <td style="background-color: @dms.measurses[i].Color" rowspan="2">@dms.measurses[i].Name</td>
                                                            }
                                                            catch
                                                            {
                                                            }
                                                            <td style="background-color: @dms.measurses[i].Color">target</td>
                                                            @foreach (var linetab in dms.line)
                                                            {
                                                                var model1 = dms.detail.Where(x => x.IDMeas == dms.measurses[i].ID && x.IDLine == linetab.ID);
                                                                var xxxx = model1.Count();
                                                                if (model1.Count() != 0)
                                                                {
                                                                    <td style="background-color: @dms.measurses[i].Color"><input id="target_@dms.measurses[i].ID+@linetab.ID" onchange="ChangeTarget( @dms.measurses[i].ID, @linetab.ID)" value="@model1.FirstOrDefault().Target" min="0" type="number" class="form-control" style="background-color:transparent; border:none"></td>
                                                                }
                                                                else
                                                                {
                                                                    <td style="background-color: @dms.measurses[i].Color"><input id="target_@dms.measurses[i].ID+@linetab.ID" onchange="ChangeTarget(@dms.measurses[i].ID, @linetab.ID)" value="1" min="0" type="number" class="form-control" style="background-color:transparent; border:none"></td>
                                                                }
                                                            }
                                                            <td rowspan="2" colspan="8" style="vertical-align: top; background-color: @dms.measurses[i].Color" id="gvCustomers_@dms.measurses[i].ID">

                                                                @foreach (var problem in dms.problem)
                                                                {
                                                                    temp1 += 1;
                                                                    string index1 = "_" + temp1;
                                                                    var span = modeltask.Where(x => x.LinkID == problem.ID).Count();
                                                                    int temp = 1;

                                                                    if (problem.IDMeas == dms.measurses[i].ID)
                                                                    {

                                                                        <table style='width: 100%; border: none; border-collapse: unset; border-spacing:0px; background-color:transparent' id='@problem.ID'>
                                                                            <tbody style='border: none' id='gvCustomers_@problem.ID'>
                                                                                <tr style='height: 20px; background-color:transparent; border:none' id='@problem.ID@index1'>
                                                                                    <td style='max-width: 100px' rowspan="@span" id="line_@problem.ID"><input class='form-control' style='background-color: #00bcd41f; text-align:center' readonly value="@problem.LineName" /></td>
                                                                                    <td style='max-width: 225px' rowspan="@span" id="problem_@problem.ID">
                                                                                        <div class="input-group">
                                                                                            <input class='form-control' style='background-color: #00bcd41f' id="prob_@problem.ID" value="@problem.Problem" readonly>
                                                                                            <div class="input-append">
                                                                                                <a title='Thêm mới' style='float: right' onclick="CreateNewAction(@problem.ID)"><i class='fa fa-plus-circle' style='font-size: 15px; color: red'></i></a>
                                                                                            </div>
                                                                                        </div>
                                                                                    </td>
                                                                                    <td style='width: 190px' rowspan="@span" id="attach_@problem.ID">
                                                                                        <input class='form-control' style='background-color: #00bcd41f' id="att_@problem.ID" value="@problem.Attach" readonly />
                                                                                    </td>
                                                                                    @foreach (var task in modeltask)
                                                                                    {
                                                                                        string br = "";
                                                                                        string index = "_" + temp;
                                                                                        if (task.LinkID == problem.ID)
                                                                                        {
                                                                                            if (task.Finish.Value) { br = "#8bc34a"; } else { br = ""; };
                                                                                            if (temp == 1)
                                                                                            {
                                                                                                <td style='width: 200px; background-color:@br' id='acton_@problem.ID@index'>
                                                                                                    <input class='form-control' style='background-color: #00bcd41f' value="@task.Subject" id='act_@problem.ID@index' disabled />
                                                                                                </td>
                                                                                                <td style='width: 100px ; background-color:@br'><input class='form-control' id='owner_@problem.ID@index' value="@task.Owner" disabled></td>
                                                                                                <td style='width: 110px ; background-color:@br'><input type='text' class='form-control date' readonly id='due_@problem.ID@index' value="@task.Deadline" disabled></td>
                                                                                                <td style='width: 30px ; background-color:@br'><a title='Task' style='float: left' href='/Task/Edit/@task.ID'><i class='fa fa-tasks' style=' color: #03a9f4'></i></a></td>
                                                                                                temp += 1;
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                            <tr style="background-color:@br">
                                                                                                <td style='width: 200px' id='acton_@problem.ID@index'>
                                                                                                    <input class='form-control' style='background-color: #00bcd41f' value="@task.Subject" id='act_@problem.ID@index' disabled />
                                                                                                </td>
                                                                                                <td style='width: 100px'><input class='form-control' id='owner_@problem.ID@index' value="@task.Owner" disabled></td>
                                                                                                <td style='width: 110px'><input type='text' class='form-control date' readonly id='due_@problem.ID@index' value="@task.Deadline" disabled></td>
                                                                                                <td style='width: 30px'><a title='Task' style='float: left' href='/Task/Edit/@task.ID'><i class='fa fa-tasks' style=' color: #03a9f4'></i></a></td>
                                                                                            </tr>
                                                                                            temp += 1;
                                                                                        }
                                                                                    }
                                                                                }
                                                                                </tbody>
                                                                            </table>
                                                                        }
                                                                    }
                                                            </td>
                                                        </tr>
                                                        <tr style="background-color: @dms.measurses[i].Color">
                                                            <td>actual</td>
                                                            @foreach (var linetab in dms.line)
                                                            {
                                                                var model1 = dms.detail.Where(x => x.IDMeas == dms.measurses[i].ID && x.IDLine == linetab.ID);
                                                                if (model1.Count() != 0)
                                                                {
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <input id="actual_@dms.measurses[i].ID+@linetab.ID" onchange="ChangeTarget(@dms.measurses[i].ID, @linetab.ID)" value="@model1.FirstOrDefault().Actual" type="number" min="0" class="form-control" style="background-color:transparent; border:none">
                                                                            <div class="input-append">
                                                                                <a title="Thêm mới" style="float:right" onclick="CreateDetail(@linetab.ID ,@dms.measurses[i].ID, '@linetab.Name')"><i class="fa fa-plus-circle" style="font-size: 15px; color: red"></i></a>
                                                                            </div>
                                                                        </div>
                                                                    </td>

                                                                }
                                                                else
                                                                {
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <input id="actual_@dms.measurses[i].ID+@linetab.ID" onchange="ChangeTarget(@dms.measurses[i].ID, @linetab.ID)" value="0" type="number" min="0" class="form-control" style="background-color: transparent; border: none">
                                                                            <div class="input-append">
                                                                                <a title="Thêm mới" style="float: right" onclick="CreateDetail(@linetab.ID ,@dms.measurses[i].ID, '@linetab.Name')"><i class="fa fa-plus-circle" style="font-size: 15px; color: red"></i></a>
                                                                            </div>
                                                                        </div>
                                                                    </td>

                                                                }
                                                            }
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    int rowspan = dms.measurses.Count() * 2;
                                                    <tr>
                                                        <td> <input value="@dms.dms.Name" readonly class="form-control" style="background-color:transparent; border:none"></td>
                                                        <td>
                                                            <a href="/DDSLine/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 20px; color: red"></i></a>
                                                        </td>
                                                        @foreach (var linetab in dms.line)
                                                        {
                                                            <td></td>
                                                        }
                                                        <td></td>
                                                        <td colspan="7"></td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                }
                            }
                            catch
                            {
                                <h1> Không có dữ liệu </h1>
                            }
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="tab_2">
                    <h1>Follow up</h1>
                    <table class='table table-striped table-bordered' id="followup">
                        <thead>
                            <tr>
                                <th width="100px">ID</th>
                                <th>Action</th>
                                <th>Description</th>
                                <th width="100px">Owner</th>
                                <th width="150px">Deadline</th>
                                <th width="120px">Finish</th>
                                <th width="50px">View</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in modeltask)
                            {
                                <tr>
                                    <td>@task.ID</td>
                                    <td>@task.Subject</td>
                                    <td>@task.Description</td>
                                    <td>@task.Owner</td>
                                    <td>@task.Deadline</td>
                                    @if (task.Finish.Value)
                                    {
                                        try
                                        {
                                            <td style="text-align:center; color:cornflowerblue">@task.FinishDate.Value.ToShortDateString() <i class="fa fa-check-circle"></i></td>
}
                                        catch { }
                                    }
                                    else
                                    {
                                        <td style="text-align:center; color:red"><i class="fa fa-close"></i></td>
                                    }
                                    <td><a href="Task/Edit/@task.ID"><i class="fa fa-eye"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="tab_3">
                    <h1> Alignment</h1>
                    <table class="table table-striped table-bordered" id="followup">
                        <thead>
                            <tr>
                                <th>Topic</th>
                                <th>Description</th>
                                <th>Save</th>
                            </tr>
                        </thead>
                        <tbody id="gvAlign">
                            @if (ListAlignment == null)
                            {
                                <tr>
                                    <td style="width:30%"><input id="Topic_1" class="form-control" /></td>
                                    <td><textarea rows="3" id="Description_1" class="form-control"></textarea></td>
                                    <td style="width:30px" ; id="Save_1">
                                        <a title='Save' onclick='SaveAlign(1)'><i class='fa fa-2x fa-save' style=' color: #03a9f4'></i></a><br>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                for (var i = 0; i < ListAlignment.Count(); i++)
                                {
                                    var index1 = i + 1;
                                    var index2 = i + 2;
                                    if (i == ListAlignment.Count() - 1)
                                    {
                                        <tr>
                                            <td style="width:30%"><input id="Topic_@index1" class="form-control" value="@ListAlignment[i].Topic" /></td>
                                            <td><textarea rows="3" id="Description_@index1" class="form-control">@ListAlignment[i].Description</textarea></td>
                                            <td style="width:30px" ; id="Save_@index1">
                                                <a title='Save' onclick='EditAlign(@ListAlignment[i].ID, @index1)'><i class='fa fa-2x fa-save' style=' color: #03a9f4'></i></a><br>
                                                <button title='Create' onclick='CreateNewAlign(@index2)' id='CreateAlign_@index2'><i class='fa fa-2x fa-plus-circle' style=' color: red'></i></button>
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td style="width:30%"><input id="Topic_@index1" class="form-control" value="@ListAlignment[i].Topic" /></td>
                                            <td><textarea rows="3" id="Description_@index1" class="form-control">@ListAlignment[i].Description</textarea></td>
                                            <td style="width:30px" ; id="Save_@index1">
                                                <a title='Save' onclick='EditAlign(@ListAlignment[i].ID, @index1)'><i class='fa fa-2x fa-save' style=' color: #03a9f4'></i></a><br>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane" id="tab_4">
                    <h1>Member</h1>
                    <div id="chosenewmen">
                        <label>Chọn thành viên</label>
                        <select data-placeholder="Nhân viên" multiple class="chosen-select form-control" id="newmember" style="width:99%; ">
                            @foreach (var member in ListUser)
                            {
                                <option value="@member.ID">@member.Name</option>
                            }
                        </select>
                        <button class="form-control" style="background-color: cornflowerblue" onclick="AddMember()">Thêm thành viên</button>
                    </div>
                    <label>Danh sách thành viên</label>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th style="width:30%">Mã nhân viên</th>
                                <th>Tên nhân viên</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ListMember != null)
                            {
                                foreach (var member in ListMember)
                                {
                                    <tr>
                                        <td>@member.ID</td>
                                        <td>@member.Name</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <script type="text/javascript">
                        const today = new Date();
                        var dd = String(today.getDate()).padStart(2, '0');
                        var mm = String(today.getMonth() + 1).padStart(2, '0');
                        var yyyy = today.getFullYear();
                        var today1 = mm + '/' + dd + '/' + yyyy;
                        let date = document.getElementById("date").value;
                        $(".chosen-select").chosen({
                            no_results_text: "Không tìm thấy:"
                        });
                        $('#newmember_chosen').css({ "width": "100%" });
                        if (today1 != date) {
                            document.getElementById("chosenewmen").style.display = 'none';
                        }
                    </script>
                </div>
            </div>
        }
        else
        {
            <h1>Không có dữ liệu</h1>
        }
    </div>
</div>
