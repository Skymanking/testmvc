@model List<Model.EF.DDS_Alignment>
@{
    ViewBag.Title = "Alignment";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script>
        $(".date").datepicker();
        $('.select2').select2()
    </script>
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><strong>Alignment</strong></h3>
                @using (Html.BeginForm("Alignment", "DDSDepartment", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-md-7">
                            <label>Search</label>
                            <input class="form-control" name="searchString" value="@ViewBag.searchString" />
                        </div>
                        <div class="col-md-2">
                            <label class="control-label">From</label>
                            <div class="bootstrap-timepicker">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" id="date1" name="date1" class="form-control date" readonly="readonly" value="@ViewBag.date1.ToShortDateString()"><br>
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="control-label">To</label>
                            <div class="bootstrap-timepicker">
                                <div class="form-group">
                                    <div class="input-group">
                                        <input type="text" id="date2" name="date2" class="form-control date" readonly="readonly" value="@ViewBag.date2.ToShortDateString()"><br>
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-1" style="text-align:center">
                            <label>Search</label><br />
                            <button type="submit" class="btn btn-success">Search</button>
                        </div>
                    </div>
                }
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="Warehouse">
                    <thead>
                        <tr>
                            <th>Factory</th>
                            <th>Topic</th>
                            <th>Description</th>
                            <th style="width:200px">Date</th>
                            <th style="width:50px">View</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            string temp = item.Date.Month + "%2F" + item.Date.Day + "%2F" + item.Date.Year;
                            <tr id="row_@item.ID">
                                <td>@item.Factory</td>
                                <td>@item.Topic</td>
                                <td>@item.Description</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td><a href="/DDSDepartment?Factory=@item.Factory&date=@temp"><i class="fa fa-eye" style="color:dodgerblue"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


