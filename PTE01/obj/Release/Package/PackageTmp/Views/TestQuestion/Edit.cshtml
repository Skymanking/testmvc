@model Model.View.FullTestQuestion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<SelectListItem> listVT = new List<SelectListItem>();
    listVT.Add(new SelectListItem
    {
        Text = "không có câu hỏi nào được tìm thấy",
        Value = "NULL",
        Selected = true
    });
    var lenght = Model.detail.Count();


}
@section jsFooter
{
    <script src="/Scripts/FindNameQuestion.js"></script>
}

<div class="row">
    @using (Html.BeginForm("Edit", "TestQuestion", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Cot ben trai -->
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Tạo Mới Đề Trắc Nghiệm
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-12" style="display:block">
                                @Html.TextBoxFor(model => model.item.ID, new { @class = "form-control", @style = "display: none; visibility: hidden;" })
                            </div>
                            <div class="form-group">
                                <div class='col-md-12'>
                                    <label class="control-label">Tên Đề Trắc Nghiệm</label>
                                    @Html.TextBoxFor(model => model.item.Name, new { @class = "form-control", @placeholder = "Nội dung câu hỏi" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6">
                                    <label class="control-label">Tìm tên câu hỏi</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control tenvt" id="tenvt" placeholder="chỉ hiện 20 kết quả gần giống nhất">
                                        <span class="input-group-addon btnFindName" id="btnFindName">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </span>

                                    </div>
                                </div>
                                <div class=" col-md-6">
                                    <label class="control-label">Chọn câu hỏi</label>
                                    <div class='input-group'>
                                        @Html.DropDownList("abc", listVT, new { @class = "form-control" })
                                        <span class="input-group-addon" id="btnAddVT">
                                            <span class="glyphicon glyphicon-shopping-cart"></span>
                                        </span>
                                    </div>
                                </div>

                            </div>



                            <div class="form-group" style="padding-top:20px;">
                                <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                                    <thead>
                                        <tr>
                                            <th width="50px">STT</th>
                                            <th width="60px">ID </th>
                                            <th>Tên Câu hỏi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < lenght; i++)
                                        {
                                            <tr id="row">
                                                <td>@(i+1)</td>
                                                <td> @Html.TextBoxFor(model => model.detail[i].IDQue, new { @class = "form-control" })</td>
                                                <td>  </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>
                            <script>
                                $(document).ready(function () {
                                    var count = $('#gvCustomers tr').length - 1;
                                    function addRowVT() {
                                        var html =
                                        '<tr id="row_1">' +
                                        '<td > ' + (count + 1) + '</td>' +
                                        '<td> <input class="form-control"  name="detail[' + count + '].IDQue"  type="text" value="' + $("#abc").val() + '"> </td>' +
                                       '<td> <input class="form-control" type="text"  value="' + $("#abc option:selected").text() + '"></td>' +
                                         '</tr>'
                                        count = count + 1;
                                        $(html).appendTo($("#gvCustomers"))
                                    };
                                    $("#btnAddVT").click(addRowVT);

                                });
                            </script>



                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--------------------------fd-------End------------------------------------>
        <div class="form-group">
            <div class="col-md-4">
                <input type="submit" value="Lưu Lại" class="btn btn-primary" />
            </div>
        </div>

    }
</div>



