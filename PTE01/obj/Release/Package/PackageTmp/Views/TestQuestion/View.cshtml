@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    var detail = (Model.View.FullTestQuestion2)ViewBag.full;
    var lenght = detail.detail.Count();

}

<div class="row">
    <!-- Cot ben trai -->
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Bài Trắc Nghiệm Số: <strong>@detail.item.ID</strong>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <h2><strong>@detail.item.Name</strong></h2>
                                </div>
                            </div>
                     
                            @for (int i = 0; i < lenght; i++)
                            {
                                <div class="row">
                                    <div class="col-md-12">
                                        <p><strong>Câu @(i + 1) :  @detail.detail[i].item.Name</strong>(@detail.detail[i].item.Point Điểm)</p>
                                        <div style="display:none;"> <input class="form-control" name="detail[@i].IDQue" type="text" value="@detail.detail[i].item.ID"></div>
                                    </div>
                                    <div class="col-md-12">
                                        @foreach (var item in @detail.detail[i].detail)
                                        {
                                            <p>  @item.No / @item.Name</p>

                                        }
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>
</div>



