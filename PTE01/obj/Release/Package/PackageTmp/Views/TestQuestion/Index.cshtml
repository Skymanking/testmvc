@model PagedList.IPagedList<Model.View.TestQuestionView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
@section jsFooter
{
    <script src="/Scripts/DeleteTestQuestion.js"></script>
    <script>
        $(document).ready(function () {

            $(".deletetool").click(function () {
                $('.btndelete').attr("data-id", $(this).attr("data-id"));

            });

        });
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Đề Trắc Nghiệm</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px;margin-top:-20px;">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/TestQuestion/Index" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #ffc107;"></i>DS Bài Trắc Nghiệm</a>
                            <a href="/DoTestQuestion/Index" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #28a745;"></i>DS Kết Quả</a>
                            <a href="/Question/Index" style="color:black;" class="dropdown-item"><i class="fa fa-circle fa-2x" style="color: #dc3545;"></i>DS Câu Hỏi</a>

                        </div>
                    </div>
                    <a href="/TestQuestion/Create" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "TestQuestion", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow:inherit">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="80px">Làm Bài</th>
                                <th>Tiêu Đề</th>
                                <th>Người tạo</th>                               
                                <th width="80px">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
{
    <tr style="border-left: 6px solid green;">
        <td><a href="/DoTestQuestion/Create/@item.ID"><span class='fa fa-graduation-cap' style="font-size: 20px;"></span></a></td>
        <td>@item.Name</td>
        <td>@item.CreateName</td>

        <td><a href="#" class="deletetool" id="deletetool" data-id="@item.ID" data-toggle="modal" data-target="#deletetoolModal"><span class="fa fa-trash"></span>
    </tr>
}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">             
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>

<form id="myForm" method="post">
    <div class="modal fade" id="deletetoolModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <h4 class="modal-title">Bạn có chắc muốn xóa dữ liệu này</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" id="deletetoolsumit" class="btndelete" data-id="" style="background: red;    padding: 7px;  color: white;">Đồng ý</a>
                </div>
            </div>
        </div>
    </div>
</form>

