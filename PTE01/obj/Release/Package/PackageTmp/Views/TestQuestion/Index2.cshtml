@model PagedList.IPagedList<Model.View.TestQuestionView1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Theme2.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Tài liệu nội bộ</h3>

        <div class="card-tools">

            @using (Html.BeginForm("Index2", "TestQuestion", FormMethod.Get))
            {
                <div class="input-group input-group-sm" style="width: 250px;">
                    <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="Search">

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            }

        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Tên Bài Trắc Nghiệm </th>
                    <th>Action </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td><a href="/DoTestQuestion/Create2/@item.ID">|Làm|</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>

