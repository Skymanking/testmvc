@model List<Model.EF.TrainingPlan>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";

    var listSub = (List <Model.EF.TrainingSubject>) ViewBag.listSub;
    List<SelectListItem> lsub = new List<SelectListItem>();

    foreach (var item in listSub)
    {
        lsub.Add(new SelectListItem
       {
           Text = item.Name,
           Value = item.ID.ToString(),
       });
    }

}
@section jsFooter
{

    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script>
        $(function () {
            $(".date").datepicker();

            $('.select2').select2()

        })
    </script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Kế Hoạch SX Mới</h3>
        <div class="card-tools">
            <div class="btn-group" style="height:40px">
                <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                    More
                </button>
                <div class="dropdown-menu float-right" role="menu">
                    <a class="dropdown-item" href="/TrainingPlan/Index4" style="color:#000">View Chart</a>
                    <a class="dropdown-item" href="/TrainingPlan/Index3" style="color:#000">View Detail</a>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Create", "TrainingPlan", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="card-body">
            @for (var i = 0; i < 20;i++ )
            { 
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">Môn Học</label>
                        @Html.DropDownListFor(model => model[i].IDSub, lsub, new { @class = "form-control select2", @style = "width: 100%;" })
                    </div>
                    <div class="col-md-3">
                        <label class="control-label">Giảng viên</label>
                        @Html.TextBoxFor(model => model[i].Teacher, new { @class = "form-control" })
                    </div>
                    <div class="col-md-1">
                        <label class="control-label">Số HV</label>
                        @Html.TextBoxFor(model => model[i].Quantity, new { @class = "form-control", @type = "number" })
                    </div>
                    <div class='col-md-2'>
                        <label>Bắt đầu:</label>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model[i].TimeFrom, new { @class = "date form-control", @autocomplete = "off" })
                            <div class=" input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class='col-md-2'>
                        <label>Kết thúc:</label>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(model => model[i].TimeTo, new { @class = "date form-control", @autocomplete = "off" })
                            <div class=" input-group-append">
                                <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>

                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" onclick="openNav()">Lưu thông tin</button>
        </div>

    }




</div>







