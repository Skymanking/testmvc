@model List<Model.EF.WarehouseTransaction2>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ViewListTrans";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <a href="~/Warehouse/WMS"><img src="~/Assets/theme3/dist/img/home6.png" style="width: 48px; float: left; margin: -10px 10px -10px -10px; " /></a>    <h3 class="card-title"><i class="fa fa-clipboard"></i>Phiếu xuất nhập kho</h3>

                <div class="card-tools">
                    <div class="btn-group" style="height:37px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            More
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewListTrans" style="color:#000">Danh sách phiếu nhập xuất</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewDetailTrans" style="color:#000">Bảng kê nhập xuất kho</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewAmountTrans" style="color:#000">Check tồn kho hiện tại</a>
                            <a class="dropdown-item" href="/WarehouseTransaction/ViewAmountTrans2" style="color:#000">View tồn kho hiện tại</a>
                   
                          </div>
                        <a href="/WarehouseTransaction/CreateNoQR" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>

                    </div>

                    <div style="float:left">
                        @using (Html.BeginForm("ViewListTrans", "WarehouseTransaction", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="SearchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered table-hover" id="baocom">
                    <thead>
                        <tr>
                            <th>Lý do </th>
                            <th>Loại phiếu </th>
                            <th>Kho </th>
                            <th>Người nhận </th>
                            <th>Xác nhận </th>
                            <th style="width: 100px ">Ngày  </th>
                            <th style="width: 50px ">Xem </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                        <tr id="row_@item.ID">
                            <td ><span>@item.Name</span> </td>
                            <td style="width: 100px">
                                @if (item.Type==1)
                                {<p>Nhập Nội Bộ</p>}
                                else
                                {<p>Xuất Nội Bộ</p>}
                        </td>
                        <td> @item.NameWH</td>
                            <td> @item.Receiver</td>
                            <td> @Html.Raw(@item.Confirmed ? "<span class='fa fa-check fa-2x'></span>" : "<span class='fa fa-times fa-2x' style='color:red;'></span>")</td>
                        <td>@item.LimitedDate.ToString("dd/MM/yyyy")</td>
                        <td ><a href="/WarehouseTransaction/Edit/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a></td>
                        </tr>
                        }
                    </tbody>
                </table>

            </div>
            @*<div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/ProposalToBuy/Create1"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>*@
        </div>
    </div>
</div>

