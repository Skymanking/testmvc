@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<SelectListItem> listVT = new List<SelectListItem>();
    var listLot = (IEnumerable<Model.EF.WHLot1>)ViewBag.ListLot;
    var manage = new List<SelectListItem>();
    manage.Add(new SelectListItem
    {
        Text = "Chưa chọn",
        Value = "",
    });
    foreach (var item in listLot)
    {
        manage.Add(new SelectListItem
        {
            Text = item.ID + "; Lô NCC: " + item.MaterialCode + "; HSD: " + item.MaterialName,
            Value = item.ID,
        });
    }
}
<link rel="stylesheet" href="/Assets/theme3/plugins/datatables/dataTables.bootstrap4.min.css">

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

<script src="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.jquery.min.js"></script>
<link href="https://cdn.rawgit.com/harvesthq/chosen/gh-pages/chosen.min.css" rel="stylesheet" />
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/bootstrap-datetimepicker.js"></script>
    <script src="/Assets/theme3/plugins/datepicker/js/locales/bootstrap-datetimepicker.fr.js" charset="UTF-8"></script>
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script src="/Assets/theme3/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/theme3/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <script>
        $(function () {
            $('.select2').select2()
        })
    </script>
}

<div class="card card-primary">
    <div class="card-header">
        <a href="~/Warehouse/WMS"><img src="~/Assets/theme3/dist/img/home6.png" style="width: 48px; float: left; margin: -10px 10px -10px -10px; " /></a>   <h3 class="card-title">In Tem Lô-Lot</h3>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("PrintCard", "WarehouseTransaction", FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-12">
                   
                        <label class="control-label" style="color: #FF5722;">Chọn số lô</label><br>
                        <div class='input-group'>
                            <select data-placeholder="Số lô" multiple class="chosen-select form-control" id="lot" style="width:100%">
                                @foreach (var st in manage)
                                {
                                    <option value="@st.Value">@st.Text</option>
                                }
                            </select>
                            <input type="hidden" id="ListLot" name="ListLot" />
                        </div>
                        <script type="text/javascript">
                            $("#lot").chosen({
                                disable_search_threshold: 10
                            }).change(function (event) {
                                if (event.target == this) {
                                    document.getElementById("ListLot").value = $(this).val();
                                }
                            });
                            $(".chosen-select").chosen({
                                no_results_text: "Không tìm thấy:"
                            });
                        </script>
                
                </div>
                <div class="col-md-12">
                 
                    <div class="form-group text-center" style="font-size: 24px;">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-print"></i> In Tem</button>
                    </div>
 
                </div>

                <script>
                    $(document).ready(function () {
                        $(window).keydown(function (event) {
                            if (event.keyCode == 13) {
                                event.preventDefault();
                                return false;
                            }
                        });
                    });
                </script>
            </div>
        }

    </div>
</div>




