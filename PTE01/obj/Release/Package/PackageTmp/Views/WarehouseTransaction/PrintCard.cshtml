@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var totallist = (List<Model.EF.WHLot1>)ViewBag.totallist;
}
@section jsFooter
{


    <script src="~/Scripts/qrcode.js"></script>
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/qrcode.js"></script>
<div class="row" style="background:white;">
    @foreach (var item in totallist)
    {
        <div class="card" style="width: 460px; height: 160px; border: 1px solid; margin-left: 5px; margin-bottom: 5px !important;">
            <div style="height: 160px; width: 160px; position: absolute; margin: -1px; border-right: 2px dashed;">
                @*<div style="width:120px;margin: 10px 15px 0px 20px;">
                        <img src="../../Assets/dist/css/logo1.png" style="height:65px;width:120px;">
                    </div>*@
                <div style="width:120px;margin: 10px;">
                    <div id="@item.ID"></div>
                </div>

            </div>
            <div style="height:200px;width:260px;margin-left: 180px;text-align:center;line-height: normal;">
                <div style="width:260px;padding: 10px">
                    <div>
                        @*<div style="width:120px;margin: 10px 15px 0px 20px;">*@
                        <img src="../../Assets/dist/css/logo1.png" style="height: 32px; width: 60px; margin-top: -15px;">
                        @*</div>*@
                        <span style="font-weight: bold;font-size: 30px;color: #e91e63;">TEM LÔ</span>
                    </div>
                    <table class="table-bordered">
                        <tr>
                            <td>IDLot</td>
                            <td style="font-size:24px; font-weight:bold;">@item.ID</td>
                        </tr>
                        <tr>
                            <td>Item</td>
                            <td>@item.MaterialName</td>
                        </tr>
                        <tr>
                            <td>Date</td>
                            <td>@if(item.Expricy != null){<span> item.Expricy.Value.ToString("dd/MM/yyyy")</span>}</td>
                        </tr>
                    </table>



                </div>
            </div>

        </div>
        <script type="text/javascript">
            var qrcode = new QRCode(document.getElementById("@item.ID"), { width: 135, height: 135 });
            function makeCode() {
                qrcode.makeCode('@item.ID');
            }
            makeCode();
        </script>

    }





</div>
