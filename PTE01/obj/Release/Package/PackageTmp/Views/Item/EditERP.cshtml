@model Model.EF.ItemTam

@{
    ViewBag.Title = "EditERRP";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    var ListProductCode = (List<Model.View.Dropdownlist2>)ViewBag.ProductCodeBag;
    var ListUM = (List<Model.View.Dropdownlist2>)ViewBag.UMBag;
    var ProductCode = new List<SelectListItem>();
    ProductCode.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn loại sản phẩm",
    });
    foreach (var item in ListProductCode)
    {
        ProductCode.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }
    var UM = new List<SelectListItem>();
    UM.Add(new SelectListItem
    {
        Value = "0",
        Text = "Chọn ĐVT",
    });
    foreach (var item in ListUM)
    {
        UM.Add(new SelectListItem
        {
            Text = item.ID + ": " + item.Name,
            Value = item.ID,
        });
    }
    var Type = new List<SelectListItem>();
    Type.Add(new SelectListItem
    {
        Value = "M",
        Text = "Material",
    });
    Type.Add(new SelectListItem
    {
        Value = "T",
        Text = "Tool",
    });
    Type.Add(new SelectListItem
    {
        Value = "F",
        Text = "Fixture",
    });
    Type.Add(new SelectListItem
    {
        Value = "O",
        Text = "Orther",
    });
    var Source = new List<SelectListItem>();
    Source.Add(new SelectListItem
    {
        Value = "M",
        Text = "Material",
    });
    Source.Add(new SelectListItem
    {
        Value = "P",
        Text = "Purchased",
    });

    Source.Add(new SelectListItem
    {
        Value = "T",
        Text = "Transferred",
    });
    var CodeType = new List<SelectListItem>();
    CodeType.Add(new SelectListItem
    {
        Value = "A",
        Text = "Actual",
        Selected = true
    });
    var CodeMethod = new List<SelectListItem>();
    CodeMethod.Add(new SelectListItem
    {
        Value = "A",
        Text = "Average",
        Selected = true

    });
    var ABCCode = new List<SelectListItem>();
    ABCCode.Add(new SelectListItem
    {
        Value = "C",
        Text = "C",
        Selected = true

    });
}
@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
}
<script src="~/Scripts/APIERP.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Nhà cung cấp</h3>
    </div>
    @using (Html.BeginForm("EditERP", "Item", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <h3>Thông tin</h3>
                    <div class="row" style="background: #f6fcfd; padding-bottom: 15px;">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Mã Item</label>
                                @Html.TextBoxFor(model => model.ItemCode, new { @ID = "ItemCode", @class = "form-control select2", @required = "required", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                <label class="control-label col-md-12">Tên Item<span style="font-weight:bold;color:red">*</span></label>
                                @Html.TextBoxFor(model => model.Name, new { @ID = "Name", @class = "form-control", @onfocusout = "checkItemName()", @required = "required" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">UM</label>
                                @Html.DropDownListFor(model => model.UM, UM, new { @ID = "UM", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="control-label col-md-12">Product Code</label>
                                @Html.DropDownListFor(model => model.ProductCode, ProductCode, new { @ID = "ProductCode", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Type</label>
                                @Html.DropDownListFor(model => model.TypeItem, Type, new { @ID = "TypeItem", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Source</label>
                                @Html.DropDownListFor(model => model.Source, Source, new { @ID = "Source", @class = "form-control select2" })
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label col-md-12">ABC Code</label>
                                @Html.DropDownListFor(model => model.ABCCode, ABCCode, new { @ID = "ABCCode", @class = "form-control select2", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Code Type</label>
                                @Html.DropDownListFor(model => model.CodeType, CodeType, new { @ID = "CodeType", @class = "form-control select2", @readonly = "true" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label class="control-label col-md-12">Code Method</label>
                                @Html.DropDownListFor(model => model.CodeMethod, CodeMethod, new { @ID = "CodeMethod", @class = "form-control select2", @readonly = "true" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="col-md-4">
                <input type="submit" value="Tạo mới" class="btn btn-primary" onclick="return CheckCreateItem()" />
            </div>
        </div>
    }
</div>
