@model Model.View.FullRFQ
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    Model.View.FullRFQ2 full = ViewBag.full;
    var uutien = new List<SelectListItem>();
    uutien.Add(new SelectListItem
    {
        Text = "Low",
        Value = "1",
        Selected = true
    });
    uutien.Add(new SelectListItem
    {
        Text = "Medium",
        Value = "2",
    });
    uutien.Add(new SelectListItem
    {
        Text = "High",
        Value = "3",
    });
    var trangthai = new List<SelectListItem>();
    trangthai.Add(new SelectListItem
    {
        Text = "Working",
        Value = "1",
        Selected = true
    });
    trangthai.Add(new SelectListItem
    {
        Text = "Paused",
        Value = "2",
    });
    trangthai.Add(new SelectListItem
    {
        Text = "Done",
        Value = "3",
    });
    trangthai.Add(new SelectListItem
    {
        Text = "Won",
        Value = "4",
    });
    trangthai.Add(new SelectListItem
    {
        Text = "Canceled",
        Value = "0",
    });
    var listU = (IEnumerable<Model.View.UserView2>)ViewBag.listUser;
    var nguoinhan = new List<SelectListItem>();

    foreach (var item in listU)
    {
        if (full.item.CreateBy == item.UserName)
        {
            nguoinhan.Add(new SelectListItem
            {
                Text = item.FullName,
                Value = item.UserName,
                Selected = true
            });
        }
        else
        {
            nguoinhan.Add(new SelectListItem
            {
                Text = item.FullName,
                Value = item.UserName,
            });
        }
    }
    var listC = (IEnumerable<Model.View.Dropdownlist1>)ViewBag.lisCus;
    var khachhang = new List<SelectListItem>();
    foreach (var item in listC)
    {
        if (full.item.IDCus == item.ID)
        {
            khachhang.Add(new SelectListItem
            {
                Text = item.Name,
                Value = item.ID.ToString(),
                Selected = true
            });
        }
        else
        {
            khachhang.Add(new SelectListItem
            {
                Text = item.Name,
                Value = item.ID.ToString(),
            });
        }
    }

}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
<script>
    $(function () {
        $(".date").datepicker();
        $('.select2').select2()
        $('input[type="checkbox"].flat-green, input[type="radio"].flat-green').iCheck({
            checkboxClass: 'icheckbox_flat-green',
            radioClass: 'iradio_flat-green'
        })
        $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
        })

    })
</script>


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Request a Quotation</h3>
    </div>
    @using (Html.BeginForm("Edit2", "CRMQuotation", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <span style="display:none"> @Html.TextBoxFor(model => model.item.ID, new { @class = "form-control" })</span>
                    <label class="control-label col-md-12">Product Name</label>
                    @Html.TextBoxFor(model => model.item.Name, new { @class = "form-control" })
                </div>
                <div class='col-md-2'>
                    <label class="control-label">Status</label>
                    @Html.DropDownListFor(model => model.item.Status, trangthai, new { @class = "form-control", })
                </div>
                <div class='col-md-4'>
                    <label class="control-label">Company</label>
                    @Html.DropDownListFor(model => model.item.IDCus, khachhang, new { @class = "form-control select2", @style = "width: 100%;" })
                </div>
                <div class='col-md-4'>
                    <label class="control-label">PIC</label>
                    @Html.DropDownListFor(model => model.item.IDPIC, nguoinhan, new { @class = "form-control select2", @style = "width: 100%;" })
                </div>

                <div class='col-md-2'>
                    <label>Deadline:</label>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(model => model.item.Deadline, new { @class = "date form-control", @autocomplete = "off" })
                        <div class=" input-group-append">
                            <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                        </div>
                    </div>
                </div>

                <div class='col-md-2'>
                    <label class="control-label">Priority</label>
                    @Html.DropDownListFor(model => model.item.Priority, uutien, new { @class = "form-control", })
                </div>
                <div class="col-md-12">
                    <label class="control-label col-md-12">Ghi chú</label>
                    @Html.TextAreaFor(model => model.item.Idea, new { @class = "form-control", @rows = "4" })
                </div>
            </div>

            <div class="rows">
                <div class="form-group" style="padding-top:20px;">
                    <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                        <thead>
                            <tr>

                                <th>Operation</th>
                                <th style="width: 100px;">Quantity</th>
                                <th style="width: 160px;">Promised Day</th>
                                <th>Detail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < full.detail.Count; i++)
                            {
                            <tr>

                                <td>
                                    <span style="display:none"> @Html.TextBoxFor(model => model.detail[i].ID, new { @class = "form-control" })</span>
                                    <span style="font-size:20px; font-weight:bold;color:red;">@full.detail[i].OperName</span>
                                </td>
                                <td>@full.detail[i].Quantity</td>
                                <td>
                                    <div class="bootstrap-timepicker">
                                        <div class="form-group" style="margin-bottom: 0;">
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.detail[i].Deadline, new { @class = "date form-control" })<br>
                                                @*<input type="text" id="end[@i]" name="detail[@i].Deadline" class="date form-control"><br>*@
                                                <div class="input-group-append">
                                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <ul class="todo-list">
                                        @foreach (var item2 in full.task)
                                        {
                                            if (item2.LinkID == @full.detail[i].ID)
                                            {
                                                @MyHelper.ViewTaskinTask(item2, null)
                                            }
                                        }
                                    </ul>
                                </td>
                            </tr>
                                <script>
                                $(document).ready(function () {
                                    $("#Quantity_@i").val("0");
                                    $("#Process_@i").change(function () {
                                        if (this.checked) {
                                            $("#Quantity_@i").val("1");
                                        }
                                        else { $("#Quantity_@i").val("0"); }
                                    });
                                    $("#Quantity_@i").change(function () {
                                        if ($("#Quantity_@i").val() > 0) { $("#Process_@i").prop("checked", true); }
                                        else { { $("#Process_@i").prop("checked", false); } }
                                    });
                                });

                                </script>

                            }

                        </tbody>
                    </table>
                </div>

            </div>


        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
                </div>

            </div>
        </div>

    }
</div>

