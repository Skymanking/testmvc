@model PagedList.IPagedList<Model.View.CRMQuotation1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";

}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>Request for Quotation</h3>
                <div class="card-tools">
                    <div class="btn-group" style="height:37px;margin-top:-20px;">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-filter"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a href="/CRMQuotation/Index?searchString=fCanceled" style="color:black;" class="dropdown-item">Canceled</a>
                            <a href="/CRMQuotation/Index?searchString=fWorking" style="color:black;" class="dropdown-item">Working</a>
                            <a href="/CRMQuotation/Index?searchString=fPaused" style="color:black;" class="dropdown-item">Paused</a>
                            <a href="/CRMQuotation/Index?searchString=fDone" style="color:black;" class="dropdown-item">Done</a>
                            <a href="/CRMQuotation/Index?searchString=fWon" style="color:black;" class="dropdown-item">Won</a>
                            <a href="/CRMQuotation/Index" style="color:black;" class="dropdown-item">All Status</a>

                        </div>
                    </div>
                    <a href="/CRMQuotation/Create2" data-toggle="tooltip" title="Thêm mới "><i class="fa fa-plus-circle" style="font-size: 40px; color: red"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "CRMQuotation", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 200px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow:inherit">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th width="70px">Task</th>
                                <th width="100px">Priority</th>
                                <th width="100px">Status</th>
                                <th width="70px">PIC</th>
                                <th width="100px">Dateline</th>
                                <th width="100px">Mold</th>
                                <th width="60px">View</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="border-left: 6px solid green;">
                                    <td><a href="/CRMQuotation/Edit/@item.ID" style="color:black;">@item.ID</a></td>
                                    <td>
                                        <a href="/CRMQuotation/Edit/@item.ID" style="color:black;">
                                            YCBG-@item.CreateDate.Year-@item.CreateDate.Month-@item.ID-@item.CusName-@item.Name
                                        </a>
                                    </td>
                                    <td><span style="font-weight:bold; color:green;"> @item.Count1 </span>/@item.Count2 </td>
                                    @if (item.Priority == 1)
                                    {
                                        <td style="background: #eee;"><span style="font-weight: bold; color: #007bff; "> Low</span></td>
                                    }
                                    @if (item.Priority == 2)
                                    {
                                        <td style="background: #eee;"><span style="font-weight: bold; color: #28a745; "> Medium </span></td>
                                    }
                                    @if (item.Priority == 3)
                                    {
                                        <td style="background: #eee;"><span style="font-weight: bold; color: #dc3545; "> High</span></td>
                                    }

                                    @switch (item.Status)
                                    {
                                        case 0:
                                            <td style="background: #c2c7d0; font-size: 18px; color: #ffffff; ">Canceled</td>
                                            break;
                                        case 1:
                                            if (item.Deadline <= DateTime.Now)
                                            {
                                                <td style="background: #dc3545; font-size: 18px; color: #ffffff; ">Working</td>
                                            }
                                            else
                                            {
                                                <td>Working</td>
                                            }

                                            break;
                                        case 2:
                                            <td style="background: #c2c7d0; font-size: 18px; color: #ffffff; ">Paused</td>
                                            break;
                                        case 3:
                                            <td style="background: #37c959; font-size: 18px; color: #ffffff; ">Done</td>
                                            break;
                                        case 4:
                                            <td style="background: #37c959; font-size: 18px; color: #ffffff; "><i class="fa fa-usd" style="color: #ffc107; font-size: 24px;"></i>Won</td>
                                            break;
                                    }


                                    <td>
                                        <div class="tooltipImage" style="background: url('@item.ImageOwner');background-size: 35px;">
                                            <span>
                                                <img src="@item.ImageOwner" style="width: 100px;" />
                                                <p>@item.PIC</p>
                                            </span>
                                        </div>
                                    </td>
                                    <td> @item.Deadline.ToString("MM/dd/yyyy")</td>
                                    @if (item.Foper1 == true)
                                    {
                                        <td style="background: #37c959; font-size: 16px; color: #ffffff; ">
                                            @if (item.Doper1 != null)
                                            {<span> @item.Doper1.Value.ToString("MM/dd/yyyy")</span>}
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            @if (item.Doper1 != null)
                                            {<span> @item.Doper1.Value.ToString("MM/dd/yyyy")</span>}
                                        </td>
                                    }
                                    <td><a href="/CRMQuotation/Edit2/@item.ID"><span class='fa fa-eye' style="font-size: 20px;"></span></a></td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer clearfix">

                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>
    </div>
</div>
