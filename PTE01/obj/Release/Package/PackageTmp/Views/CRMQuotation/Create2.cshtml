@model Model.View.FullRFQ
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.EF.RFOperation> listoper = ViewBag.listoper;
    string creater = ViewBag.creater;
    var uutien = new List<SelectListItem>();
    uutien.Add(new SelectListItem
    {
        Text = "Low",
        Value = "1",
        Selected = true
    });
    uutien.Add(new SelectListItem
    {
        Text = "Medium",
        Value = "2",
    });
    uutien.Add(new SelectListItem
    {
        Text = "High",
        Value = "3",
    });
    string tempid = "";

    //List<SelectListItem> nguoinhan = ViewBag.listOwner;

    var listU = (IEnumerable<Model.View.UserView2>)ViewBag.listUser;
    var nguoinhan = new List<SelectListItem>();
    nguoinhan.Add(new SelectListItem
    {
        Text = creater,
        Value = creater,
        Selected = true
    });
    foreach (var item in listU)
    {
        nguoinhan.Add(new SelectListItem
        {
            Text = item.FullName,
            Value = item.UserName,
        });
    }
    var listC = (IEnumerable<Model.View.Dropdownlist1>)ViewBag.lisCus;
    var khachhang = new List<SelectListItem>();
    foreach (var item in listC)
    {
        khachhang.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID.ToString(),
        });
    }

}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />

<script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
<script>
    $(function () {
        $(".date").datepicker();
        $('.select2').select2()
    })
</script>


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Request a Quotation</h3>
    </div>
    @using (Html.BeginForm("Create2", "CRMQuotation", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <label class="control-label col-md-12">Product Name</label>
                    @Html.TextBoxFor(model => model.item.Name, new { @class = "form-control" })
                </div>
                <div class='col-md-4'>
                    <label class="control-label">Company</label>
                    @Html.DropDownListFor(model => model.item.IDCus, khachhang, new { @class = "form-control select2", @style = "width: 100%;" })
                </div>
                <div class='col-md-4'>
                    <label class="control-label">PIC</label>
                    @Html.DropDownListFor(model => model.item.IDPIC, nguoinhan, new { @class = "form-control select2", @style = "width: 100%;" })
                </div>
                <div class='col-md-2'>
                    <label>Deadline:</label>
                    <div class="bootstrap-timepicker">
                        <div class="form-group" style="margin-bottom: 0;">
                            <div class="input-group">
                                <input type="text" id="item.Deadline" name="item.Deadline" class="date form-control" value='@DateTime.Now.AddDays(7).ToShortDateString()'><br>
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class='col-md-2'>
                    <label class="control-label">Priority</label>
                    @Html.DropDownListFor(model => model.item.Priority, uutien, new { @class = "form-control", })
                </div>

                <div class="col-md-12">
                    <label class="control-label col-md-12">Note</label>
                    @Html.TextAreaFor(model => model.item.Idea, new { @class = "form-control", @rows = "3" })
                </div>
            </div>
            <div class="rows">
                <div class="form-group" style="padding-top:20px;">
                    <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                        <thead>
                            <tr>
                                <th style="width: 60px;">Checked</th>
                                <th>Operation</th>
                                <th style="width: 100px;">Quantity</th>
                                <th style="width: 160px;">Owner</th>
                                <th style="width: 160px;">Deadline</th>
                                <th>Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < listoper.Count; i++)
                            {
                                <tr>
                                    @{tempid = "detail_" + i + "__Owner"; }
                                    <td> <input id="Process_@i" name="Process_@i" style="width:30px; height:30px" type="checkbox" value="true"></td>
                                    <td>
                                        <span style="font-size:20px; font-weight:bold;color:red;">@listoper[i].Name</span>
                                        <span style="display:none;">
                                            <input class="form-control" name="detail[@i].IDOpe" type="text" value="@listoper[i].ID">
                                            <input class="form-control" name="detail[@i].OperName" type="text" value="@listoper[i].Name">
                                        </span>
                                    </td>
                                    <td>
                                        @*@Html.TextBoxFor(model => model.detail[i].Quantity, new { @class = "form-control", @type = "number", @style = "background:#f798c4" })*@
                                        <input class="form-control" id="Quantity_@i" name="detail[@i].Quantity" type="number" value="@listoper[i].ID">
                                    </td>
                                    <td>
                                        <select class="form-control" name="detail[@i].Owner">
                                            <option selected="selected" value="@listoper[i].Owner">@listoper[i].Owner</option>
                                            <option value="@listoper[i].Owner2">@listoper[i].Owner2</option>
                                        </select>
                                    </td>
                                    <td>
                                        <div class="bootstrap-timepicker">
                                            <div class="form-group" style="margin-bottom: 0;">
                                                <div class="input-group">
                                                    <input type="text" id="end[@i]" name="detail[@i].Deadline" class="date form-control" value='@DateTime.Now.AddDays(7).ToShortDateString()'><br>
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td> @Html.TextBoxFor(model => model.detail[i].Note, new { @class = "form-control" })</td>
                                </tr>
                                <script>
                                $(document).ready(function () {
                                    $("#Quantity_@i").val("0");
                                    $("#Process_@i").change(function () {
                                        if (this.checked) {
                                            $("#Quantity_@i").val("1");
                                        }
                                        else { $("#Quantity_@i").val("0"); }
                                    });
                                    $("#Quantity_@i").change(function () {
                                        if ($("#Quantity_@i").val() > 0) { $("#Process_@i").prop("checked", true); }
                                        else { { $("#Process_@i").prop("checked", false); } }
                                    });
                                });

                                </script>

                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="nutsave btn btn-primary" onclick="openNav()">Lưu thông tin</button>
                </div>

            </div>
        </div>

    }
</div>

