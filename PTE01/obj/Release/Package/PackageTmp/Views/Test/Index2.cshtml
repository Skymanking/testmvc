@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}
<style>
    .card1 {
        width: 90%;
        background: white;
        transition: 1s ease-in-out;
        border-radius: 5%;
        display: flex;
        flex-direction: column;
        margin: 0 5% 5% 5%;
        padding: 0 0 10px 0;
        border-style: double;
    }

        .card1 span {
            font-weight: bold;
            color: black;
            text-align: center;
            font-size: 1em;
        }

        .card1 .info {
            font-weight: 400;
            color: black;
            text-align: center;
            font-size: 0.72em;
            margin: 1em;
        }

        .card1 .img {
            width: 4.8em;
            height: 4.8em;
            background: white;
            border-radius: 15px;
            margin: 5px;
            float: left;
        }

        .card1 a {
            color: black;
            transition: .4s ease-in-out;
        }

            .card1 a:hover {
                color: red;
            }
</style>
<div class="row">
    <div class="col-md-2">
        <a class="btn btn-primary btn-block mb-3" style="color:white">Notes</a>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Menu</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item active">
                        <a href="#" class="nav-link">
                            <i class="fa fa-inbox"></i> All Notes
                            <span class="badge bg-primary float-right">12</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-envelope-o"></i> Favourites
                            <span class="badge bg-primary float-right">1</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-trash-o"></i> Trash
                            <span class="badge bg-primary float-right">12</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tags</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-widget="collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-circle-o text-danger"></i>
                            Personal
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-circle-o text-warning"></i> Work
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-circle-o text-primary"></i>
                            Social
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fa fa-circle-o text-primary"></i>
                            Important
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-10">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Notes</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-append">
                            <div class="btn btn-primary">
                                <i class="fa fa-search"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    @for (var i = 1; i < 20; i++)
                    {
                        <div class="col-md-4 col-lg-3 col-sm-6" id="@i">
                            <div class="card1">
                                <div class="row" style="justify-items:center">
                                    <div class="col-md-3" style="text-align:center;margin:2px">
                                        <img src="~/Assets/theme3/dist/img/logo.png" style="width:3.8rem; height:3.8rem" />
                                    </div>
                                    <div class="col-md-8" style="text-align:center">
                                        <label>Name</label><br />
                                        <label>@DateTime.Today.ToShortDateString()</label>
                                    </div>
                                </div>
                                <span>About Me</span>
                                <p class="info">I’m Walter, a multidisciplinary designer who focuses on telling my clients’ stories visually, through enjoyable and meaningful experiences. I specialize in responsive websites and functional user interfaces.</p>
                                <div class="row">
                                    <div style="width:10%"></div>
                                    <div style="width:10%"><a style="float:left"><i class="fa fa-bars"></i></a></div>
                                    <div style="width:50%"></div>
                                    <div style="width:10%"><a style="float:right"><i class="fa fa-trash"></i></a></div>
                                    <div style="width:10%">
                                        <a style="float: right"><i class="fa fa-star-o"></i></a>
                                    </div>
                                    <div style="width:10%"></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

