@{
    ViewBag.Title = "Phieu";
    Layout = "~/Views/Shared/_Theme3.cshtml";
}

@section jsFooter
{
    <script src="/Assets/plugin/ckfinder/ckfinder.js"></script>
    <script src="/Assets/theme3/plugins/timepicker/bootstrap-timepicker.min.js"></script>
    <script>
        $(function () {
            $('.select2').select2()
            $(".date").datepicker();
        })
    </script>

}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="~/Assets/js/jquery-ui.css" rel="stylesheet" />
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Tạo Phiếu yêu cầu gia công hàng mẫu</h3>
    </div>
    @using (Html.BeginForm("Create", "Jig", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <div class="row" style="background-color: #E4F9EF">
                <div class="col-md-12" style="text-align: center; font-size: 25px; background-color: #795548">A</div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Công đoạn</label>
                        <div class="input-group mb-3">
                            <select class="form-control">
                                <option>Ép</option>
                                <option>Ép => Xi</option>
                                <option>Ép => Xi => Sơn</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã ERP</label>
                        <div class="input-group mb-3">
                            <select class="form-control">
                                <option>ERP1</option>
                                <option>ERP2</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-12">Khách hàng</label>
                        <input type="text" class="form-control" id="ID" name="ID" placeholder="Khách hàng" />
                    </div>
                </div>
                <script>
                    $('#btnSelectFile').on('click', function (e) {
                        e.preventDefault();
                        var finder = new CKFinder();
                        finder.selectActionFunction = function (url) {
                            $('#File1').val(url);
                            $('#btnViewFile').attr("href", $('#File1').val());
                        };
                        finder.popup();
                    })
                </script>

            </div>
            <div class="row" style="background-color: #D3F7E6">
                <div class="col-md-12" style="text-align: center; font-size: 25px; background-color: #795548">B</div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số lượng mẫu (LVPT: ít nhất 30pcs, HVPT: ít nhất 50pcs)</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Số lượng mẫu" />
                        </div>
                    </div>
                </div>
                <div class="row col-md-12">
                    <div class="col-md-12" style="font-size:15px">Chi tiết</div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Bộ phận - Mẫu</label>
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Bộ phận" />
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Mẫu" />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Bộ phận - Mẫu</label>
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Bộ phận" />
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Mẫu" />
                        </div>
                    </div><div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Bộ phận - Mẫu</label>
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Bộ phận" />
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Mẫu" />
                        </div>
                    </div><div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Bộ phận - Mẫu</label>
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Bộ phận" />
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Mẫu" />
                        </div>
                    </div>
                </div>

                <script>
                    $('#btnSelectFile').on('click', function (e) {
                        e.preventDefault();
                        var finder = new CKFinder();
                        finder.selectActionFunction = function (url) {
                            $('#File1').val(url);
                            $('#btnViewFile').attr("href", $('#File1').val());
                        };
                        finder.popup();
                    })
                </script>

            </div>
            <div class="row" style="background-color: #AAFCD5">
                <div class="col-md-12" style="text-align: center; font-size: 25px; background-color: #795548">C</div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Yêu cầu bản vẽ 3D</label>
                        <div class="input-group mb-3">
                            <select class="form-control">
                                <option>Có</option>
                                <option>Không</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Độ chính xác</label>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="Ga" name="Ga" placeholder="Độ chính xác" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="row" style="background-color: #67F9B3">
                <div class="col-md-12" style="text-align: center; font-size: 25px; background-color: #795548">D</div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Thay đổi 4M</label>
                        <div class="row">
                            <div class="input-group col-md-2">
                            </div>
                            <div class="input-group col-md-2">
                                <label> <input type="checkbox" />Máy móc</label>
                            </div>
                            <div class="input-group col-md-2">
                                <label> <input type="checkbox" />Phương pháp</label>
                            </div>
                            <div class="input-group col-md-2">
                                <label> <input type="checkbox" />Con người</label>
                            </div>
                            <div class="input-group col-md-2">
                                <label> <input type="checkbox" />Nguyên vật liệu</label>
                            </div>
                            <div class="input-group col-md-2">
                                <label> <input type="checkbox" />Dụng cụ đo</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="background-color: #36F99B">
                <div class="col-md-12" style="text-align: center; font-size: 25px; background-color: #795548">E</div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>1. Nguồn gốc</label>
                        <div class="row">
                            <div class="input-group col-md-4">
                                <label> <input type="checkbox" />Phôi PTE</label>
                            </div>
                            <div class="input-group col-md-4">
