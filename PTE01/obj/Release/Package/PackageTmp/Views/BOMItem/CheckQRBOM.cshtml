<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Thông tin BOM</h3>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    @using (Html.BeginForm("Edit", "BOMItem", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-12">
                            <div class="row">

                                <div style="display:none">  @Html.TextBoxFor(model => model.item.ID, new { @class = "form-control", @readonly = "true" })</div>
                                <div class='col-md-6 col-12' data-toggle="tooltip" title="Người chỉnh sửa: @Model.item.ModifyBy - vào lúc: @Model.item.ModifyDate.ToString("dd/MM/yyyy")">
                                    <label class="control-label">Mã Sản Phẩm</label>
                                    @Html.TextBoxFor(model => model.item.IDItem, new { @class = "form-control", @readonly = "true" })
                                </div>

                                <div class='col-md-6 col-12'>
                                    <label class="control-label">Chọn Máy Sản Xuất</label>
                                    @Html.DropDownListFor(model => model.item.IDMachine, listCenter, new { @class = "form-control" })
                                </div>
                                <label class="control-label">Danh sách Item</label>
                                <div class="col-md-12">
                                    <table class="table table-striped table-bordered table-hover" id="gvCustomers">
                                        <thead>
                                            <tr>
                                                <th>Thông tin VT</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.detail)
                                            {
                                                i = i + 1;
                                                <tr id="dong_@(i)">
                                                    <td width="170px" data-toggle="tooltip" id="fileinput@(i)">
                                                        <div class="row">
                                                            <div class="col-md-8 col-8">
                                                                <input id="item@(i)" value="@item.ItemID" type="text" class="form-control materialcode" style="background-color:aliceblue" readonly />
                                                            </div>
                                                                <div class="row col-md-4 col-4" @*style="padding-left:10px;"*@>
                                                                    <input id="tenvt@(i)" type="text" size=16 class="qrcode-text form-control change" style="background: transparent; border:none">
                                                                    <label class=qrcode-text-btn>
                                                                        <input type=file accept=" image />*" capture=environment onchange="openQRCamera(this);" tabindex=-1 class="form-control">

                                                                    </label>
                                                                </div>
                                                            <div class="col-md-12 col-12">
                                                                <input class="form-control" value="@item.MaterialName" readonly />
                                                            </div>
                                                        </div>
                                                    </td>


                                                </tr>
                                                <script>
                                                    setInterval(function () {
                                                        var item@(i) = $("input[id=item@(i)]").val();
                                                        var temp@(i) = item@(i);
                                                        var val@(i) = $("input[id=tenvt@(i)]").val();
                                                        if (temp@(i) === val@(i)) {
                                                            var qrcode@(i) = $("input[id=tenvt@(i)]").val();
                                                            if (item@(i) == qrcode@(i)) {
                                                                $("#fileinput@(i)").find("span").remove();
                                                                $("#fileinput@(i)").val("");
                                                                $("#tenvt@(i)").val("");
                                                                $("#item@(i)").css("background-color", "#007bff");
                                                            }

                                                        }
                                                        else {
                                                            if (val@(i) != '') {
                                                                $("#fileinput@(i)").find("span").remove();

                                                                $("#fileinput@(i)").val("");
                                                                $("#tenvt@(i)").val("");
                                                                $("#item@(i)").css("background-color", "#dc3545");
                                                            }
                                                        }
                                                    }, 100);
                                                </script>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <script>
                                    $(document).ready(function () {
                                        $(window).keydown(function (event) {
                                            if (event.keyCode == 13) {
                                                event.preventDefault();
                                                return false;
                                            }
                                        });
                                    });
                                </script>



                            </div>
                        </div>
                        <!--------------------------fd-------End------------------------------------>
                        if (permissionEdited == true)
                        {

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                                <a href="/BOMItem/Copy/@Model.item.ID" class="btn btn-danger float-right">Copy BOM</a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/qr_packed.js"></script>

<script>
    function openQRCamera(node) {
        var reader = new FileReader();
        reader.onload = function () {
            node.value = "";
            qrcode.callback = function (res) {
                if (res instanceof Error) {
                    alert("Không tìm thấy QR Code. Hãy thử lại và canh chỉnh camera nhìn rõ nét QR Code cần quét.");
                } else {
                    node.parentNode.previousElementSibling.value = res;
                }
            };
            qrcode.decode(reader.result);
        };
        reader.readAsDataURL(node.files[0]);
    }
</script>