@model PagedList.IPagedList<Model.View.Personal1>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    int sumOnline = ViewBag.sumOnline;
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i>@sumOnline Nhân Viên</h3>

                <div class="card-tools">

                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-file-excel-o"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/Personal/BirthDay?month=@DateTime.Now.Month">DS Sinh Nhật Tháng</a>
                            <a class="dropdown-item" href="/Personal/HumanResource?month=@DateTime.Now.Month&year=@DateTime.Now.Year">Tăng Giảm Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/Report1">Biến Động Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/ReportLeave/?year=@DateTime.Now.Year&month=@DateTime.Now.AddMonths(-1).Month">Thống kê nhân sự nghỉ việc</a>
                            <a class="dropdown-item" href="/Personal/AcademicLevel">Trình Độ Học Vấn</a>
                            <a class="dropdown-item" href="/Personal/GroupID2">Thống Kê Phân Nhóm</a>
                            <a class="dropdown-item" href="/Personal/GroupID">Thống Kê Bộ Phận</a>
                            <a class="dropdown-item" href="/Personal/ReportCompetence">Thống Kê Năng Lực</a>
                            <a class="dropdown-item" href="/Personal/ExportInputData" target="_blank">InputData</a>
                            <a class="dropdown-item" href="/Personal/ReportToolUseToBe">Công Cụ Dụng Cụ</a>
                        </div>
                    </div>
                    <a class="btn btn-warning float-right" href="/Personal/Create"><i class="fa fa-plus" style="font-size:24px;"></i></a>
                    <div style="float:left">
                        @using (Html.BeginForm("Index", "Personal", FormMethod.Get))
                        {
                            <div class="input-group " style="width: 300px;">
                                <input type="text" value="@ViewBag.SearchString" name="searchString" class="form-control float-right" placeholder="tìm kiếm">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã NV</th>
                                <th>Tên Nhân Viên</th>
                                <th>Phòng Ban</th>
                                <th>Ngày vào</th>
                                <th>Vị Trí</th>
                                <th>YC Tuyển</th>
                                <th>Xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.Status == true)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.GroupName</td>
                                        @if (item.StartDate == null)
                                        {
                                            <td>chưa cập nhật</td>}
                                        else
                                        {
                                            <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td> }
                                        <td>@item.Position</td>
                                        <td>@item.IDRecuiment</td>
                                        <td>
                                            <a href="/Personal/Edit2/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr style="background: #F44336;">
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.GroupName</td>
                                        @if (item.StartDate == null)
                                        {
                                            <td>chưa cập nhật</td>}
                                        else
                                        {
                                            <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td> }
                                        <td>@item.Position</td>
                                        <td>@item.IDRecuiment</td>
                                        <td>
                                            <a href="/Personal/Edit2/@item.ID"><span class='fa fa-eye' style="font-size: 22px;"></span></a>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                   
                </div>
            </div>
            <div class="card-footer clearfix">
                <a class="btn btn-sm btn-info float-left" href="/Personal/Create"><i class="fa fa-plus"></i> Thêm mới</a>
                <div class="dataTables_paginate paging_simple_numbers float-right" id="example2_paginate">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
            <!-- /.panel-body -->
        </div>

    </div>
</div>


