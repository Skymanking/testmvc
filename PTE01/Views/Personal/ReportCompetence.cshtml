@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<Model.View.CompetenceView1> reportCom = ViewBag.reportCom;
    //List<Model.View.Personal3> ds99 = ViewBag.ds99;
    //int sumOnline = ViewBag.sumOnline;
    int temp=0;
}

<p></p>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            Thống kê năng lực trên tổng số nhân viên còn làm
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <a class="btn btn-primary" href="/Competence/Index">Quản lý danh sách tên kỹ năng</a>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tên Kỹ Năng</th>
                                    <th>Tổng số nhân viên phải đào tạo</th>
                                    <th>Tổng số nhân viên đã đào tạo</th>
                                    <th>Tổng số nhân viên cần đào tạo</th>
                                    <th>Danh sách cần đào tạo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportCom)
                                {
                                   
                                    <tr id="row_@item.ID">
                                        <td>@item.CompetenceName</td>
                                        <td>@item.Level1</td>    
                                        @{temp = item.Level1 - item.Level2;}
                                        <td >@item.Level2</td>
                                        <td> @temp</td>
                                        

                                        @if(item.Level1!= 0)
                                        {<td>
                                            @Html.ActionLink("|Xem Chi Tiết|", "DSCompetence", new { ID = item.ID })
                                        </td>
                                        }
                                        else
                                        {
                                            <td> không cần</td>
                                        }

                                    </tr>
                                }


                            </tbody>
                        </table>
            
            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<p></p>