@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.View.Report3> listReport = ViewBag.listReport;
    long value3t = 0; long value2t = 0;
}
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
    google.charts.load('current', { 'packages': ['bar'] });
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['Tháng/Năm', 'Số nhân viên mới', 'Số nhân viên nghỉ '],
           @foreach (var item in listReport)
          {
                <text>
           ['@item.Name', @item.Value2, @item.Value3],
            </text>
        }
        ]);

        var options = {
            chart: {
                title: 'Thống Kê Biến Động Nhân Sự',
                subtitle: 'Tình hình biến động nhân viên 12 tháng gần nhất',
            }
        };

        var chart = new google.charts.Bar(document.getElementById('columnchart_material'));

        chart.draw(data, google.charts.Bar.convertOptions(options));
    }
</script>

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Thống Kê Biến Động Nhân Sự </h3>

                <div class="card-tools">

                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-file-excel-o"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/Personal/BirthDay?month=@DateTime.Now.Month">DS Sinh Nhật Tháng</a>
                            <a class="dropdown-item" href="/Personal/HumanResource?month=@DateTime.Now.Month&year=@DateTime.Now.Year">Tăng Giảm Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/Report1">Biến Động Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/ReportLeave/?year=@DateTime.Now.Year&month=@DateTime.Now.AddMonths(-1).Month">Thống kê nhân sự nghỉ việc</a>
                            <a class="dropdown-item" href="/Personal/AcademicLevel">Trình Độ Học Vấn</a>
                            <a class="dropdown-item" href="/Personal/GroupID2">Thống Kê Phân Nhóm</a>
                            <a class="dropdown-item" href="/Personal/GroupID">Thống Kê Bộ Phận</a>
                            <a class="dropdown-item" href="/Personal/ReportCompetence">Thống Kê Năng Lực</a>
                            <a class="dropdown-item" href="/Personal/ExportInputData" target="_blank">InputData</a>
                            <a class="dropdown-item" href="/Personal/ReportToolUseToBe">Công Cụ Dụng Cụ</a>
                        </div>
                    </div>
               
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div id="columnchart_material" style="height:500px"></div>
                    </div>
                    <div class="col-md-3">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Tháng</th>
                                        <th>Số nhân viên mới</th>
                                        <th>Số nhân viên nghỉ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in listReport)
                                    {
                                        <tr id="">
                                            <td>@item.Name</td>
                                            <td>@item.Value2</td>
                                            <td>@item.Value3</td>
                                        </tr>
                                        value2t = value2t + @item.Value2;
                                        value3t = value3t + @item.Value3;

                                    }
                                    <tr id="">
                                        <td>Tổng</td>
                                        <td>@value2t</td>
                                        <td>@value3t</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
