@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.View.Report1> reportAcademic = ViewBag.reportAcademic;
    List<Model.View.Personal3> ds99 = ViewBag.ds99;
    int sumOnline = ViewBag.sumOnline;

}

<div class="row">
    <div class="col-md-12">
        <div class="card card-success card-outline">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-clipboard"></i> Thống Kê Trình Độ Học Vấn </h3>

                <div class="card-tools">

                    <div class="btn-group" style="height:40px">
                        <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-file-excel-o"></i>
                        </button>
                        <div class="dropdown-menu float-right" role="menu">
                            <a class="dropdown-item" href="/Personal/BirthDay?month=@DateTime.Now.Month">DS Sinh Nhật Tháng</a>
                            <a class="dropdown-item" href="/Personal/HumanResource?month=@DateTime.Now.Month&year=@DateTime.Now.Year">Tăng Giảm Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/Report1">Biến Động Nhân Sự</a>
                            <a class="dropdown-item" href="/Personal/ReportLeave/?year=@DateTime.Now.Year&month=@DateTime.Now.AddMonths(-1).Month">Thống kê nhân sự nghỉ việc</a>
                            <a class="dropdown-item" href="/Personal/AcademicLevel">Trình Độ Học Vấn</a>
                            <a class="dropdown-item" href="/Personal/GroupID2">Thống Kê Phân Nhóm</a>
                            <a class="dropdown-item" href="/Personal/GroupID">Thống Kê Bộ Phận</a>
                            <a class="dropdown-item" href="/Personal/ReportCompetence">Thống Kê Năng Lực</a>
                            <a class="dropdown-item" href="/Personal/ExportInputData" target="_blank">InputData</a>
                            <a class="dropdown-item" href="/Personal/ReportToolUseToBe">Công Cụ Dụng Cụ</a>
                        </div>
                    </div>

                </div>
            </div>

            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                google.charts.load('current', { 'packages': ['corechart'] });
                google.charts.setOnLoadCallback(drawChart);

                function drawChart() {

                    var data = google.visualization.arrayToDataTable([
                      ['Task', 'Hours per Day'],
                      @foreach(var item in reportAcademic)
          {
               <text>
                           [' @item.Name.Replace("â", "a").Replace("á", "a").Replace("à", "a").Replace("ô", "o").Replace("ó", "o").Replace("ò", "o").Replace("í", "i").Replace("ì", "i").Replace("ê", "e").Replace("é", "e").Replace("è", "e")', @item.Value],
                            </text>
          }
                    ]);

                    var options = {
                        title: 'Thống Kê Trình Độ Học Vấn'
                    };

                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));

                    chart.draw(data, options);
                }
            </script>
            <div class="row">
                <h1> TỔNG NHÂN VIÊN HIỆN TẠI LÀ @sumOnline</h1>
                <div class="col-md-9">
                    <div id="piechart" style=" height: 500px;"></div>
                </div>
                <div class="col-md-3">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Trình độ</th>
                                    <th>Số lượng</th>
                                    <th>Tỉ lệ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportAcademic)
                                {
                                    <tr id="">
                                        <td>@item.Name</td>
                                        <td>@item.Value</td>
                                        <td>@(String.Format("{0:0.00}", Convert.ToDouble(item.Value) * 100 / sumOnline)) %</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <center><h4>DANH SÁCH NHÂN VIÊN CHƯA CẬP NHẬT THÔNG TIN TRÌNH ĐỘ HỌC VẤN</h4></center>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Mã NV</th>
                            <th>Họ Tên</th>
                            <th>Bộ phận </th>
                            <th>Chức Vụ</th>
                            <th>Ngày Vào làm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ds99)
                        {
                            <tr id="row_@item.ID">
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td>@item.GroupName</td>
                                <td>@item.Position</td>
                                @if (item.StartDate == null)
                                {
                                    <td>chưa có</td>
                                }
                                else
                                {
                                    <td>@item.StartDate.Value.ToString("dd/MM/yyyy")</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
