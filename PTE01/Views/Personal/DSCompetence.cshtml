@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Theme1.cshtml";
    List<Model.View.Personal1> reportCom = ViewBag.reportCom;
    string nameCom = ViewBag.nameCom ;
    //List<Model.View.Personal3> ds99 = ViewBag.ds99;
    //int sumOnline = ViewBag.sumOnline;
    int temp = 0;
}

<p></p>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            Danh sách nhân viên chưa được đào tạo - @nameCom
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Mã NV</th>
                            <th>Tên Nhân Viên</th>
                            <th>Phòng Ban</th>
                            <th>Vị Trí</th>
                            <th>Trạng Thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in reportCom)
                        {
                            if (item.Status == true)
                            {
                                <tr>
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.GroupName</td>
                                    <td>@item.Position</td>
                                    <td>đang làm</td>

                                    <td>@Html.ActionLink("|Xem Chi Tiết|", "Edit", new { ID = item.ID })</td>
                                </tr>
                            }
                            else
                            {
                                <tr style="background: #F44336;">
                                    <td>@item.ID</td>
                                    <td>@item.Name</td>
                                    <td>@item.GroupName</td>
                                    <td>@item.Position</td>
                                    <td>đã nghỉ</td>

                                    <td>@Html.ActionLink("|Xem Chi Tiết|", "Edit", new { ID = item.ID })</td>
                                </tr>
                            }
                        }


                    </tbody>
                </table>
               
            </div>





        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
<p></p>