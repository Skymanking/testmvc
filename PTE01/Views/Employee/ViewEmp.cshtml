@model Model.EF.Employee

@{
    ViewBag.Title = "ViewEmp";
    Layout = "~/Views/Shared/_Theme3.cshtml";
    List<Model.EF.Department> ListDepartment = ViewBag.ListDepartment;
    List<SelectListItem> ListDepartment1 = new List<SelectListItem>();
    foreach (var item in ListDepartment)
    {
        ListDepartment1.Add(new SelectListItem
        {
            Text = item.Name,
            Value = item.ID,
        });
    }
}
<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Employee @Model.Name</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-1">
                        <div class="form-group">
                            <label class="control-label col-md-12">Code</label>
                            @Html.TextBoxFor(model => model.ID, new { @class = "form-control", @required = "true", @readonly = "true" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-12">Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "true", @readonly = "true" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="control-label">BirthDay</label>
                        <div class="bootstrap-timepicker">
                            <div class="form-group">
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.BirthDate, new { @ID = "start", @class = "form-control", @required = "true", @readonly = "true" })

                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Department</label>
                            @Html.DropDownListFor(model => model.Department, ListDepartment1, new { @class = "form-control select2", @readonly = "true" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-12">Address</label>
                            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @readonly = "true" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label col-md-12">Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @readonly = "true" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>
                                Phone
                            </label>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @type = "tel", @required = "true", @placeholder = "012-3456-789", @pattern = "[0-9]{3}[0-9]{4}[0-9]{3}", @readonly = "true" })
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


